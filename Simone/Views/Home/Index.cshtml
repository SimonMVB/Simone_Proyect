@{
    ViewData["Title"] = "Inicio";
}

<!-- Banner Principal Mejorado -->
<div class="container-fluid px-0">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active position-relative">
                <img src="~/images/Home/vestidos_home.jpg" class="d-block w-100 banner-img" alt="Vestidos Elegantes">
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                    <h1 class="display-4 fw-bold text-white text-shadow mb-3 animate__animated animate__fadeInDown">
                        Descubre Nuestra Colección de Vestidos
                    </h1>
                    <a href="/Categorias/Vestidos" class="btn btn-lg btn-light shadow animate__animated animate__fadeInUp">
