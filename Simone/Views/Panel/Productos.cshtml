        ["chocolate"] = "#5D2D0D",
        ["terracota"] = "#E2725B",
        ["ladrillo"] = "#B22222",
        ["rojo"] = "#FF0000",
        ["granate"] = "#800020",
        ["vino"] = "#722F37",
        ["coral"] = "#FF7F50",
        ["salmon"] = "#FA8072",
        ["naranja"] = "#FFA500",
        ["mostaza"] = "#FFDB58",
        ["amarillo"] = "#FFFF00",
