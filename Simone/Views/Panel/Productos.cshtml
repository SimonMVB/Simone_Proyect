@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const lowThreshold = @lowStockThreshold;

            const qs  = s => document.querySelector(s);
            const qsa = s => Array.from(document.querySelectorAll(s));

            const searchInput   = qs('#searchInput');
            const clearSearch   = qs('#clearSearch');
            const categoryF     = qs('#categoryFilter');
            const stockF        = qs('#stockFilter');
            const variantF      = qs('#variantFilter');
            const statusPills   = qsa('.pill-btn[data-status]');
            const rowsPerPageEl = qs('#rowsPerPage');
            const resetBtn      = qs('#resetFilters');
            const exportBtn     = qs('#exportCsv');
            const tbody         = qs('#productTbody');
            const paginationEl  = qs('#pagination');

            const norm = s => {
                s = (s || '').toString();
                try { return s.normalize('NFD').replace(/\p{Diacritic}/gu, '').toLowerCase(); }
                catch { return s.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase(); }
            };

            const state = {
                search: '', category: '', stock: '', variant: '', status: 'all',
                sort: { by: 'name', dir: 'asc' }, page: 1,
                rowsPerPage: parseInt(localStorage.getItem('rowsPerPage') || '10', 10)
            };

            // Restaurar filtros
            (function restore() {
                const saved = localStorage.getItem('prodFilters');
                if (saved) { try { Object.assign(state, JSON.parse(saved)); } catch { } }
                searchInput.value   = state.search || '';
                categoryF.value     = state.category || '';
                stockF.value        = state.stock || '';
                variantF.value      = state.variant || '';
                rowsPerPageEl.value = String(state.rowsPerPage);
                statusPills.forEach(p => p.classList.toggle('active', p.dataset.status === state.status));
            })();

            function persist() {
                localStorage.setItem('prodFilters', JSON.stringify({
                    search: state.search, category: state.category, stock: state.stock, variant: state.variant,
                    status: state.status, sort: state.sort, page: state.page
                }));
                localStorage.setItem('rowsPerPage', String(state.rowsPerPage));
            }

            const debounce = (fn, ms = 250) => { let t; return (...a) => { clearTimeout(t); t = setTimeout(() => fn(...a), ms); }; };
            const getRows = () => qsa('.product-row');

            function applyFiltersAndSort() {
                const term = norm(state.search);
                const rows = getRows();

                rows.forEach(row => {
                    const name = norm(row.dataset.name || '');
                    const brand = norm(row.dataset.brand || '');
                    const category = norm(row.dataset.category || '');
                    const stock = parseInt(row.dataset.stock || '0', 10);
                    const hasVariants = row.dataset.hasVariants === 'true';
                    const status = row.dataset.status;

                    let show = true;
                    if (term && !(name.includes(term) || brand.includes(term) || category.includes(term))) show = false;
                    if (state.category && category !== norm(state.category)) show = false;
                    if (state.stock === 'high' && stock <= lowThreshold) show = false;
                    if (state.stock === 'low' && (stock > lowThreshold || stock === 0)) show = false;
                    if (state.stock === 'out' && stock > 0) show = false;
                    if (state.variant === 'with-variants' && !hasVariants) show = false;
                    if (state.variant === 'without-variants' && hasVariants) show = false;
                    if (state.status !== 'all' && status !== state.status) show = false;

                    row.style.display = show ? '' : 'none';
                });

                const visible = rows.filter(r => r.style.display !== 'none');
                const { by, dir } = state.sort;

                visible.sort((a, b) => {
                    const mult = dir === 'asc' ? 1 : -1;
                    if (by === 'name')  return mult * ((a.dataset.name || '').localeCompare(b.dataset.name || ''));
                    if (by === 'stock') return mult * (parseInt(a.dataset.stock) - parseInt(b.dataset.stock));
                    if (by === 'price') {
                        const aMin = parseFloat(a.dataset.priceMin || a.dataset.price || '0') || 0;
                        const bMin = parseFloat(b.dataset.priceMin || b.dataset.price || '0') || 0;
                        return mult * (aMin - bMin);
                    }
                    return 0;
                });
                visible.forEach(v => tbody.appendChild(v));

                renderPagination();
                updateStatistics();
                persist();
            }

            function renderPagination() {
                const visible = getRows().filter(r => r.style.display !== 'none');
                const total = visible.length;
                const per = state.rowsPerPage;
                const pages = Math.max(1, Math.ceil(total / per));
                state.page = Math.min(state.page, pages);

                visible.forEach(r => r.classList.add('hidden-by-page'));
                const start = (state.page - 1) * per;
                const end = start + per;
                visible.slice(start, end).forEach(r => r.classList.remove('hidden-by-page'));

                paginationEl.innerHTML = '';
                const addBtn = (lbl, page, dis = false, act = false) => {
                    const btn = document.createElement('button');
                    btn.className = 'page-btn' + (act ? ' active' : '');
                    btn.textContent = lbl;
                    btn.disabled = dis;
                    btn.addEventListener('click', () => { state.page = page; applyFiltersAndSort(); });
                    paginationEl.appendChild(btn);
                };
                addBtn('«', 1, state.page === 1);
                addBtn('‹', Math.max(1, state.page - 1), state.page === 1);
                const windowSize = 5, half = Math.floor(windowSize / 2);
                let startPage = Math.max(1, state.page - half);
                let endPage = Math.min(pages, startPage + windowSize - 1);
                startPage = Math.max(1, endPage - windowSize + 1);
                for (let p = startPage; p <= endPage; p++) addBtn(String(p), p, false, p === state.page);
                addBtn('›', Math.min(pages, state.page + 1), state.page === pages);
                addBtn('»', pages, state.page === pages);
            }

            function updateStatistics() {
                const all = getRows().filter(r => r.style.display !== 'none');
                qs('#totalProducts').textContent    = all.length;
                qs('#inStockProducts').textContent  = all.filter(r => r.dataset.status === 'in-stock').length;
                qs('#lowStockProducts').textContent = all.filter(r => r.dataset.status === 'low-stock').length;
                qs('#outOfStockProducts').textContent = all.filter(r => r.dataset.status === 'out-of-stock').length;
                qs('#variantProducts').textContent  = all.filter(r => r.dataset.hasVariants === 'true').length;
            }

            // Eventos
            searchInput.addEventListener('input', debounce(e => { state.search = e.target.value; state.page = 1; applyFiltersAndSort(); }, 220));
            clearSearch.addEventListener('click', () => { searchInput.value = ''; state.search = ''; state.page = 1; applyFiltersAndSort(); });
            categoryF.addEventListener('change', e => { state.category = e.target.value; state.page = 1; applyFiltersAndSort(); });
            stockF.addEventListener('change', e => { state.stock = e.target.value; state.page = 1; applyFiltersAndSort(); });
            variantF.addEventListener('change', e => { state.variant = e.target.value; state.page = 1; applyFiltersAndSort(); });
            rowsPerPageEl.addEventListener('change', e => { state.rowsPerPage = parseInt(e.target.value, 10); state.page = 1; applyFiltersAndSort(); });

            statusPills.forEach(p => p.addEventListener('click', () => {
                statusPills.forEach(x => x.classList.remove('active')); p.classList.add('active');
                state.status = p.dataset.status; state.page = 1; applyFiltersAndSort();
            }));

            qsa('th.sortable').forEach(th => {
                th.addEventListener('click', () => {
                    const by = th.dataset.sort;
                    state.sort.by === by ? state.sort.dir = (state.sort.dir === 'asc' ? 'desc' : 'asc') : (state.sort.by = by, state.sort.dir = 'asc');
                    qsa('th.sortable .sort-indicator i').forEach(i => i.className = 'fas fa-sort');
                    const icon = th.querySelector('.sort-indicator i');
                    icon.className = state.sort.dir === 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down';
                    applyFiltersAndSort();
                });
            });

            resetBtn.addEventListener('click', () => {
                state.search = ''; state.category = ''; state.stock = ''; state.variant = ''; state.status = 'all';
                state.sort = { by: 'name', dir: 'asc' }; state.page = 1;
                searchInput.value = ''; categoryF.value = ''; stockF.value = ''; variantF.value = '';
                statusPills.forEach(p => p.classList.toggle('active', p.dataset.status === 'all'));
                applyFiltersAndSort();
            });

            exportBtn.addEventListener('click', () => {
                const visible = getRows().filter(r => r.style.display !== 'none');
                const rows = visible.map(r => {
                    const name = r.querySelector('td:first-child strong')?.textContent?.trim() || '';
                    const cat = r.querySelector('.category-badge')?.textContent?.trim() || '';
                    const brand = r.dataset.brand || '';
                    const stock = r.dataset.stock || '0';
                    const price = r.dataset.priceMin || r.dataset.price || '0';
                    const type = r.dataset.hasVariants === 'true' ? 'Con variantes' : 'Simple';
                    return [name, cat, brand, stock, price, type];
                });
                const header = ['Nombre', 'Categoría', 'Marca', 'Stock', 'PrecioVentaMin', 'Tipo'];
                const csv = [header, ...rows].map(a => a.map(x => `"${String(x).replace(/"/g, '""')}"`).join(',')).join('\n');
                const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
                const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = 'productos.csv'; document.body.appendChild(a); a.click(); a.remove();
            });

            // ===== Mini carrusel =====
            function buildDots(host, n) { const d = host.querySelector('.thumb-dots'); d.innerHTML = ''; for (let i = 0; i < n; i++) d.appendChild(document.createElement('span')); }
            function setSlide(host, idx) {
                const images = JSON.parse(host.dataset.images || '[]'); if (!images.length) return;
                idx = (idx + images.length) % images.length; host.dataset.idx = String(idx);
                const img = host.querySelector('.thumb-img'); if (img) img.src = images[idx];
                qsa('.thumb-dots span', host).forEach((dot, i) => dot.classList.toggle('active', i === idx));
            }
            function initCarousel(host) {
                const imgs = JSON.parse(host.dataset.images || '[]');
                host.dataset.idx = '0'; buildDots(host, imgs.length); setSlide(host, 0);
                host.querySelector('.thumb-nav.prev')?.addEventListener('click', e => { e.stopPropagation(); setSlide(host, parseInt(host.dataset.idx || '0') - 1); });
                host.querySelector('.thumb-nav.next')?.addEventListener('click', e => { e.stopPropagation(); setSlide(host, parseInt(host.dataset.idx || '0') + 1); });
                host.addEventListener('wheel', e => { e.preventDefault(); const dir = e.deltaY > 0 ? 1 : -1; setSlide(host, parseInt(host.dataset.idx || '0') + dir); }, { passive: false });
                let sx = 0; host.addEventListener('touchstart', e => sx = e.touches[0].clientX, { passive: true });
                host.addEventListener('touchend', e => { const dx = e.changedTouches[0].clientX - sx; if (Math.abs(dx) > 30) setSlide(host, parseInt(host.dataset.idx || '0') + (dx < 0 ? 1 : -1)); });
            }
            qsa('.thumb-carousel').forEach(initCarousel);

            // ===== Lightbox =====
            let gImages = [], gIndex = 0;
            const gModal = document.getElementById('galleryModal');
            const gImg   = document.getElementById('gImage');
            const gThumbs = document.getElementById('gThumbs');

            function renderLightbox() {
                if (!gImages.length) return;
                gIndex = (gIndex + gImages.length) % gImages.length;
                gImg.src = gImages[gIndex];
                gThumbs.innerHTML = '';
                gImages.forEach((u, i) => {
                    const t = document.createElement('img'); t.src = u; t.alt = '';
                    if (i === gIndex) t.classList.add('active');
                    t.addEventListener('click', () => { gIndex = i; renderLightbox(); });
                    gThumbs.appendChild(t);
                });
            }
            function openLightbox(images, start = 0) {
                gImages = images; gIndex = start; renderLightbox();
                if (window.bootstrap) new bootstrap.Modal(gModal).show(); else gModal.style.display = 'block';
            }

            document.addEventListener('click', e => {
                const btn = e.target.closest('[data-open-gallery]'); if (!btn) return;
                const pid = btn.getAttribute('data-open-gallery');
                const host = document.querySelector(`.thumb-carousel[data-pid="${pid}"]`);
                if (!host) return;
                const images = JSON.parse(host.dataset.images || '[]');
                const start  = parseInt(host.dataset.idx || '0');
                if (images.length) openLightbox(images, start);
            });
            gModal?.querySelector('.g-prev')?.addEventListener('click', () => { gIndex--; renderLightbox(); });
            gModal?.querySelector('.g-next')?.addEventListener('click', () => { gIndex++; renderLightbox(); });
            document.addEventListener('keydown', e => {
                if (!gModal.classList.contains('show')) return;
                if (e.key === 'ArrowLeft')  { gIndex--; renderLightbox(); }
                if (e.key === 'ArrowRight') { gIndex++; renderLightbox(); }
            });

            // ===== Modal de Variantes =====
            document.addEventListener('click', e => {
                const btn = e.target.closest('[data-open-variants]'); if (!btn) return;
                const pid = btn.getAttribute('data-open-variants');
                const script = document.getElementById(`variants-${pid}`);
                if (!script) return;

                let data = [];
                try { data = JSON.parse(script.textContent || '[]'); } catch { data = []; }
                const host = document.getElementById('variantesContent');
                const title = document.getElementById('variantesModalTitle');

                title.textContent = `Variantes del producto #${pid}`;
                if (!data.length) {
                    host.innerHTML = '<div class="alert alert-info m-0">No hay variantes registradas.</div>';
                } else {
                    const rows = data.map((v, i) => `
                        <tr>
                            <td>${i + 1}</td>
                            <td>${(v.Color || '').toString()}</td>
                            <td>${(v.Talla || '').toString()}</td>
                            <td>${(v.PrecioVenta ?? 0).toFixed(2)}</td>
                            <td>${v.Stock ?? 0}</td>
                            <td><code>${(v.SKU || '').toString()}</code></td>
                        </tr>
                    `).join('');
                    host.innerHTML = `
                        <table class="table table-sm table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th><th>Color</th><th>Talla</th><th>Precio</th><th>Stock</th><th>SKU</th>
                                </tr>
                            </thead>
                            <tbody>${rows}</tbody>
                        </table>`;
                }
                new bootstrap.Modal('#variantesModal').show();
            });

            // Init
            applyFiltersAndSort();
        })();
    </script>
}

@functions {
    private static string NormalizeColorKey(string s)
    {
        s = (s ?? "").Trim().ToLowerInvariant();
        s = s.Replace("-", " ").Replace("_", " ");
        s = string.Join(" ", s.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries));
        var formD = s.Normalize(System.Text.NormalizationForm.FormD);
        var filtered = formD.Where(c => CharUnicodeInfo.GetUnicodeCategory(c) != UnicodeCategory.NonSpacingMark);
        return new string(filtered.ToArray()).Normalize(System.Text.NormalizationForm.FormC);
    }

    private static readonly Dictionary<string, string> ColorMap = new(StringComparer.OrdinalIgnoreCase)
    {
        ["negro"] = "#000000",
        ["blanco"] = "#FFFFFF",
        ["gris"] = "#808080",
        ["gris claro"] = "#D3D3D3",
        ["gris medio"] = "#A9A9A9",
        ["gris oscuro"] = "#505050",
        ["plata"] = "#C0C0C0",
