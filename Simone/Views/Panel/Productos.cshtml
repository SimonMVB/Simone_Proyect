@using Simone.Models
@using System
@using System.Linq
@using System.Globalization
@model List<Producto>

@{
    ViewData["Type"] = "Productos";
    ViewData["Title"] = "Gestión de " + ViewData["Type"];
    var culture = CultureInfo.CreateSpecificCulture("es-EC");
    var lowStockThreshold = 10;

    // Diccionario de galerías precalculadas (opcional)
    var galeriasDict = ViewBag.Galerias as Dictionary<int, List<string>>;
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary: #4B0082;
        --primary-2: #5E2D8C;
        --text: #333;
        --muted: #777;
        --bg: #f5f5f7;
        --white: #fff;
        --gray-100: #F8F8F8;
        --gray-200: #E0E0E0;
        --gray-500: #999;
        --gray-700: #333;
        --success: #28a745;
        --warning: #ffc107;
        --danger: #dc3545;
        --info: #17a2b8;
        --shadow: 0 5px 15px rgba(0,0,0,.05);
    }

    body {
        font-family: 'Montserrat',sans-serif;
        background: var(--bg);
        color: var(--text);
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Playfair Display',serif;
        font-weight: 700;
    }

    .management-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 16px;
    }

    .management-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
        padding: 1.25rem 1.5rem;
        border-radius: 12px;
        background: var(--white);
        box-shadow: var(--shadow);
        margin-bottom: 1.25rem;
    }

    .management-title {
        margin: 0;
        font-size: 1.8rem;
        color: var(--primary);
        display: flex;
        align-items: center;
        gap: .75rem;
    }

    .pill-btn, .add-btn {
        border: none;
        border-radius: 30px;
        padding: .65rem 1.1rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: var(--white);
        color: var(--gray-700);
        border: 1px solid var(--gray-200);
        transition: .2s;
        text-decoration: none;
    }

        .pill-btn.active {
            background: var(--primary);
            border-color: var(--primary);
            color: #fff;
        }

    .add-btn {
        background: linear-gradient(135deg,var(--primary),var(--primary-2));
        color: #fff;
        border: 0;
    }

        .add-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 16px rgba(75,0,130,.28);
        }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
        gap: 12px;
        margin-bottom: 12px;
    }

    .stat-card {
        background: #fff;
        padding: 1rem 1.1rem;
        border-radius: 12px;
        box-shadow: var(--shadow);
        text-align: center;
        border-left: 4px solid var(--primary);
    }

    .stat-number {
        font-size: 1.6rem;
        color: var(--primary);
        font-weight: 700;
    }

    .stat-label {
        color: var(--muted);
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .5px;
    }

    .toolbar {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
        margin: 0 0 1rem 0;
    }

    .search-box {
        flex: 1;
        min-width: 260px;
        position: relative;
    }

    .search-input {
        width: 100%;
        border: 1px solid var(--gray-200);
        border-radius: 30px;
        padding: .75rem 2.6rem .75rem 2.5rem;
        font-size: .95rem;
    }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(75,0,130,.1);
        }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--muted);
    }

    .clear-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: 0;
        color: var(--gray-500);
    }

    .filter-select {
        padding: .7rem 1rem;
        border: 1px solid var(--gray-200);
        border-radius: 30px;
        background: #fff;
        min-width: 150px;
    }

        .filter-select:focus {
            outline: none;
            border-color: var(--primary);
        }

    .management-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--shadow);
    }

        .management-table th {
            background: var(--primary);
            color: #fff;
            padding: 1rem;
            text-align: left;
            font-weight: 500;
        }

            .management-table th.sortable {
                cursor: pointer;
            }

            .management-table th .sort-indicator {
                opacity: .7;
                margin-left: .35rem;
            }

        .management-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--gray-200);
            vertical-align: middle;
        }

        .management-table tr:hover td {
            background: rgba(75,0,130,.03);
        }

    .product-image, .no-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        border: 1px solid var(--gray-200);
    }

    .no-image {
        background: #f1f1f1;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        font-size: .85rem;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        border: 0;
        margin-right: .3rem;
        cursor: pointer;
    }

    .edit-btn {
        background: rgba(23,162,184,.1);
        color: var(--info);
    }

        .edit-btn:hover {
            background: var(--info);
            color: #fff;
        }

    .delete-btn {
        background: rgba(220,53,69,.1);
        color: var(--danger);
    }

        .delete-btn:hover {
            background: var(--danger);
            color: #fff;
        }

    .variants-btn {
        background: rgba(108,117,125,.1);
        color: #444;
    }

        .variants-btn:hover {
            background: #444;
            color: #fff;
        }

    .stock-indicator {
        display: inline-block;
        padding: .25rem .65rem;
        border-radius: 20px;
        font-size: .85rem;
        font-weight: 600;
    }

    .stock-high {
        background: rgba(40,167,69,.1);
        color: var(--success);
    }

    .stock-low {
        background: rgba(255,193,7,.15);
        color: var(--warning);
    }

    .stock-out {
        background: rgba(220,53,69,.12);
        color: var(--danger);
    }

    .category-badge {
        background: rgba(75,0,130,.1);
        color: var(--primary);
        padding: .2rem .55rem;
        border-radius: 16px;
        font-size: .78rem;
    }

    .variant-badge {
        display: inline-flex;
        align-items: center;
        gap: .25rem;
        background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);
        color: #fff;
        padding: .25rem .6rem;
        border-radius: 20px;
        font-size: .75rem;
        font-weight: 700;
    }

    .variant-count {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background: var(--primary);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: .68rem;
    }

    .description-text {
        max-width: 420px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
        color: var(--muted);
    }

    /* Mini carrusel */
    .thumb-carousel {
        position: relative;
        width: 80px;
        height: 80px;
        overflow: hidden;
        border: 1px solid var(--gray-200);
        border-radius: 8px;
        background: #fff;
    }

    .thumb-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .thumb-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 22px;
        height: 22px;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,.85);
        color: #333;
        opacity: 0;
        transition: .2s;
    }

    .thumb-carousel:hover .thumb-nav {
        opacity: 1;
    }

    .thumb-nav.prev {
        left: 4px;
    }

    .thumb-nav.next {
        right: 4px;
    }

    .thumb-zoom {
        position: absolute;
        top: 4px;
        right: 4px;
        width: 22px;
        height: 22px;
        border: none;
        border-radius: 6px;
        background: rgba(0,0,0,.45);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: .2s;
    }

    .thumb-carousel:hover .thumb-zoom {
        opacity: 1;
    }

    .thumb-dots {
        position: absolute;
        bottom: 4px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 4px;
    }

        .thumb-dots span {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: rgba(255,255,255,.75);
        }

            .thumb-dots span.active {
                background: #fff;
            }

    .pagination {
        display: flex;
        gap: .35rem;
        flex-wrap: wrap;
        justify-content: flex-end;
        margin-top: 1rem;
    }

    .page-btn {
        border: 1px solid var(--gray-200);
        background: #fff;
        border-radius: 8px;
        padding: .45rem .75rem;
        cursor: pointer;
    }

        .page-btn.active {
            background: var(--primary);
            border-color: var(--primary);
            color: #fff;
        }

    .hidden-by-page {
        display: none !important;
    }

    /* Lightbox */
    .gallery-lightbox {
        position: relative;
        background: #000;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .g-stage {
        width: 100%;
        height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #gImage {
        max-width: 100%;
        max-height: 60vh;
        object-fit: contain;
    }

    .g-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: rgba(255,255,255,.15);
        color: #fff;
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .g-prev {
        left: 12px;
    }

    .g-next {
        right: 12px;
    }

    .g-close {
        position: absolute;
        top: 10px;
        right: 10px;
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: rgba(255,255,255,.2);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .fade-in {
        animation: fadeIn .45s ease-out;
    }
</style>

<div class="management-container fade-in">
    <div class="management-header">
        <h2 class="management-title">
            <i class="fas fa-box-open"></i> @ViewData["Title"]
        </h2>

        <div class="header-actions" style="display:flex; gap:.6rem; align-items:center; flex-wrap:wrap;">
            <button type="button" class="pill-btn active" data-status="all">
                <i class="fas fa-border-all"></i> Todos
            </button>
            <button type="button" class="pill-btn" data-status="in-stock">
                <i class="fas fa-check"></i> En stock
            </button>
            <button type="button" class="pill-btn" data-status="low-stock">
                <i class="fas fa-battery-quarter"></i> Stock bajo
            </button>
            <button type="button" class="pill-btn" data-status="out-of-stock">
                <i class="fas fa-ban"></i> Sin stock
            </button>

            <!-- ▾ Añadir producto (elige tipo) -->
            <div class="btn-group">
                <button type="button" class="add-btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-plus"></i> Añadir Producto
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Panel" asp-action="AnadirProducto" asp-route-mode="simple">
                            <i class="fas fa-box me-1"></i> Producto simple
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Panel" asp-action="AnadirProducto" asp-route-mode="variantes">
                            <i class="fas fa-layer-group me-1"></i> Producto con variantes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- KPIs -->
    <div class="stats-cards">
        <div class="stat-card"><div class="stat-number" id="totalProducts">0</div><div class="stat-label">Total Productos</div></div>
        <div class="stat-card"><div class="stat-number" id="inStockProducts">0</div><div class="stat-label">En Stock</div></div>
        <div class="stat-card"><div class="stat-number" id="lowStockProducts">0</div><div class="stat-label">Stock Bajo</div></div>
        <div class="stat-card"><div class="stat-number" id="outOfStockProducts">0</div><div class="stat-label">Sin Stock</div></div>
        <div class="stat-card"><div class="stat-number" id="variantProducts">0</div><div class="stat-label">Con Variantes</div></div>
    </div>

    <!-- Filtros -->
    <div class="toolbar">
        <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input id="searchInput" class="search-input" placeholder="Buscar por nombre, marca, categoría..." />
            <button id="clearSearch" type="button" class="clear-icon" title="Limpiar"><i class="fas fa-xmark"></i></button>
        </div>

        <select id="categoryFilter" class="filter-select">
            <option value="">Todas las categorías</option>
            @if (ViewBag.Categorias != null)
            {
                foreach (var c in ViewBag.Categorias)
                {
                    <option value="@c.Nombre">@c.Nombre</option>
                }
            }
        </select>

        <select id="stockFilter" class="filter-select">
            <option value="">Todo el stock</option>
            <option value="high">Stock Alto (&gt; @lowStockThreshold)</option>
            <option value="low">Stock Bajo (&lt;= @lowStockThreshold)</option>
            <option value="out">Sin Stock</option>
        </select>

        <select id="variantFilter" class="filter-select">
            <option value="">Todos los tipos</option>
            <option value="with-variants">Con variantes</option>
            <option value="without-variants">Sin variantes</option>
        </select>

        <div style="margin-left:auto; display:flex; gap:.5rem; align-items:center;">
            <select id="rowsPerPage" class="filter-select">
                <option value="10">10 / pág.</option>
                <option value="20">20 / pág.</option>
                <option value="50">50 / pág.</option>
                <option value="100">100 / pág.</option>
            </select>
            <button id="resetFilters" type="button" class="pill-btn"><i class="fas fa-rotate-left"></i> Reiniciar</button>
            <button id="exportCsv" type="button" class="pill-btn"><i class="fas fa-file-csv"></i> Exportar CSV</button>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-container" style="position:relative;">
            <table id="productsTable" class="management-table">
                <thead>
                    <tr>
                        <th class="sortable" data-sort="name">Producto <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th>Imagen</th>
                        <th>Información</th>
                        <th class="sortable" data-sort="stock">Stock <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th class="sortable" data-sort="price">Precio <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="productTbody">
                    @foreach (var p in Model)
                    {
                        var hasVariants = p.Variantes != null && p.Variantes.Any();
                        var variantCount = hasVariants ? p.Variantes.Count : 0;

                        var colors = hasVariants
                        ? p.Variantes.Select(v => v.Color).Where(c => !string.IsNullOrWhiteSpace(c)).Distinct().ToList()
                        : new List<string>();
                        var sizes = hasVariants
                        ? p.Variantes.Select(v => v.Talla).Where(t => !string.IsNullOrWhiteSpace(t)).Distinct().ToList()
                        : new List<string>();

                        var totalStock = hasVariants ? p.Variantes.Sum(v => v.Stock) : p.Stock;
                        var stockClass = totalStock <= 0 ? "stock-out" : (totalStock <= lowStockThreshold ? "stock-low" : "stock-high");
                        var stockText = totalStock <= 0 ? "Sin stock" : $"{totalStock} unidades";
                        var dataStatus = totalStock <= 0 ? "out-of-stock" : (totalStock <= lowStockThreshold ? "low-stock" : "in-stock");

                        decimal minVarPrice = hasVariants
                        ? p.Variantes.Where(v => v.PrecioVenta.HasValue).Select(v => v.PrecioVenta!.Value).DefaultIfEmpty(0m).Min()
                        : 0m;
                        decimal maxVarPrice = hasVariants
                        ? p.Variantes.Where(v => v.PrecioVenta.HasValue).Select(v => v.PrecioVenta!.Value).DefaultIfEmpty(0m).Max()
                        : 0m;

                        // Galería: usa ViewBag.Galerias si está; sino ImagenPath
                        var imgs = (galeriasDict != null && galeriasDict.TryGetValue(p.ProductoID, out var list) && list?.Any() == true)
                        ? list
                        : (!string.IsNullOrWhiteSpace(p.ImagenPath) ? new List<string> { p.ImagenPath! } : new List<string>());
                        var imgsJson = System.Text.Json.JsonSerializer.Serialize(imgs);
                        <tr class="product-row"
                            data-id="@p.ProductoID"
                            data-name="@p.Nombre?.ToLower()"
                            data-category="@p.Categoria?.Nombre?.ToLower()"
                            data-brand="@p.Marca?.ToLower()"
                            data-stock="@totalStock"
                            data-price="@p.PrecioVenta.ToString("0.00", CultureInfo.InvariantCulture)"
                            data-price-min="@(hasVariants? minVarPrice.ToString("0.00", CultureInfo.InvariantCulture) : p.PrecioVenta.ToString("0.00", CultureInfo.InvariantCulture))"
                            data-price-max="@(hasVariants? maxVarPrice.ToString("0.00", CultureInfo.InvariantCulture) : p.PrecioVenta.ToString("0.00", CultureInfo.InvariantCulture))"
                            data-has-variants="@(hasVariants.ToString().ToLower())"
                            data-status="@dataStatus">

                            <!-- Nombre / etiquetas -->
                            <td>
                                <div style="display:flex;flex-direction:column;gap:.4rem;">
                                    <strong>@p.Nombre</strong>
                                    <div style="display:flex;align-items:center;gap:.5rem;flex-wrap:wrap">
                                        <span class="category-badge">@p.Categoria?.Nombre</span>
                                        @if (hasVariants)
                                        {
                                            <span class="variant-badge"><i class="fas fa-layer-group"></i> Variantes <span class="variant-count">@variantCount</span></span>
                                        }
                                    </div>
                                    <div style="font-size:.85rem;color:var(--muted)"><i class="fas fa-tag"></i> @p.Marca</div>
                                </div>
                            </td>

                            <!-- Mini galería -->
                            <td>
                                @if (imgs.Any())
                                {
                                    <div class="thumb-carousel" tabindex="0" role="group"
                                         aria-label="Galería de @p.Nombre"
                                         data-images='@Html.Raw(imgsJson)'
                                         data-pid="@p.ProductoID">
                                        <img class="thumb-img" src="@(imgs[0])" alt="@(p.Nombre ?? "Producto")" loading="lazy" />
                                        <button type="button" class="thumb-nav prev" aria-label="Imagen anterior"><i class="fas fa-chevron-left"></i></button>
                                        <button type="button" class="thumb-nav next" aria-label="Imagen siguiente"><i class="fas fa-chevron-right"></i></button>
                                        <div class="thumb-dots" aria-hidden="true"></div>
                                        <button type="button" class="thumb-zoom" data-open-gallery="@p.ProductoID" title="Ampliar"><i class="fas fa-up-right-and-down-left-from-center"></i></button>
                                    </div>
                                }
                                else
                                {
                                    <div class="no-image" aria-label="Sin imagen"><i class="fas fa-image"></i></div>
                                }
                            </td>

                            <!-- Info -->
                            <td>
                                <div class="description-text" title="@p.Descripcion">@p.Descripcion</div>
                                @if (hasVariants)
                                {
                                    var topColors = colors.Take(3).ToList();
                                    <div style="margin-top:.35rem;font-size:.85rem;color:var(--muted)">
                                        <strong>Colores:</strong>
                                        @for (int i = 0; i < topColors.Count; i++)
                                        {
                                            var color = topColors[i];
                                            <span style="display:inline-flex;align-items:center;gap:.25rem;margin-right:.35rem">
                                                <span class="variant-color" style="width:12px;height:12px;border-radius:50%;display:inline-block;background-color:@GetColorCode(color)"></span>@color
                                            </span>
                                            if (i < topColors.Count - 1)
                                            {

                                                <span>, </span>
                                            }
                                        }
                                        @if (colors.Count > 3)
                                        {
                                            <span>+@(colors.Count - 3) más</span>
                                        }
                                        <span style="margin-left:.5rem">
                                            <strong>Tallas:</strong> @string.Join(", ", sizes.Take(3))
                                            @if (sizes.Count > 3)
                                            {
                                                <text> +@(sizes.Count - 3) más</text>
                                            }
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div style="font-size:.85rem;color:var(--muted);margin-top:.35rem">
                                        @if (!string.IsNullOrWhiteSpace(p.Color))
                                        {
                                            <span><strong>Color:</strong> @p.Color</span>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(p.Talla))
                                        {
                                            <span style="margin-left:.5rem"><strong>Talla:</strong> @p.Talla</span>
                                        }
                                    </div>
                                }
                            </td>

                            <!-- Stock -->
                            <td>
                                <span class="stock-indicator @stockClass">@stockText</span>
                                @if (hasVariants)
                                {
                                    <div style="font-size:.75rem;color:var(--muted);margin-top:.25rem">@variantCount combinaciones</div>
                                }
                            </td>

                            <!-- Precio -->
                            <td>
                                @if (hasVariants && minVarPrice > 0 && maxVarPrice > 0)
                                {
