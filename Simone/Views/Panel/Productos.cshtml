        ["fucsia"] = "#FF00FF",
        ["magenta"] = "#FF00FF",
        ["morado"] = "#800080",
        ["purpura"] = "#6A0DAD",
        ["violeta"] = "#8A2BE2",
        ["lavanda"] = "#E6E6FA",
        ["lila"] = "#C8A2C8",
        ["indigo"] = "#4B0082",
        ["azul"] = "#0000FF",
        ["azul cielo"] = "#87CEEB",
        ["azul rey"] = "#0033A0",
        ["azul marino"] = "#003366",
        ["azul petroleo"] = "#0F4C5C",
        ["turquesa"] = "#40E0D0",
        ["teal"] = "#008080",
        ["verde"] = "#008000",
        ["verde claro"] = "#90EE90",
        ["verde lima"] = "#32CD32",
        ["verde esmeralda"] = "#50C878",
        ["verde botella"] = "#006A4E",
        ["oliva"] = "#808000"
    };

    private string GetColorCode(string colorName)
    {
        var key = NormalizeColorKey(colorName);
        if (ColorMap.TryGetValue(key, out var hex)) return hex;
        if (key.Contains("marino") && key.Contains("azul")) return ColorMap["azul marino"];
        if (key.Contains("petroleo") && (key.Contains("azul") || key.Contains("verde"))) return ColorMap["azul petroleo"];
        if (key.Contains("pastel"))
        {
            foreach (var baseName in new[] { "rosa", "azul", "verde", "amarillo", "lila", "violeta" })
                if (key.Contains(baseName) && ColorMap.TryGetValue($"{baseName}", out var h)) return h;
        }
        return "#CCCCCC";
    }
}
