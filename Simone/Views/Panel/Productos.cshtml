@@using Simone.Models
@using System
@using System.Linq
@using System.Text.Json
@using System.Globalization
@model List<Producto>

@{
    ViewData["Type"] = "Productos";
    ViewData["Title"] = "Gestión de " + ViewData["Type"];
    var lowStockThreshold = 10; // puedes ajustar el umbral
    var culture = CultureInfo.CreateSpecificCulture("es-EC");
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-dark: #1A1A1A;
        --primary-light: #FFFFFF;
        --accent-purple: #4B0082;
        --accent-gold: #D4AF37;
        --light-gray: #F8F8F8;
        --medium-gray: #E0E0E0;
        --dark-gray: #333333;
        --text-color: #333333;
        --text-light: #777;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --info-color: #17a2b8
    }

    body {
        font-family: 'Montserrat',sans-serif;
        background: #f5f5f7;
        color: var(--text-color)
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Playfair Display',serif;
        font-weight: 600
    }

    .management-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 15px
    }

    .management-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,.05)
    }

    .management-title {
        font-size: 1.8rem;
        color: var(--accent-purple);
        display: flex;
        align-items: center;
        margin: 0
    }

        .management-title i {
            margin-right: 1rem
        }

    .header-actions {
        display: flex;
        gap: .75rem;
        align-items: center;
        flex-wrap: wrap
    }

    .pill-btn, .add-btn {
        border: none;
        padding: .65rem 1.25rem;
        border-radius: 30px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        transition: all .25s ease;
        text-decoration: none
    }

    .add-btn {
        background: linear-gradient(135deg,var(--accent-purple),#5E2D8C);
        color: #fff
    }

        .add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(75,0,130,.3)
        }

    .pill-btn {
        background: #fff;
        border: 1px solid var(--medium-gray);
        color: var(--dark-gray)
    }

        .pill-btn.active {
            background: var(--accent-purple);
            color: #fff;
            border-color: var(--accent-purple)
        }

        .pill-btn i {
            font-size: .9rem
        }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
        gap: 1rem;
        margin-bottom: 1.25rem
    }

    .stat-card {
        background: #fff;
        padding: 1rem 1.25rem;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,.05);
        text-align: center;
        border-left: 4px solid var(--accent-purple)
    }

    .stat-number {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--accent-purple)
    }

    .stat-label {
        color: var(--text-light);
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .5px
    }

    .toolbar {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
        margin-bottom: 1rem
    }

    .search-box {
        flex: 1;
        min-width: 260px;
        position: relative
    }

    .search-input {
        width: 100%;
        padding: .75rem 1rem .75rem 2.5rem;
        border: 1px solid var(--medium-gray);
        border-radius: 30px;
        font-size: .95rem
    }

        .search-input:focus {
            outline: none;
            border-color: var(--accent-purple);
            box-shadow: 0 0 0 3px rgba(75,0,130,.1)
        }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-light)
    }

    .filter-select {
        padding: .7rem 1rem;
        border: 1px solid var(--medium-gray);
        border-radius: 30px;
        background: #fff;
        min-width: 150px
    }

        .filter-select:focus {
            outline: none;
            border-color: var(--accent-purple)
        }

    .right-tools {
        margin-left: auto;
        display: flex;
        gap: .5rem
    }

    .management-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,.05)
    }

        .management-table th {
            background: var(--accent-purple);
            color: #fff;
            padding: 1rem;
            text-align: left;
            font-weight: 500;
            position: sticky;
            top: 0
        }

            .management-table th.sortable {
                cursor: pointer
            }

                .management-table th.sortable .sort-indicator {
                    opacity: .7;
                    margin-left: .35rem
                }

        .management-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--medium-gray);
            vertical-align: middle
        }

        .management-table tr:last-child td {
            border-bottom: none
        }

        .management-table tr:hover td {
            background: rgba(75,0,130,.03)
        }

    .hidden-by-page {
        display: none !important
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid var(--medium-gray)
    }

    .no-image {
        width: 80px;
        height: 80px;
        background: var(--light-gray);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-light);
        font-size: .8rem;
        text-align: center
    }

    .action-btn {
        border: none;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: .35rem;
        transition: all .25s ease;
        cursor: pointer
    }

    .edit-btn {
        background: rgba(23,162,184,.1);
        color: var(--info-color)
    }

        .edit-btn:hover {
            background: var(--info-color);
            color: #fff
        }

    .delete-btn {
        background: rgba(220,53,69,.1);
        color: var(--danger-color)
    }

        .delete-btn:hover {
            background: var(--danger-color);
            color: #fff
        }

    .variants-btn {
        background: rgba(108,117,125,.1);
        color: var(--dark-gray)
    }

        .variants-btn:hover {
            background: var(--dark-gray);
            color: #fff
        }

    .stock-indicator {
        display: inline-block;
        padding: .25rem .75rem;
        border-radius: 20px;
        font-size: .85rem;
        font-weight: 500
    }

    .stock-high {
        background: rgba(40,167,69,.1);
        color: var(--success-color)
    }

    .stock-low {
        background: rgba(255,193,7,.15);
        color: var(--warning-color)
    }

    .stock-out {
        background: rgba(220,53,69,.12);
        color: var(--danger-color)
    }

    .variant-badge {
        display: inline-flex;
        align-items: center;
        gap: .25rem;
        background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);
        color: #fff;
        padding: .25rem .6rem;
        border-radius: 20px;
        font-size: .75rem;
        font-weight: 600;
        margin-left: .5rem
    }

    .variant-count {
        background: var(--accent-purple);
        color: #fff;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: .68rem;
        margin-left: .35rem
    }

    .category-badge {
        background: rgba(75,0,130,.1);
        color: var(--accent-purple);
        padding: .25rem .6rem;
        border-radius: 20px;
        font-size: .8rem
    }

    .description-text {
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 380px
    }

    .price-tag {
        font-weight: 700;
        color: var(--accent-purple)
    }

    .empty-state {
        background: #fff;
        border-radius: 12px;
        padding: 3rem;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,.05)
    }

        .empty-state i {
            font-size: 4rem;
            color: var(--medium-gray);
            margin-bottom: 1.25rem
        }

    .pagination {
        display: flex;
        gap: .35rem;
        flex-wrap: wrap;
        align-items: center;
        justify-content: flex-end;
        margin-top: 1rem
    }

    .page-btn {
        border: 1px solid var(--medium-gray);
        background: #fff;
        border-radius: 8px;
        padding: .45rem .75rem;
        cursor: pointer
    }

        .page-btn[disabled] {
            opacity: .5;
            cursor: not-allowed
        }

        .page-btn.active {
            background: var(--accent-purple);
            border-color: var(--accent-purple);
            color: #fff
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px)
        }

        to {
            opacity: 1;
            transform: translateY(0)
        }
    }

    .fade-in {
        animation: fadeIn .5s ease-out
    }

    @@media (max-width:1200px) {
        .management-container {
            overflow-x: auto
        }

        .management-table {
            min-width: 1000px
        }
    }
</style>

<div class="management-container fade-in">
    <div class="management-header">
        <h2 class="management-title">
            <i class="fas fa-box-open"></i> @ViewData["Title"]
        </h2>
        <div class="header-actions">
            <button type="button" class="pill-btn active" data-status="all"><i class="fas fa-border-all"></i> Todos</button>
            <button type="button" class="pill-btn" data-status="in-stock"><i class="fas fa-check"></i> En stock</button>
            <button type="button" class="pill-btn" data-status="low-stock"><i class="fas fa-battery-quarter"></i> Stock bajo</button>
            <button type="button" class="pill-btn" data-status="out-of-stock"><i class="fas fa-ban"></i> Sin stock</button>
            <a asp-controller="Panel" asp-action="AnadirProducto" class="add-btn"><i class="fas fa-plus"></i> Añadir Producto</a>
        </div>
    </div>

    <!-- Stats -->
    <div class="stats-cards">
        <div class="stat-card"><div class="stat-number" id="totalProducts">0</div><div class="stat-label">Total Productos</div></div>
        <div class="stat-card"><div class="stat-number" id="inStockProducts">0</div><div class="stat-label">En Stock</div></div>
        <div class="stat-card"><div class="stat-number" id="lowStockProducts">0</div><div class="stat-label">Stock Bajo</div></div>
        <div class="stat-card"><div class="stat-number" id="outOfStockProducts">0</div><div class="stat-label">Sin Stock</div></div>
        <div class="stat-card"><div class="stat-number" id="variantProducts">0</div><div class="stat-label">Con Variantes</div></div>
    </div>

    <!-- Toolbar -->
    <div class="toolbar">
        <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" id="searchInput" placeholder="Buscar por nombre, marca, categoría...">
        </div>

        <select class="filter-select" id="categoryFilter">
            <option value="">Todas las categorías</option>
            @if (ViewBag.Categorias != null)
            {
                foreach (var c in ViewBag.Categorias)
                {
                    <option value="@c.Nombre">@c.Nombre</option>
                }
            }
        </select>

        <select class="filter-select" id="stockFilter">
            <option value="">Todo el stock</option>
            <option value="high">Stock Alto (&gt; @lowStockThreshold)</option>
            <option value="low">Stock Bajo (&lt;= @lowStockThreshold)</option>
            <option value="out">Sin Stock</option>
        </select>

        <select class="filter-select" id="variantFilter">
            <option value="">Todos los tipos</option>
            <option value="with-variants">Con variantes</option>
            <option value="without-variants">Sin variantes</option>
        </select>

        <div class="right-tools">
            <select class="filter-select" id="rowsPerPage">
                <option value="10">10 / pág.</option>
                <option value="20">20 / pág.</option>
                <option value="50">50 / pág.</option>
                <option value="100">100 / pág.</option>
            </select>
            <button type="button" class="pill-btn" id="resetFilters"><i class="fas fa-rotate-left"></i> Reiniciar</button>
            <button type="button" class="pill-btn" id="exportCsv"><i class="fas fa-file-csv"></i> Exportar CSV</button>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-container" style="position:relative;">
            <table class="management-table" id="productsTable">
                <thead>
                    <tr>
                        <th class="sortable" data-sort="name">Producto <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th>Imagen</th>
                        <th>Información</th>
                        <th class="sortable" data-sort="stock">Stock <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th class="sortable" data-sort="price">Precio <span class="sort-indicator"><i class="fas fa-sort"></i></span></th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="productTbody">
                    @foreach (var producto in Model)
                    {
                        var hasVariants = producto.Variantes != null && producto.Variantes.Any();
                        var variantCount = hasVariants ? producto.Variantes.Count : 0;

                        var colors = hasVariants
                        ? producto.Variantes.Select(v => v.Color).Where(c => !string.IsNullOrWhiteSpace(c)).Distinct().ToList()
                        : new List<string>();

                        var sizes = hasVariants
                        ? producto.Variantes.Select(v => v.Talla).Where(t => !string.IsNullOrWhiteSpace(t)).Distinct().ToList()
                        : new List<string>();

                        var totalStock = hasVariants ? producto.Variantes.Sum(v => v.Stock) : producto.Stock;
                        var stockClass = totalStock <= 0 ? "stock-out" : (totalStock <= lowStockThreshold ? "stock-low" : "stock-high");
                        var stockText = totalStock <= 0 ? "Sin stock" : $"{totalStock} unidades";
                        var dataStatus = totalStock <= 0 ? "out-of-stock" : (totalStock <= lowStockThreshold ? "low-stock" : "in-stock");

                        var topColors = colors.Take(3).ToList();

                        // Rango de precios si hay variantes
                        decimal minVarPrice = 0m, maxVarPrice = 0m;
                        if (hasVariants && producto.Variantes.Any())
                        {
                            minVarPrice = producto.Variantes.Min(v => (v.PrecioVenta));
                            maxVarPrice = producto.Variantes.Max(v => (v.PrecioVenta));
                        }

                        var variantJson = hasVariants
                        ? JsonSerializer.Serialize(producto.Variantes.Select(v => new { v.Color, v.Talla, v.PrecioVenta, v.Stock, v.SKU }))
                        : "[]";
                        <tr class="product-row"
                            data-id="@producto.ProductoID"
                            data-name="@producto.Nombre?.ToLower()"
                            data-category="@producto.Categoria?.Nombre?.ToLower()"
                            data-brand="@producto.Marca?.ToLower()"
                            data-stock="@totalStock"
                            data-price="@producto.PrecioVenta.ToString("0.00", CultureInfo.InvariantCulture)"
                            data-has-variants="@(hasVariants.ToString().ToLower())"
                            data-status="@dataStatus">

                            <td>
                                <div style="display:flex;flex-direction:column;gap:.4rem;">
                                    <strong>@producto.Nombre</strong>
                                    <div style="display:flex;align-items:center;gap:.5rem;flex-wrap:wrap">
                                        <span class="category-badge">@producto.Categoria?.Nombre</span>
                                        @if (hasVariants)
                                        {
                                            <span class="variant-badge"><i class="fas fa-layer-group"></i> Variantes <span class="variant-count">@variantCount</span></span>
                                        }
                                    </div>
                                    <div style="font-size:.85rem;color:var(--text-light)"><i class="fas fa-tag"></i> @producto.Marca</div>
                                </div>
                            </td>

                            <td>
                                @if (!string.IsNullOrEmpty(producto.ImagenPath))
                                {
                                    <img src="@producto.ImagenPath" alt="Imagen de @producto.Nombre" class="product-image" loading="lazy" />
                                }
                                else
                                {
                                    <div class="no-image" aria-label="Sin imagen"><i class="fas fa-image" aria-hidden="true"></i></div>
                                }
                            </td>

                            <td>
                                <div class="description-text" title="@producto.Descripcion">
                                    @producto.Descripcion
                                </div>

                                @if (hasVariants)
                                {
                                    <div style="margin-top:.35rem;font-size:.85rem;color:var(--text-light)">
                                        <strong>Colores:</strong>
                                        @for (int i = 0; i < topColors.Count; i++)
                                        {
                                            var color = topColors[i];
                                            <span style="display:inline-flex;align-items:center;gap:.25rem;margin-right:.35rem">
                                                <span class="variant-color" style="width:12px;height:12px;border-radius:50%;display:inline-block;background-color:@GetColorCode(color)"></span>@color
                                            </span>
                                            if (i < topColors.Count - 1)
                                            {
                                                <span>, </span>
                                            }
                                        }
                                        @if (colors.Count > 3)
                                        {
                                            <span>+@(colors.Count - 3) más</span>
                                        }
                                        <span style="margin-left:.5rem">
                                            <strong>Tallas:</strong> @string.Join(", ", sizes.Take(3))
                                            @if (sizes.Count > 3)
                                            {
                                                <text> +@(sizes.Count - 3) más</text>
                                            }
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div style="font-size:.85rem;color:var(--text-light);margin-top:.35rem">
                                        @if (!string.IsNullOrEmpty(producto.Color))
                                        {
                                            <span><strong>Color:</strong> @producto.Color</span>
                                        }
                                        @if (!string.IsNullOrEmpty(producto.Talla))
                                        {
                                            <span style="margin-left:.5rem"><strong>Talla:</strong> @producto.Talla</span>
                                        }
                                    </div>
                                }
                            </td>

                            <td>
                                <span class="stock-indicator @stockClass">@stockText</span>
                                @if (hasVariants)
                                {
                                    <div style="font-size:.75rem;color:var(--text-light);margin-top:.25rem">@variantCount combinaciones</div>
                                }
                            </td>

                            <td>
                                @if (hasVariants && minVarPrice > 0 && maxVarPrice > 0)
                                {
                                    <div class="price-tag" title="Rango de precios por variante">
                                        @minVarPrice.ToString("C2", culture)
                                        @if (minVarPrice != maxVarPrice)
                                        {
                                            <text> - @maxVarPrice.ToString("C2", culture)</text>
                                        }
                                    </div>
                                    <div style="font-size:.75rem;color:var(--text-light)">Compra: @producto.PrecioCompra.ToString("C2", culture)</div>
                                }
                                else
                                {
                                    <div class="price-tag">@producto.PrecioVenta.ToString("C2", culture)</div>
                                    <div style="font-size:.75rem;color:var(--text-light)">Compra: @producto.PrecioCompra.ToString("C2", culture)</div>
                                }
                            </td>

                            <td>
                                <div style="display:flex;gap:.25rem">
                                    <form method="get" asp-controller="Panel" asp-action="EditarProducto" style="display:inline">
                                        <input type="hidden" name="productoID" value="@producto.ProductoID" />
                                        <button type="submit" class="action-btn edit-btn" title="Editar"><i class="fas fa-edit"></i></button>
                                    </form>

                                    @if (hasVariants)
                                    {
                                        <button type="button" class="action-btn variants-btn" title="Ver variantes"
                                                data-open-variants="@producto.ProductoID">
                                            <i class="fas fa-list"></i>
                                        </button>
                                    }

                                    <form method="post" asp-controller="Panel" asp-action="EliminarProducto"
                                          onsubmit="return confirm('¿Estás seguro de eliminar este producto?');" style="display:inline">
                                        <input type="hidden" name="productoID" value="@producto.ProductoID" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="action-btn delete-btn" title="Eliminar"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                        @* JSON embebido para el modal de variantes (no requiere AJAX) *@
                        @if (hasVariants)
                        {
                            <script type="application/json" id="variants-@producto.ProductoID">
                                @Html.Raw(variantJson)
                            </script>
                        }
                    }
                </tbody>
            </table>

            <div class="pagination" id="pagination"></div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-box-open"></i>
            <h3>No hay productos disponibles</h3>
            <p>Comienza agregando tu primer producto al catálogo.</p>
            <a asp-controller="Panel" asp-action="AnadirProducto" class="add-btn"><i class="fas fa-plus"></i> Añadir Primer Producto</a>
        </div>
    }
</div>

<!-- Modal Variantes -->
<div id="variantesModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="variantesModalTitle">Variantes del Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div id="variantesContent" class="table-responsive">
                    <!-- contenido dinámico -->
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const lowThreshold = @lowStockThreshold;

            const qs = s => document.querySelector(s);
            const qsa = s => Array.from(document.querySelectorAll(s));

            const searchInput = qs('#searchInput');
            const categoryFilter = qs('#categoryFilter');
            const stockFilter = qs('#stockFilter');
            const variantFilter = qs('#variantFilter');
            const statusPills = qsa('.pill-btn[data-status]');
            const rowsPerPageEl = qs('#rowsPerPage');
            const resetBtn = qs('#resetFilters');
            const exportCsvBtn = qs('#exportCsv');
            const tbody = qs('#productTbody');
            const paginationEl = qs('#pagination');

            // Normaliza: quita acentos y pasa a minúsculas
            const norm = (s) => {
                s = (s || '').toString();
                try {
                    return s.normalize('NFD').replace(/\p{Diacritic}/gu, '').toLowerCase();
                } catch {
                    // Fallback sin RegExp Unicode
                    return s.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase();
                }
            };

            const state = {
                search: '',
                category: '',
                stock: '',
                variant: '',
                status: 'all',
                sort: { by: 'name', dir: 'asc' },
                page: 1,
                rowsPerPage: parseInt(localStorage.getItem('rowsPerPage') || '10', 10)
            };

            // Restore filters
            (function restore() {
                const saved = localStorage.getItem('prodFilters');
                if (saved) { try { Object.assign(state, JSON.parse(saved)); } catch { } }
                searchInput.value = state.search || '';
                categoryFilter.value = state.category || '';
                stockFilter.value = state.stock || '';
                variantFilter.value = state.variant || '';
                rowsPerPageEl.value = String(state.rowsPerPage);
                statusPills.forEach(p => p.classList.toggle('active', p.dataset.status === state.status));
            })();

            function persist() {
                localStorage.setItem('prodFilters', JSON.stringify({
                    search: state.search, category: state.category, stock: state.stock,
                    variant: state.variant, status: state.status, sort: state.sort, page: state.page
                }));
                localStorage.setItem('rowsPerPage', String(state.rowsPerPage));
            }

            function getRows() {
                return qsa('.product-row');
            }

            function applyFiltersAndSort() {
                const term = norm(state.search);
                const rows = getRows();

                rows.forEach(row => {
                    const name = norm(row.dataset.name || '');
                    const brand = norm(row.dataset.brand || '');
                    const category = norm(row.dataset.category || '');
                    const stock = parseInt(row.dataset.stock || '0', 10);
                    const hasVariants = row.dataset.hasVariants === 'true';
                    const status = row.dataset.status;

                    let show = true;

                    if (term && !(name.includes(term) || brand.includes(term) || category.includes(term))) show = false;
                    if (state.category && category !== norm(state.category)) show = false;

                    if (state.stock === 'high' && stock <= lowThreshold) show = false;
                    if (state.stock === 'low' && (stock > lowThreshold || stock === 0)) show = false;
                    if (state.stock === 'out' && stock > 0) show = false;

                    if (state.variant === 'with-variants' && !hasVariants) show = false;
                    if (state.variant === 'without-variants' && hasVariants) show = false;

                    if (state.status !== 'all' && status !== state.status) show = false;

                    row.style.display = show ? '' : 'none';
                });

                // sort visible rows
                const visible = rows.filter(r => r.style.display !== 'none');
                const { by, dir } = state.sort;

                visible.sort((a, b) => {
                    const mult = dir === 'asc' ? 1 : -1;
                    if (by === 'name') {
                        return mult * (a.dataset.name || '').localeCompare(b.dataset.name || '');
                    } else if (by === 'stock') {
                        return mult * (parseInt(a.dataset.stock) - parseInt(b.dataset.stock));
                    } else if (by === 'price') {
                        return mult * ((parseFloat(a.dataset.price) || 0) - (parseFloat(b.dataset.price) || 0));
                    }
                    return 0;
                });

                // re-append in sorted order (only visible)
                visible.forEach(v => tbody.appendChild(v));

                renderPagination();
                updateStatistics();
                persist();
            }

            function renderPagination() {
                const visible = getRows().filter(r => r.style.display !== 'none');
                const total = visible.length;
                const per = state.rowsPerPage;
                const pages = Math.max(1, Math.ceil(total / per));
                state.page = Math.min(state.page, pages);

                // paging
                visible.forEach(r => r.classList.add('hidden-by-page'));
                const start = (state.page - 1) * per;
                const end = start + per;
                visible.slice(start, end).forEach(r => r.classList.remove('hidden-by-page'));
                visible.slice(0, start).forEach(r => r.classList.add('hidden-by-page'));
                visible.slice(end).forEach(r => r.classList.add('hidden-by-page'));

                // controls
                paginationEl.innerHTML = '';
                const addBtn = (label, page, disabled = false, active = false) => {
                    const btn = document.createElement('button');
                    btn.className = 'page-btn' + (active ? ' active' : '');
                    btn.textContent = label;
                    btn.disabled = disabled;
                    btn.addEventListener('click', () => { state.page = page; applyFiltersAndSort(); });
                    paginationEl.appendChild(btn);
                };
                addBtn('«', 1, state.page === 1);
                addBtn('‹', Math.max(1, state.page - 1), state.page === 1);

                const windowSize = 5;
                const half = Math.floor(windowSize / 2);
                let startPage = Math.max(1, state.page - half);
                let endPage = Math.min(pages, startPage + windowSize - 1);
                startPage = Math.max(1, endPage - windowSize + 1);

                for (let p = startPage; p <= endPage; p++) addBtn(String(p), p, false, p === state.page);

                addBtn('›', Math.min(pages, state.page + 1), state.page === pages);
                addBtn('»', pages, state.page === pages);
            }

            function updateStatistics() {
                const rows = getRows().filter(r => r.style.display !== 'none' && !r.classList.contains('hidden-by-page'));
                const allVisible = getRows().filter(r => r.style.display !== 'none');

                const totalProducts = allVisible.length;
                const inStock = allVisible.filter(r => r.dataset.status === 'in-stock').length;
                const lowStock = allVisible.filter(r => r.dataset.status === 'low-stock').length;
                const outStock = allVisible.filter(r => r.dataset.status === 'out-of-stock').length;
                const withVar = allVisible.filter(r => r.dataset.hasVariants === 'true').length;

                qs('#totalProducts').textContent = totalProducts;
                qs('#inStockProducts').textContent = inStock;
                qs('#lowStockProducts').textContent = lowStock;
                qs('#outOfStockProducts').textContent = outStock;
                qs('#variantProducts').textContent = withVar;
            }

            // Events
            searchInput.addEventListener('input', e => { state.search = e.target.value; state.page = 1; applyFiltersAndSort(); });
            categoryFilter.addEventListener('change', e => { state.category = e.target.value; state.page = 1; applyFiltersAndSort(); });
            stockFilter.addEventListener('change', e => { state.stock = e.target.value; state.page = 1; applyFiltersAndSort(); });
            variantFilter.addEventListener('change', e => { state.variant = e.target.value; state.page = 1; applyFiltersAndSort(); });
            rowsPerPageEl.addEventListener('change', e => { state.rowsPerPage = parseInt(e.target.value, 10); state.page = 1; applyFiltersAndSort(); });

            statusPills.forEach(p => p.addEventListener('click', () => {
                statusPills.forEach(x => x.classList.remove('active'));
                p.classList.add('active');
                state.status = p.dataset.status;
                state.page = 1;
                applyFiltersAndSort();
            }));

            // Sorting
            qsa('th.sortable').forEach(th => {
                th.addEventListener('click', () => {
                    const by = th.dataset.sort;
                    if (state.sort.by === by) {
                        state.sort.dir = (state.sort.dir === 'asc') ? 'desc' : 'asc';
                    } else {
                        state.sort.by = by; state.sort.dir = 'asc';
                    }
                    // Update sort icons
                    qsa('th.sortable .sort-indicator i').forEach(i => i.className = 'fas fa-sort');
                    const icon = th.querySelector('.sort-indicator i');
                    icon.className = state.sort.dir === 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down';
                    applyFiltersAndSort();
                });
            });

            // Reset
            resetBtn.addEventListener('click', () => {
                state.search = ''; state.category = ''; state.stock = ''; state.variant = ''; state.status = 'all';
                state.sort = { by: 'name', dir: 'asc' }; state.page = 1;
                searchInput.value = ''; categoryFilter.value = ''; stockFilter.value = ''; variantFilter.value = '';
                statusPills.forEach(p => p.classList.toggle('active', p.dataset.status === 'all'));
                applyFiltersAndSort();
            });

            // Export visible (sin paginar)
            exportCsvBtn.addEventListener('click', () => {
                const visible = getRows().filter(r => r.style.display !== 'none');
                const rows = visible.map(r => {
                    const name = r.querySelector('td:first-child strong')?.textContent?.trim() || '';
                    const cat = r.querySelector('.category-badge')?.textContent?.trim() || '';
                    const brand = r.dataset.brand || '';
                    const stock = r.dataset.stock || '0';
                    const price = r.dataset.price || '0';
                    const type = r.dataset.hasVariants === 'true' ? 'Con variantes' : 'Simple';
                    return [name, cat, brand, stock, price, type];
                });
                const header = ['Nombre', 'Categoría', 'Marca', 'Stock', 'PrecioVenta', 'Tipo'];
                const csv = [header, ...rows].map(a => a.map(x => `"${String(x).replace(/"/g, '""')}"`).join(',')).join('\n');
                const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
                const a = document.createElement('a');
                a.href = URL.createObjectURL(blob);
                a.download = 'productos.csv';
                document.body.appendChild(a); a.click(); a.remove();
            });

            // Variantes modal
            document.addEventListener('click', (e) => {
                const btn = e.target.closest('[data-open-variants]');
                if (!btn) return;
                const pid = btn.getAttribute('data-open-variants');
                openVariantes(pid);
            });

            async function openVariantes(productId) {
                const modalEl = document.getElementById('variantesModal');
                const modalTitle = document.getElementById('variantesModalTitle');
                const content = document.getElementById('variantesContent');

                const row = document.querySelector(`.product-row[data-id="${productId}"]`);
                const name = row?.querySelector('strong')?.textContent || 'Producto';
                modalTitle.textContent = `Variantes de: ${name}`;
                content.innerHTML = '<div class="py-3 text-muted"><i class="fas fa-spinner fa-spin"></i> Cargando...</div>';

                // 1) intentar leer JSON embebido
                let data = [];
                const script = document.getElementById(`variants-${productId}`);
                if (script) {
                    try { data = JSON.parse(script.textContent || '[]'); } catch { data = []; }
                }

                // 2) si no hay embebido, intentar AJAX
                if (!data || data.length === 0) {
                    try {
                        const resp = await fetch(`/Panel/VariantesJson?productoId=${productId}`, { headers: { 'Accept': 'application/json' } });
                        if (resp.ok) data = await resp.json();
                    } catch { /* ignore */ }
                }

                if (!data || data.length === 0) {
                    content.innerHTML = '<div class="py-3 text-muted">No se encontraron variantes.</div>';
                } else {
                    const rows = data.map(v => `
                        <tr>
                            <td>${escapeHtml(v.Color ?? '')}</td>
                            <td>${escapeHtml(v.Talla ?? '')}</td>
                            <td>${(Number(v.PrecioVenta) || 0).toFixed(2)}</td>
                            <td>${v.Stock ?? 0}</td>
                            <td>${escapeHtml(v.SKU ?? '')}</td>
                        </tr>
                    `).join('');
                    content.innerHTML = `
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr><th>Color</th><th>Talla</th><th>Precio</th><th>Stock</th><th>SKU</th></tr>
                            </thead>
                            <tbody>${rows}</tbody>
                        </table>`;
                }

                if (window.bootstrap) {
                    new bootstrap.Modal(modalEl).show();
                } else {
                    modalEl.style.display = 'block';
                }
            }

            function escapeHtml(s) { return String(s).replace(/[&<>"']/g, m => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[m])); }

            // Inicializar
            applyFiltersAndSort();
        })();
    </script>
}

