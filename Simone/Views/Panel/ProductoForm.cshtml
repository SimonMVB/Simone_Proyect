                            <div class="variants-table-container">
                                <table class="variants-table" id="tblVars" aria-live="polite">
                                    <thead>
                                        <tr>
                                            <th>Color</th>
                                            <th>Talla</th>
                                            <th>Precio</th>
                                            <th>Stock</th>
                                            <th>Acciones</th>
