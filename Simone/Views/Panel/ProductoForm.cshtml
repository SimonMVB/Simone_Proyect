                        </div>
                    </div>
                </div>

                <!-- Variantes -->
                @{
                    decimal minVarPrice = 0m, maxVarPrice = 0m;
                    if (hasVariantesInit && variantesInit.Any())
                    {
                        minVarPrice = variantesInit.Min(v => (v.PrecioVenta ?? 0m));
                        maxVarPrice = variantesInit.Max(v => (v.PrecioVenta ?? 0m));
