@model List<Simone.Models.Favorito>

@{
    ViewData["Title"] = "Mis Favoritos";
}

<div class="ui container mt-5">
    <h2 class="ui header">
        <i class="heart icon"></i>
        <div class="content">Mis Productos Favoritos</div>
    </h2>

    @if (!Model.Any())
    {
        <div class="ui message">
            No has agregado productos a favoritos aún.
        </div>
    }
    else
    {
        <div class="ui stackable cards">
            @foreach (var fav in Model)
            {
                <div class="card">
                    <div class="content">
                        <div class="header">@fav.Producto.Nombre</div>
                        <div class="meta">Agregado el @fav.FechaGuardado.ToShortDateString()</div>
                    </div>
                    <div class="extra content">
                        <form method="post" asp-controller="Favoritos" asp-action="Toggle">
                            <input type="hidden" name="id" value="@fav.ProductoId" />
                            <button class="ui red icon button" title="Quitar de favoritos">
                                <i class="heart icon"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
