            padding: 0.75rem 1.25rem;
            background: white;
            color: var(--order-primary);
            border: 2px solid var(--order-primary);
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

            .btn-print:hover,
            .btn-back:hover {
                background: var(--order-primary);
                color: white;
            }

        /* Status Badge */
        .status-badge-large {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.5rem;
            border-radius: 16px;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .badge-pending {
            background: #e3f2fd;
            color: #1565c0;
        }

        .badge-processing {
            background: #fff3e0;
            color: #e65100;
        }

        .badge-shipping {
            background: #e0f2f1;
            color: #00695c;
        }

        .badge-delivered {
            background: #e8f5e9;
            color: #2e7d32;
        }

        .badge-cancelled {
            background: #ffebee;
            color: #c62828;
        }

        .badge-secondary {
            background: #f5f5f5;
            color: #616161;
        }

        /* Info Card */
        .info-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--order-shadow);
            margin-bottom: 2rem;
            animation: slideDown 0.6s ease;
        }

        .info-card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--order-dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .info-card-title i {
                color: var(--order-primary);
            }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .info-item {
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--order-border);
        }

        .info-label {
            font-size: 0.875rem;
            color: #757575;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-size: 1.05rem;
            font-weight: 600;
            color: var(--order-dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .info-value i {
                color: var(--order-primary);
            }

        /* Receipt Card */
        .receipt-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--order-shadow);
            margin-bottom: 2rem;
            animation: slideDown 0.7s ease;
        }

        .receipt-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .receipt-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--order-dark);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .receipt-title i {
