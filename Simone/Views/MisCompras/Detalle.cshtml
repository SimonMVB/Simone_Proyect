@model Simone.Models.Ventas
@using System.Globalization
@using Simone.Models

@{
    ViewData["Title"] = $"Detalle de Venta #{Model.VentaID}";
    ViewData["Description"] = "Información completa de tu pedido en Neo Ágora.";

    var culture = new CultureInfo("es-EC");

    Func<string, (string badge, string icon, string color)> EstadoInfo = e =>
    {
        if (string.IsNullOrWhiteSpace(e)) return ("badge-secondary", "fa-clock", "#6c757d");
        var s = e.Trim().ToLowerInvariant();
        if (s.Contains("pend")) return ("badge-pending", "fa-clock", "#2196f3");
        if (s.Contains("proc") || s.Contains("pago")) return ("badge-processing", "fa-sync-alt", "#ff9800");
        if (s.Contains("desp") || s.Contains("env")) return ("badge-shipping", "fa-shipping-fast", "#00bcd4");
        if (s.Contains("entr") || s.Contains("compl")) return ("badge-delivered", "fa-check-circle", "#4caf50");
        if (s.Contains("canc")) return ("badge-cancelled", "fa-times-circle", "#f44336");
        return ("badge-secondary", "fa-question-circle", "#6c757d");
    };

    var estadoInfo = EstadoInfo(Model.Estado ?? "");

    string BankPretty(string? b)
    {
        if (string.IsNullOrWhiteSpace(b)) return "—";
        var raw = b.Trim();
        var last = raw.Contains(':') ? raw.Split(':').Last() : raw;
        var k = last.ToLowerInvariant();
        return k switch
        {
            "pichincha" => "Banco Pichincha",
            "guayaquil" => "Banco Guayaquil",
            "pacifico" => "Banco del Pacífico",
            "jep" => "Banco JEP",
            _ => CultureInfo.CurrentCulture.TextInfo.ToTitleCase(last)
        };
    }

    var depositante = (ViewBag.Depositante as string);
    var bancoRaw = (ViewBag.Banco as string);
    var urlComprobante = (ViewBag.ComprobanteUrl as string);

    depositante ??= Model?.GetType().GetProperty("DepositanteNombre")?.GetValue(Model, null)?.ToString();
    urlComprobante ??= Model?.GetType().GetProperty("ComprobanteImagenUrl")?.GetValue(Model, null)?.ToString();

    var detalle = Model?.DetalleVentas?.ToList() ?? new List<DetalleVentas>();
    var subtotal = detalle.Sum(d => d.PrecioUnitario * d.Cantidad);
    var descuentos = detalle.Sum(d => d.Descuento ?? 0m);
}

@section Styles {
    <style>
        :root {
            --order-primary: #e91e63;
            --order-primary-light: #f48fb1;
            --order-primary-dark: #c2185b;
            --order-secondary: #9c27b0;
