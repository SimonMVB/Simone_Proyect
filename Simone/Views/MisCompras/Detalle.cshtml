                content: "›";
                margin: 0 0.5rem;
                color: #9e9e9e;
                font-weight: bold;
            }

            .breadcrumb a {
                color: var(--order-primary);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s;
            }

