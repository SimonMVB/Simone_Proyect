<body>
    <!-- Header -->
    <div class="header-gradient">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">Detalle de Venta #@Model.VentaID</h1>
                    <p class="page-subtitle">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Fecha: @Model.FechaVenta.ToString("dd/MM/yyyy") • Hora: @Model.FechaVenta.ToString("HH:mm")
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="action-buttons justify-content-md-end">
                        <button class="btn btn-outline-modern no-print" onclick="window.print()">
                            <i class="fas fa-print"></i> Imprimir
                        </button>
                        <a class="btn btn-primary-modern no-print" href="@Url.Action("Index", "MisCompras")">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5" data-venta-id="@Model.VentaID">
        <div class="row g-4 mb-4">
            <!-- Información -->
            <div class="col-12 col-lg-8">
                <div class="card-modern h-100">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle"></i>Información de la Venta
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Método de Pago</div>
                            <div class="info-value d-flex align-items-center gap-2">
                                @if (!string.IsNullOrWhiteSpace(Model.MetodoPago))
                                {
                                    var mp = Model.MetodoPago.ToLowerInvariant();
                                    var icon = mp.Contains("tarjeta") ? "fa-credit-card"
                                    : mp.Contains("efectivo") ? "fa-money-bill"
                                    : (mp.Contains("transfer") || mp.Contains("dep")) ? "fa-university"
                                    : "fa-wallet";
                                    <i class="fas @icon text-primary"></i>
                                    @Model.MetodoPago
                                }
                                else
                                {
                                    <i class="fas fa-question-circle text-muted"></i>
                                    <span>—</span>
                                }
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Estado</div>
                            <div>
                                <span class="status-badge @estadoInfo.badge" style="border-left-color: @estadoInfo.color">
                                    <i class="@estadoInfo.icon"></i>@(Model.Estado ?? "—")
                                </span>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Depositante</div>
                            <div class="info-value"><span id="depositanteVal">@(!string.IsNullOrWhiteSpace(depositante) ? depositante : "—")</span></div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Banco</div>
                            <div class="info-value"><span id="bancoVal">@BankPretty(bancoRaw)</span></div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Subtotal</div>
                            <div class="info-value">@subtotal.ToString("C", culture)</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Descuentos</div>
                            <div class="info-value text-danger">-@descuentos.ToString("C", culture)</div>
                        </div>

                        <div class="info-item" style="grid-column: span 2;">
                            <div class="info-label">Total</div>
                            <div class="info-value" style="font-size: 1.5rem; color: var(--primary);">@Model.Total.ToString("C", culture)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comprobante -->
            <div class="col-12 col-lg-4">
                <div class="card-modern h-100">
                    <div class="card-header-modern d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-receipt"></i>Comprobante</div>
                        <div id="compBtns" class="btn-group @(string.IsNullOrWhiteSpace(urlComprobante) ? "d-none" : "") no-print">
                            <a id="compLink" href="@urlComprobante" target="_blank" class="btn btn-sm btn-outline-modern" title="Ver comprobante">
                                <i class="fas fa-external-link-alt"></i>
                            </a>
                            <a id="compDownload" href="@urlComprobante" download="comprobante-venta-@Model.VentaID" class="btn btn-sm btn-outline-modern" title="Descargar comprobante">
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </div>

                    <div class="comprobante-container">
                        @if (!string.IsNullOrWhiteSpace(urlComprobante))
                        {
                            if (urlComprobante.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                            {
                                <iframe class="comprobante-pdf" src="@urlComprobante#toolbar=0" title="Comprobante PDF"></iframe>
                                <div class="mt-3">
                                    <a href="@urlComprobante" target="_blank" class="btn btn-outline-modern btn-sm">
                                        <i class="fas fa-external-link-alt me-2"></i>Abrir PDF
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a href="@urlComprobante" target="_blank" title="Ver comprobante en tamaño completo">
                                    <img class="comprobante-img" src="@urlComprobante" alt="Comprobante de la venta @Model.VentaID" />
                                </a>
                                <div class="mt-3 text-muted">
                                    <i class="fas fa-search-plus me-2"></i>Haga clic en la imagen para ampliar
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="fas fa-image"></i>
                                <h5>No hay comprobante adjunto</h5>
                                <p class="text-muted mt-2">Si lo subiste recientemente, espera unos segundos o recarga la página.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos -->
        <div class="card-modern mb-4">
            <div class="card-header-modern">
                <i class="fas fa-shopping-bag"></i>Productos (@detalle.Count)
            </div>
            <div class="table-responsive">
                <table class="table table-modern">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unit.</th>
                            <th class="text-end">Descuento</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var det in detalle)
                        {
                            var sub = det.Subtotal ?? ((det.PrecioUnitario * det.Cantidad) - (det.Descuento ?? 0m));
                            var productImage = det.Producto?.ImagenPath ?? "/images/product-placeholder.png";
                            <tr>
                                <td>
                                    <div class="product-info">
                                        <img src="@productImage" alt="@det.Producto?.Nombre" class="product-img" loading="lazy">
                                        <div>
                                            <div class="product-name">@det.Producto?.Nombre</div>
                                            @if (!string.IsNullOrEmpty(det.Producto?.Descripcion))
                                            {
                                                <div class="product-desc">@det.Producto.Descripcion</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center"><span class="badge bg-primary rounded-pill">@det.Cantidad</span></td>
                                <td class="text-end">@det.PrecioUnitario.ToString("C", culture)</td>
                                <td class="text-end text-danger">@((det.Descuento ?? 0m).ToString("C", culture))</td>
                                <td class="text-end fw-bold">@sub.ToString("C", culture)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Totales -->
        <div class="row justify-content-end">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="total-display">
                    <div class="row g-2">
                        <div class="col-8 fw-semibold">Subtotal:</div>
                        <div class="col-4 text-end">@subtotal.ToString("C", culture)</div>

                        <div class="col-8 fw-semibold">Descuentos:</div>
                        <div class="col-4 text-end text-danger">-@descuentos.ToString("C", culture)</div>

                        <hr class="my-3" />
                        <div class="col-8 fw-bold fs-5">Total:</div>
                        <div class="col-4 text-end fw-bold fs-5 text-primary">@Model.Total.ToString("C", culture)</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="card-modern mt-4">
            <div class="card-header-modern"><i class="fas fa-clock"></i>Progreso de la Venta</div>
            <div class="timeline-container">
                <div class="timeline">
                    @{
                        var estados = new[] {
                                        ("Pendiente","fas fa-clock","Esperando confirmación de pago"),
                                        ("Procesando","fas fa-cog","Verificando información"),
                                        ("Despachando","fas fa-shipping-fast","Preparando envío"),
                                        ("Entregado","fas fa-check-circle","Pedido completado")
                                        };
                        var estadoActual = Model.Estado?.ToLowerInvariant() ?? "";
                        var estadoIndex = estadoActual.Contains("pend") ? 0
                        : (estadoActual.Contains("proc") || estadoActual.Contains("pago")) ? 1
                        : (estadoActual.Contains("desp") || estadoActual.Contains("env")) ? 2
                        : (estadoActual.Contains("entr") || estadoActual.Contains("compl")) ? 3
                        : -1;
                    }
                    @for (int i = 0; i < estados.Length; i++)
                    {
                        var stepClass = i < estadoIndex ? "completed" : (i == estadoIndex ? "active" : "future");
                        <div class="timeline-step @stepClass">
                            <div class="step-title"><i class="@estados[i].Item2 me-2"></i>@estados[i].Item1</div>
                            <div class="step-status">
                                @if (i < estadoIndex)
                                {
                                    <i class="fas fa-check-circle text-success me-1"></i>
                                    <span>Completado</span>
                                }
                                else if (i == estadoIndex)
                                {
                                    <i class="fas fa-spinner text-primary me-1"></i>
                                    <span>En progreso - @estados[i].Item3</span>
                                }
                                else
                                {
                                    <i class="fas fa-clock text-muted me-1"></i>
                                    <span>Pendiente - @estados[i].Item3</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Acciones -->
        <div class="action-buttons mt-4 no-print">
            <a class="btn btn-outline-modern" href="@Url.Action("Index", "MisCompras")">
                <i class="fas fa-arrow-left me-2"></i>Volver a mis compras
            </a>
            <a id="btnDescargar" class="btn btn-primary-modern @(string.IsNullOrWhiteSpace(urlComprobante) ? "d-none" : "")"
               href="@urlComprobante" download="comprobante-venta-@Model.VentaID">
                <i class="fas fa-download me-2"></i>Descargar comprobante
            </a>
            <button class="btn btn-outline-modern ms-auto" onclick="window.print()">
                <i class="fas fa-print me-2"></i>Imprimir
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function(){
            const ventaId = document.querySelector('.container[data-venta-id]')?.getAttribute('data-venta-id');
            const baseFolder = '@Url.Content("~/uploads/comprobantes")';
            const baseUrl = `${baseFolder}/venta-${ventaId}`;
            const tryExts = ['.jpg','.png','.jpeg','.webp','.pdf'];

            const compContainer = document.querySelector('.comprobante-container');
            const compBtns      = document.getElementById('compBtns');
            const compLink      = document.getElementById('compLink');
            const compDownload  = document.getElementById('compDownload');
            const btnDescargar  = document.getElementById('btnDescargar');

            const depSpan  = document.getElementById('depositanteVal');
            const bankSpan = document.getElementById('bancoVal');

            const hasServerUrl = !!('@(urlComprobante ?? "")');

            async function headOk(url){
                try{
                    const r = await fetch(url, { method:'HEAD', cache:'no-store' });
                    return r.ok;
                }catch{ return false; }
            }

            function bankPretty(s){
                if(!s) return '';
                const raw = String(s).trim();
                const last = raw.includes(':') ? raw.split(':').pop() : raw;
                const k = last.toLowerCase();
                const map = { pichincha:'Banco Pichincha', guayaquil:'Banco Guayaquil', pacifico:'Banco del Pacífico', jep:'Banco JEP' };
                return map[k] || last.charAt(0).toUpperCase() + last.slice(1);
            }

            function bankFromMeta(meta){
                if (!meta) return '';
                // Puede venir:
                //  - meta.banco: "pichincha"
                //  - meta.bancoSeleccion: "admin:pichincha"
                //  - meta.bancoSeleccion: { banco:{ nombre,codigo,... } }  (ConfirmarCompra)
                const bs = meta.bancoSeleccion ?? meta.BancoSeleccion ?? meta.banco ?? meta.Banco;
                if (!bs) return '';

                if (typeof bs === 'string'){
                    return bankPretty(bs);
                }
                // objeto
                const bobj = bs.banco ?? bs;
                return bankPretty(bobj.nombre || bobj.codigo || bobj.valor || '');
            }

            function renderComprobante(url){
                if (!compContainer) return;
                compContainer.innerHTML = '';
                if (url.toLowerCase().endsWith('.pdf')){
                    const ifr = document.createElement('iframe');
                    ifr.className = 'comprobante-pdf';
                    ifr.title = 'Comprobante PDF';
                    ifr.src = `${url}#toolbar=0`;
                    compContainer.appendChild(ifr);

                    const linkDiv = document.createElement('div');
                    linkDiv.className = 'mt-3';
                    const link = document.createElement('a');
                    link.href = url; link.target = '_blank';
                    link.className = 'btn btn-outline-modern btn-sm';
                    link.innerHTML = '<i class="fas fa-external-link-alt me-2"></i>Abrir PDF';
                    linkDiv.appendChild(link);
                    compContainer.appendChild(linkDiv);
                }else{
                    const a = document.createElement('a');
                    a.href = url; a.target = '_blank';
                    a.title = 'Ver comprobante en tamaño completo';
                    const img = document.createElement('img');
                    img.className = 'comprobante-img';
                    img.alt = `Comprobante de la venta ${ventaId}`;
                    img.src = url;
                    a.appendChild(img);
                    compContainer.appendChild(a);
                    const tip = document.createElement('div');
                    tip.className = 'mt-3 text-muted';
                    tip.innerHTML = '<i class="fas fa-search-plus me-2"></i>Haga clic en la imagen para ampliar';
                    compContainer.appendChild(tip);
                }
                if (compBtns){
                    compBtns.classList.remove('d-none');
                    if (compLink) compLink.href = url;
                    if (compDownload) compDownload.href = url;
                }
                if (btnDescargar){
                    btnDescargar.classList.remove('d-none');
                    btnDescargar.href = url;
                }
            }

            async function tryDetectEverything(){
                // 1) Comprobante (si el servidor no lo puso)
                if (!hasServerUrl){
                    for (const ext of tryExts){
                        const url = `${baseUrl}${ext}`;
                        if (await headOk(url)){ renderComprobante(url); break; }
                    }
                }

                // 2) Metadatos (si faltan en la vista)
                const needDep  = !depSpan || depSpan.textContent.trim() === '—' || depSpan.textContent.trim() === '';
                const needBank = !bankSpan || bankSpan.textContent.trim() === '—' || bankSpan.textContent.trim() === '';

                if (needDep || needBank){
                    try{
                        const r = await fetch(`${baseUrl}.meta.json`, { cache:'no-store' });
                        if (r.ok){
                            const meta = await r.json();
                            if (needDep){
                                const dep = (meta.depositante ?? meta.Depositante ?? meta.nombreDepositante ?? '').toString().trim();
                                if (dep && depSpan) depSpan.textContent = dep;
                            }
                            if (needBank){
                                const pretty = bankFromMeta(meta);
                                if (pretty && bankSpan) bankSpan.textContent = pretty;
                            }
                        }
                    }catch{}
                }
            }

            tryDetectEverything();
        })();
    </script>
</body>
</html>