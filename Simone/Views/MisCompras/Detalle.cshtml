            --order-success: #4caf50;
            --order-warning: #ff9800;
            --order-danger: #f44336;
            --order-info: #2196f3;
            --order-dark: #212121;
            --order-text: #424242;
            --order-light: #fafafa;
            --order-white: #ffffff;
            --order-border: #e0e0e0;
            --order-shadow: 0 8px 32px rgba(233, 30, 99, 0.15);
