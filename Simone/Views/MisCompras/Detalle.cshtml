                    color: var(--order-primary-dark);
                }

            .breadcrumb .active {
                color: var(--order-text);
                font-weight: 600;
            }

        /* Page Header */
        .page-header {
            background: white;
            padding: 2.5rem;
            border-radius: 24px;
            box-shadow: var(--order-shadow-lg);
            margin-bottom: 2rem;
            animation: zoomIn 0.5s ease;
        }

        @@keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .page-header-top {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 1.5rem;
        }

        .page-title-section h1 {
            font-size: 2rem;
            font-weight: 800;
            color: var(--order-dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .page-title-section h1 i {
                color: var(--order-primary);
            }

        .page-subtitle {
            color: #757575;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn-print,
