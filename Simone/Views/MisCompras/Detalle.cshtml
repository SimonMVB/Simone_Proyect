        .summary-card {
            background: linear-gradient(135deg, var(--order-light) 0%, #e8e8e8 100%);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--order-shadow);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            font-size: 1rem;
        }

            .summary-row.total {
                padding-top: 1.5rem;
                margin-top: 1.5rem;
                border-top: 3px solid var(--order-border);
                font-size: 1.5rem;
                font-weight: 800;
            }

        .summary-label {
            font-weight: 600;
        }

        .summary-value {
            font-weight: 700;
        }

            .summary-value.total {
