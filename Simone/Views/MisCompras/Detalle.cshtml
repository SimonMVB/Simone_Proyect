            }

        .receipt-container {
            text-align: center;
        }

        .receipt-img {
            max-width: 100%;
            max-height: 400px;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            transition: all 0.3s;
        }

            .receipt-img:hover {
                transform: scale(1.02);
                box-shadow: 0 12px 32px rgba(0,0,0,0.15);
            }

        .receipt-pdf {
            width: 100%;
            height: 500px;
            border: none;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        }

        .empty-receipt {
            padding: 3rem 2rem;
            text-align: center;
        }

        .empty-icon {
            width: 100px;
            height: 100px;
            background: var(--order-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 3rem;
            color: #bdbdbd;
        }

        /* Products Table */
        .products-card {
            background: white;
            border-radius: 20px;
            box-shadow: var(--order-shadow);
            overflow: hidden;
            margin-bottom: 2rem;
            animation: slideDown 0.8s ease;
        }

        .products-header {
            background: linear-gradient(90deg, var(--order-primary) 0%, var(--order-secondary) 100%);
            padding: 1.5rem 2rem;
            color: white;
        }

        .products-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .products-table {
            width: 100%;
        }

            .products-table thead th {
                background: var(--order-light);
                padding: 1.25rem 1.5rem;
                font-weight: 700;
                font-size: 0.875rem;
                text-transform: uppercase;
                color: var(--order-dark);
                border-bottom: 2px solid var(--order-border);
            }

            .products-table tbody td {
                padding: 1.5rem;
                border-bottom: 1px solid var(--order-border);
                vertical-align: middle;
            }

            .products-table tbody tr:hover {
                background: rgba(233, 30, 99, 0.05);
            }

        .product-info {
            display: flex;
            align-items: center;
            gap: 1.25rem;
