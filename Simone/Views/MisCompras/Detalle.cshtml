            }

        /* Timeline */
        .timeline-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--order-shadow);
            margin-bottom: 2rem;
            animation: slideDown 0.9s ease;
        }

        .timeline-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--order-dark);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .timeline-title i {
                color: var(--order-primary);
            }

        .timeline {
            position: relative;
            padding-left: 3rem;
        }

            .timeline::before {
                content: '';
                position: absolute;
                left: 20px;
                top: 0;
                bottom: 0;
                width: 4px;
                background: var(--order-border);
                border-radius: 4px;
            }

        .timeline-step {
            position: relative;
            margin-bottom: 2.5rem;
        }

            .timeline-step:last-child {
                margin-bottom: 0;
            }

            .timeline-step::before {
                content: '';
                position: absolute;
                left: -2.85rem;
                top: 0;
                width: 24px;
                height: 24px;
                border-radius: 50%;
                background: white;
                border: 4px solid var(--order-border);
                z-index: 1;
            }

            .timeline-step.completed::before {
                border-color: var(--order-success);
                background: var(--order-success);
            }

            .timeline-step.active::before {
                border-color: var(--order-primary);
                background: var(--order-primary);
                box-shadow: 0 0 0 6px rgba(233, 30, 99, 0.2);
                animation: pulse 2s infinite;
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        .step-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
        }

        .step-title {
            font-weight: 700;
            font-size: 1.1rem;
            color: var(--order-dark);
        }

        .step-status {
            font-size: 0.875rem;
            color: #757575;
        }

            .step-status i {
                margin-right: 0.25rem;
            }

        /* Responsive */
        @@media (max-width: 991px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .page-header-top {
                flex-direction: column;
                gap: 1.5rem;
            }

            .header-actions {
                width: 100%;
            }

                .header-actions button,
                .header-actions a {
                    flex: 1;
                }
        }

        @@media (max-width: 575px) {
            .page-header {
                padding: 1.5rem;
            }

            .info-card,
            .receipt-card,
            .timeline-card {
                padding: 1.5rem;
            }

            .products-table thead th,
            .products-table tbody td {
                padding: 1rem;
                font-size: 0.875rem;
            }

            .product-info {
                flex-direction: column;
                text-align: center;
            }

            .timeline {
                padding-left: 2.5rem;
            }

            .timeline-step::before {
                left: -2.35rem;
            }
        }

        /* Print Styles */
        @@media print {
            .no-print {
                display: none !important;
            }

            .order-detail-page {
                background: white;
            }

            .order-breadcrumb,
            .page-header,
            .info-card,
            .receipt-card,
            .products-card,
            .timeline-card {
                box-shadow: none;
                border: 1px solid #ddd;
            }
        }

        /* Alert */
        .alert {
            border-radius: 12px;
            padding: 1rem 1.25rem;
            margin-bottom: 2rem;
            border: none;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .alert-info {
            background: #e3f2fd;
            color: #1565c0;
        }

        /* Focus Visible */
        button:focus-visible,
        a:focus-visible {
            outline: 3px solid var(--order-primary);
            outline-offset: 2px;
        }

        /* Reduced Motion */
        @@media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
}

<div class="order-detail-page">
    <div class="order-container">
        <!-- Breadcrumb -->
        <nav class="order-breadcrumb" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa-solid fa-house"></i>
                        Inicio
                    </a>
                </li>
                
                <li>
                    <a href="@Url.Action("Index", "MisCompras")">Mis Compras</a>
                </li>
                <li class="active" aria-current="page">Pedido #@Model.VentaID</li>
            </ol>
        </nav>

        <!-- Page Header -->
        <div class="page-header">
            <div class="page-header-top">
                <div class="page-title-section">
                    <h1>
                        <i class="fa-solid fa-receipt"></i>
                        Pedido #@Model.VentaID
                    </h1>
                    <p class="page-subtitle">
                        <i class="fa-solid fa-calendar-alt"></i>
                        @Model.FechaVenta.ToString("dd/MM/yyyy") • @Model.FechaVenta.ToString("HH:mm")
                    </p>
                </div>
                <div class="header-actions no-print">
                    <button class="btn-print" onclick="window.print()">
                        <i class="fa-solid fa-print"></i>
                        <span>Imprimir</span>
                    </button>
                    <a class="btn-back" href="@Url.Action("Index", "MisCompras")">
                        <i class="fa-solid fa-arrow-left"></i>
                        <span>Volver</span>
                    </a>
                </div>
            </div>

            <!-- Status Badge -->
            <div>
                <span class="status-badge-large @estadoInfo.badge">
                    <i class="fa-solid @estadoInfo.icon"></i>
                    <span>@(Model.Estado ?? "Pendiente")</span>
                </span>
            </div>
        </div>

        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Order Info -->
                <div class="info-card">
                    <h2 class="info-card-title">
                        <i class="fa-solid fa-circle-info"></i>
                        Información del Pedido
                    </h2>

                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Método de Pago</div>
                            <div class="info-value">
                                @{
                                    var mp = (Model.MetodoPago ?? "").ToLowerInvariant();
                                    var icon = mp.Contains("tarjeta") ? "fa-credit-card"
                                    : mp.Contains("efectivo") ? "fa-money-bill"
                                    : (mp.Contains("transfer") || mp.Contains("dep")) ? "fa-university"
                                    : "fa-wallet";
                                }
                                <i class="fa-solid @icon"></i>
                                <span>@(!string.IsNullOrWhiteSpace(Model.MetodoPago) ? Model.MetodoPago : "—")</span>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Depositante</div>
                            <div class="info-value" id="depositanteVal">
                                @(!string.IsNullOrWhiteSpace(depositante) ? depositante : "—")
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Banco</div>
                            <div class="info-value" id="bancoVal">
                                @BankPretty(bancoRaw)
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Total</div>
                            <div class="info-value">
                                <span style="color: var(--order-primary); font-size: 1.25rem;">
                                    @Model.Total.ToString("C", culture)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products -->
                <div class="products-card">
                    <div class="products-header">
                        <h2 class="products-title">
                            <i class="fa-solid fa-shopping-bag"></i>
                            Productos (@detalle.Count)
                        </h2>
                    </div>

                    <div class="table-responsive">
                        <table class="products-table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-end">Descuento</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var det in detalle)
                                {
                                    var sub = det.Subtotal ?? ((det.PrecioUnitario * det.Cantidad) - (det.Descuento ?? 0m));
                                    var productImage = det.Producto?.ImagenPath ?? "/images/product-placeholder.png";
                                    <tr>
                                        <td>
                                            <div class="product-info">
                                                <img src="@productImage" alt="@det.Producto?.Nombre" class="product-img" />
                                                <div class="product-details">
                                                    <div class="product-name">@det.Producto?.Nombre</div>
                                                    @if (!string.IsNullOrEmpty(det.Producto?.Descripcion))
                                                    {
                                                        <div class="product-desc">@det.Producto.Descripcion</div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="quantity-badge">@det.Cantidad</span>
                                        </td>
                                        <td class="text-end">@det.PrecioUnitario.ToString("C", culture)</td>
                                        <td class="text-end" style="color: var(--order-danger);">
                                            @((det.Descuento ?? 0m).ToString("C", culture))
                                        </td>
                                        <td class="text-end" style="font-weight: 700;">
                                            @sub.ToString("C", culture)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Timeline -->
                <div class="timeline-card">
                    <h2 class="timeline-title">
                        <i class="fa-solid fa-clock-rotate-left"></i>
                        Estado del Pedido
                    </h2>

                    <div class="timeline">
                        @{
                            var estados = new[] {
                                                ("Pendiente", "fa-clock", "Esperando confirmación de pago"),
                                                ("Procesando", "fa-cog", "Verificando información y pago"),
                                                ("Despachando", "fa-shipping-fast", "Preparando tu pedido para envío"),
                                                ("Entregado", "fa-check-circle", "Pedido completado exitosamente")
                                                };
                            var estadoActual = (Model.Estado ?? "").ToLowerInvariant();
                            var estadoIndex = estadoActual.Contains("pend") ? 0
                            : (estadoActual.Contains("proc") || estadoActual.Contains("pago")) ? 1
                            : (estadoActual.Contains("desp") || estadoActual.Contains("env")) ? 2
                            : (estadoActual.Contains("entr") || estadoActual.Contains("compl")) ? 3
                            : -1;
                        }
                        @for (int i = 0; i < estados.Length; i++)
                        {
                            var stepClass = i < estadoIndex ? "completed" : (i == estadoIndex ? "active" : "future");
                            <div class="timeline-step @stepClass">
                                <div class="step-header">
                                    <i class="fa-solid @estados[i].Item2" style="font-size: 1.25rem; color: var(--order-primary);"></i>
                                    <div class="step-title">@estados[i].Item1</div>
                                </div>
                                <div class="step-status">
                                    @if (i < estadoIndex)
                                    {
                                        <i class="fa-solid fa-check-circle" style="color: var(--order-success);"></i>
                                        <span>Completado</span>
                                    }
                                    else if (i == estadoIndex)
                                    {
                                        <i class="fa-solid fa-spinner fa-spin" style="color: var(--order-primary);"></i>
                                        <span>En progreso - @estados[i].Item3</span>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-clock" style="color: #bdbdbd;"></i>
                                        <span>Pendiente</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Receipt -->
                <div class="receipt-card" data-venta-id="@Model.VentaID">
                    <div class="receipt-header">
                        <h2 class="receipt-title">
                            <i class="fa-solid fa-file-invoice"></i>
                            Comprobante
                        </h2>
                        <div class="receipt-actions" id="receiptActions" style="@(string.IsNullOrWhiteSpace(urlComprobante) ? "display: none;" : "")">
                            <a href="@urlComprobante" target="_blank" class="btn-icon" id="receiptLink" title="Ver comprobante">
                                <i class="fa-solid fa-external-link-alt"></i>
                            </a>
                            <a href="@urlComprobante" download class="btn-icon" id="receiptDownload" title="Descargar">
                                <i class="fa-solid fa-download"></i>
                            </a>
                        </div>
                    </div>

                    <div class="receipt-container" id="receiptContainer">
                        @if (!string.IsNullOrWhiteSpace(urlComprobante))
                        {
                            if (urlComprobante.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                            {
                                <iframe class="receipt-pdf" src="@urlComprobante#toolbar=0" title="Comprobante PDF"></iframe>
                            }
                            else
                            {
                                <a href="@urlComprobante" target="_blank">
                                    <img class="receipt-img" src="@urlComprobante" alt="Comprobante" />
                                </a>
                            }
                        }
                        else
                        {
                            <div class="empty-receipt">
                                <div class="empty-icon">
                                    <i class="fa-solid fa-file-image"></i>
                                </div>
                                <h5 style="font-weight: 700; margin-bottom: 0.5rem;">Sin comprobante</h5>
                                <p style="color: #757575; font-size: 0.875rem; margin: 0;">
                                    No hay comprobante adjunto
                                </p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Summary -->
                <div class="summary-card">
                    <div class="summary-row">
                        <span class="summary-label">Subtotal:</span>
                        <span class="summary-value">@subtotal.ToString("C", culture)</span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Descuentos:</span>
                        <span class="summary-value" style="color: var(--order-danger);">
                            -@descuentos.ToString("C", culture)
                        </span>
                    </div>
                    <div class="summary-row total">
                        <span class="summary-label">Total:</span>
                        <span class="summary-value total">@Model.Total.ToString("C", culture)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            'use strict';

            const ventaId = '@Model.VentaID';
            const baseFolder = '@Url.Content("~/uploads/comprobantes")';
            const baseUrl = `${baseFolder}/venta-${ventaId}`;
            const tryExts = ['.jpg', '.png', '.jpeg', '.webp', '.pdf'];

            const receiptContainer = document.getElementById('receiptContainer');
            const receiptActions = document.getElementById('receiptActions');
            const receiptLink = document.getElementById('receiptLink');
            const receiptDownload = document.getElementById('receiptDownload');
            const depositanteVal = document.getElementById('depositanteVal');
            const bancoVal = document.getElementById('bancoVal');

            const hasServerUrl = !!('@(urlComprobante ?? "")');

            async function headOk(url) {
                try {
                    const r = await fetch(url, { method: 'HEAD', cache: 'no-store' });
                    return r.ok;
                } catch {
                    return false;
                }
            }

            function bankPretty(s) {
                if (!s) return '';
                const raw = String(s).trim();
                const last = raw.includes(':') ? raw.split(':').pop() : raw;
                const k = last.toLowerCase();
                const map = {
                    pichincha: 'Banco Pichincha',
                    guayaquil: 'Banco Guayaquil',
                    pacifico: 'Banco del Pacífico',
                    jep: 'Banco JEP'
                };
                return map[k] || last.charAt(0).toUpperCase() + last.slice(1);
            }

            function renderReceipt(url) {
                if (!receiptContainer) return;

                receiptContainer.innerHTML = '';

                if (url.toLowerCase().endsWith('.pdf')) {
                    const iframe = document.createElement('iframe');
                    iframe.className = 'receipt-pdf';
                    iframe.title = 'Comprobante PDF';
                    iframe.src = `${url}#toolbar=0`;
                    receiptContainer.appendChild(iframe);
                } else {
                    const a = document.createElement('a');
                    a.href = url;
                    a.target = '_blank';

                    const img = document.createElement('img');
                    img.className = 'receipt-img';
                    img.alt = 'Comprobante';
                    img.src = url;

                    a.appendChild(img);
                    receiptContainer.appendChild(a);
                }

                if (receiptActions) receiptActions.style.display = 'flex';
                if (receiptLink) receiptLink.href = url;
                if (receiptDownload) receiptDownload.href = url;
            }

            async function detectEverything() {
                // Detect receipt if not provided by server
                if (!hasServerUrl) {
                    for (const ext of tryExts) {
                        const url = `${baseUrl}${ext}`;
                        if (await headOk(url)) {
                            renderReceipt(url);
                            break;
                        }
                    }
                }

                // Detect metadata
                const needDep = !depositanteVal || depositanteVal.textContent.trim() === '—';
                const needBank = !bancoVal || bancoVal.textContent.trim() === '—';

                if (needDep || needBank) {
                    try {
                        const r = await fetch(`${baseUrl}.meta.json`, { cache: 'no-store' });
                        if (r.ok) {
                            const meta = await r.json();

                            if (needDep) {
                                const dep = (meta.depositante || meta.Depositante || meta.nombreDepositante || '').toString().trim();
                                if (dep && depositanteVal) depositanteVal.textContent = dep;
                            }

                            if (needBank) {
                                const bs = meta.bancoSeleccion || meta.BancoSeleccion || meta.banco || meta.Banco;
                                if (bs) {
                                    let pretty = '';
                                    if (typeof bs === 'string') {
                                        pretty = bankPretty(bs);
                                    } else {
                                        const bobj = bs.banco || bs;
                                        pretty = bankPretty(bobj.nombre || bobj.codigo || bobj.valor || '');
                                    }
                                    if (pretty && bancoVal) bancoVal.textContent = pretty;
                                }
                            }
                        }
                    } catch {}
                }
            }

            detectEverything();
            console.log('✓ Order detail initialized');
        })();
    </script>
}
