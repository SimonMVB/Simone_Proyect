@model List<Simone.Models.Ventas>
@using System.Globalization

@{
    ViewData["Title"] = "Mis Compras";

    // === helpers ===
    Func<string?, string> EstadoBadge = estado =>
    {
        if (string.IsNullOrWhiteSpace(estado)) return "st-secondary";
        var e = estado.Trim().ToLowerInvariant();
        if (e.Contains("pend")) return "st-secondary";                // pendiente
        if (e.Contains("proc") || e.Contains("pago")) return "st-warn"; // procesando/pago
        if (e.Contains("desp") || e.Contains("env")) return "st-info";  // despachando/enviado
        if (e.Contains("entr") || e.Contains("compl")) return "st-ok";  // entregado/completada
        if (e.Contains("canc")) return "st-danger";                    // cancelado
        return "st-secondary";
    };

    var culture = new CultureInfo("es-EC");
    var compras = Model ?? new List<Simone.Models.Ventas>();
    var totalCompras = compras.Count;
    var totalGastado = compras.Sum(v => v.Total);
    var ticketPromedio = totalCompras > 0 ? totalGastado / totalCompras : 0m;
    var ultimaCompra = compras.OrderByDescending(v => v.FechaVenta).FirstOrDefault()?.FechaVenta;
    var metodoMasUsado = compras
        .Where(v => !string.IsNullOrWhiteSpace(v.MetodoPago))
        .GroupBy(v => v.MetodoPago!.Trim())
        .OrderByDescending(g => g.Count())
        .FirstOrDefault()?.Key ?? "—";

    // Estados únicos para filtro
    var estados = compras
        .Select(v => v.Estado)
        .Where(s => !string.IsNullOrWhiteSpace(s))
        .Select(s => s!.Trim())
        .Distinct(StringComparer.OrdinalIgnoreCase)
        .OrderBy(s => s)
        .ToList();
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

<style>
    /* ======= Paleta y tipografía (misma del catálogo) ======= */
    :root {
        --primary-dark: #2C2C2C;
        --primary-light: #FFFFFF;
        --accent-pink: #E8B4B8;
        --accent-pink-dark: #D49A9F;
        --accent-purple: #8A6B8F;
        --accent-gold: #D4AF37;
        --light-beige: #F8F4F0;
        --medium-gray: #E8E8E8;
        --dark-gray: #5A5A5A;
        --text: #5A5A5A;
        --text-light: #8A8A8A;
        --shadow: 0 6px 18px rgba(0,0,0,.06);
        --shadow-lg: 0 12px 32px rgba(0,0,0,.10);
    }

    * {
        font-family: 'Montserrat',system-ui,-apple-system,Segoe UI,Roboto,sans-serif
    }

    body {
        background: var(--light-beige);
        color: var(--text)
    }

    .page-title {
        font-weight: 800;
        letter-spacing: .2px
    }

    .subtle {
        color: var(--text-light)
    }

    /* ======= Métricas ======= */
    .stats {
        display: grid;
        grid-template-columns: repeat(5,minmax(0,1fr));
        gap: 14px;
        margin-bottom: 16px
    }

    .card-stat {
        background: #fff;
        border: 1px solid var(--medium-gray);
        border-radius: 14px;
        box-shadow: var(--shadow);
        padding: 14px 16px
    }

        .card-stat .label {
            font-size: .8rem;
            color: var(--text-light);
            display: flex;
            align-items: center;
            gap: 8px
        }

        .card-stat .value {
            font-size: 1.25rem;
            font-weight: 800
        }

        .card-stat i {
            color: var(--accent-purple)
        }

    /* ======= Toolbar ======= */
    .toolbar {
        position: sticky;
        top: 64px;
        z-index: 3;
        background: #fff;
        border: 1px solid var(--medium-gray);
        border-radius: 14px;
        box-shadow: var(--shadow);
        padding: 14px 16px;
        margin-bottom: 16px;
        backdrop-filter: blur(6px)
    }

    .input-icon {
        position: relative
    }

        .input-icon > i {
            position: absolute;
            left: .85rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9aa1a7
        }

        .input-icon > input {
            padding-left: 2.2rem
        }

    /* ======= Tabla ======= */
    .table-wrap {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--shadow-lg)
    }

    .thead-brand th {
        background: linear-gradient(90deg,var(--accent-pink) 0%, var(--accent-purple) 100%);
        color: #fff;
        border: none;
        font-weight: 700
    }

    .table-hover tbody tr:hover {
        background: rgba(232,180,184,.07)
    }

    .table-nowrap td, .table-nowrap th {
        white-space: nowrap
    }

    /* ======= Pills de estado ======= */
    .status-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border-radius: 999px;
        padding: .35rem .6rem;
        font-weight: 700;
        font-size: .80rem
    }

    .st-secondary {
        background: #f1f3f5;
        color: #495057
    }

    .st-warn {
        background: #fff4e6;
        color: #ad6800
    }

    .st-info {
        background: #e7f5ff;
        color: #0b7285
    }

    .st-ok {
        background: #e6fcf5;
        color: #087f5b
    }

    .st-danger {
        background: #ffe3e3;
        color: #c92a2a
    }

    /* ======= Botón marca ======= */
    .btn-brand {
        background: var(--accent-pink);
        border: none;
        color: #fff
    }

        .btn-brand:hover {
            background: var(--accent-pink-dark);
            color: #fff
        }

    .empty-state {
        border: 1px dashed var(--medium-gray);
        border-radius: 12px;
        background: #fff;
        padding: 22px
    }

    /* Responsive */
    @@media(max - width:1200px) {
        .stats

    {
        grid-template-columns: repeat(3,1fr)
    }

    }

    @@media(max - width:768px) {
        .stats

    {
        grid-template-columns: repeat(2,1fr)
    }

    }

    @@media(max - width:480px) {
        .stats

    {
        grid-template-columns: 1fr
    }

    }
</style>

<div class="container py-4" style="max-width: 1100px;">
    <div class="d-flex align-items-center gap-2 mb-1">
        <h2 class="page-title mb-0">Mis Compras</h2>
        <span class="status-pill st-info">Historial</span>
    </div>
    <p class="subtle mb-3">Pedidos y compras realizadas con tu cuenta.</p>

    @if (TempData["MensajeError"] is string msg && !string.IsNullOrWhiteSpace(msg))
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> @msg
        </div>
    }

    <!-- Toolbar filtros -->
    <div class="toolbar">
        <div class="row g-2 align-items-center">
            <div class="col-12 col-md-6">
                <div class="input-icon">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input id="txtFiltro" class="form-control" type="text"
                           placeholder="Buscar por #venta, fecha, método de pago, estado o total..." />
                </div>
            </div>
            <div class="col-8 col-md-3">
                <select id="selEstado" class="form-select">
                    <option value="">Todos los estados</option>
                    @foreach (var e in estados)
                    {
                        <option value="@e">@e</option>
                    }
                </select>
            </div>
            <div class="col-4 col-md-3 d-flex gap-2 justify-content-end">
                <button id="btnLimpiar" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-eraser"></i> Limpiar
                </button>
            </div>
        </div>
        <div class="d-flex align-items-center gap-3 mt-2 small">
            <span class="subtle">Resultados: <strong id="badgeResultados">@totalCompras</strong></span>
        </div>
    </div>

    @if (!compras.Any())
    {
        <div class="empty-state d-flex align-items-center gap-2">
            <i class="fa-regular fa-circle-question"></i>
            Aún no tienes compras. Cuando realices tu primer pedido, aparecerá aquí.
        </div>
    }
    else
    {
        <div class="table-wrap">
            <table id="tablaCompras" class="table table-hover align-middle table-nowrap mb-0">
                <thead class="thead-brand">
                    <tr>
                        <th style="width:110px;"># VENTA</th>
                        <th style="width:140px;">FECHA</th>
                        <th style="width:140px;">TOTAL</th>
                        <th style="width:200px;">ESTADO</th>
                        <th>MÉTODO DE PAGO</th>
                        <th class="text-center" style="width:110px;">DETALLE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in compras.OrderByDescending(x => x.FechaVenta))
                    {
                        var st = EstadoBadge(v.Estado);
                        var esReciente = (DateTime.UtcNow - v.FechaVenta.ToUniversalTime()).TotalHours <= 48;

                        <tr>
                            <td>#@v.VentaID</td>
                            <td>@v.FechaVenta.ToString("dd/MM/yyyy")</td>
                            <td class="fw-bold" data-total="@v.Total">@v.Total.ToString("C", culture)</td>
                            <td>
                                <span class="status-pill @st estado-texto">@(!string.IsNullOrWhiteSpace(v.Estado) ? v.Estado : "—")</span>
                                @if (esReciente)
                                {
                                    <span class="status-pill st-info ms-1"><i class="fa-regular fa-star"></i> Nuevo</span>
                                }
                            </td>
                            <td class="pago-texto">@(!string.IsNullOrWhiteSpace(v.MetodoPago) ? v.MetodoPago : "—")</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-brand" title="Ver detalles"
                                   href="@Url.Action("Detalle", "MisCompras", new { id = v.VentaID })">
                                    <i class="fa-regular fa-eye"></i> Ver
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Home")">
            <i class="fa-solid fa-house"></i> Volver al inicio
        </a>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const $ = s => document.querySelector(s);
            const tbody = $('#tablaCompras')?.querySelector('tbody');
            const txt = $('#txtFiltro');
            const sel = $('#selEstado');
            const btn = $('#btnLimpiar');
            const badgeResultados = $('#badgeResultados');
            const badgeTotal = $('#badgeTotalFiltrado');
            const nf = new Intl.NumberFormat('es-EC', { style: 'currency', currency: 'USD' });

            function norm(s){ return (s||'').toString().toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g,'').trim(); }

            function aplicar(){
                if(!tbody) return;
                const q = norm(txt?.value || '');
                const estado = norm(sel?.value || '');
                let visibles = 0, total = 0;

                for (const tr of tbody.rows){
                    const texto = norm(tr.innerText);
                    const estCell = tr.querySelector('.estado-texto')?.textContent || '';
                    const pasaTexto = q === '' || texto.includes(q);
                    const pasaEstado = estado === '' || norm(estCell) === estado;

                    const show = pasaTexto && pasaEstado;
                    tr.style.display = show ? '' : 'none';
                    if (show){
                        visibles++;
                        const t = parseFloat(tr.querySelector('[data-total]')?.getAttribute('data-total') || '0');
                        total += isNaN(t) ? 0 : t;
                    }
                }
                if (badgeResultados) badgeResultados.textContent = visibles.toString();
                if (badgeTotal) badgeTotal.textContent = nf.format(total);
            }

            txt?.addEventListener('input', aplicar);
            sel?.addEventListener('change', aplicar);
            btn?.addEventListener('click', (e)=>{ e.preventDefault(); if(txt) txt.value=''; if(sel) sel.value=''; aplicar(); });

            aplicar(); // inicial
        })();
    </script>
}
