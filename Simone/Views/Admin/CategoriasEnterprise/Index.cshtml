@model List<Simone.Models.Categoria>
@{
    ViewData["Title"] = "Categorías Enterprise";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-sitemap me-2"></i>Categorías Enterprise</h2>
            <p class="text-muted">Gestión de categorías con jerarquía infinita</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nueva Categoría
            </a>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Árbol de Categorías -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-tree me-2"></i>Jerarquía de Categorías</h5>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                    <p class="text-muted">No hay categorías. Crea la primera categoría para comenzar.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Crear Primera Categoría
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 40%">Nombre</th>
                                <th style="width: 20%">Path</th>
                                <th style="width: 10%" class="text-center">Nivel</th>
                                <th style="width: 10%" class="text-center">Estado</th>
                                <th style="width: 20%" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="categoriasTable">
                            @foreach (var categoria in Model)
                            {
                                @await Html.PartialAsync("_CategoriaRow", categoria)
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-ocultar alertas
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Confirmación de eliminación
        $(document).on('click', '.btn-delete', function(e) {
            if (!confirm('¿Está seguro de eliminar esta categoría?')) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
