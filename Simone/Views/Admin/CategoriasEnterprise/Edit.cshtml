@model Simone.Models.Categoria
@{
    ViewData["Title"] = "Editar Categoría";
    var categorias = ViewBag.Categorias as List<Simone.Models.Categoria>;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                    <li class="breadcrumb-item active">Editar: @Model.Nombre</li>
                </ol>
            </nav>
            <h2><i class="fas fa-edit me-2"></i>Editar Categoría</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="CategoriaID" />
                        <input type="hidden" asp-for="CreadoUtc" />
                        <input type="hidden" asp-for="Nivel" />
                        <input type="hidden" asp-for="Path" />

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="fas fa-tag me-1"></i>Nombre <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nombre" class="form-control" id="nombreInput" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Slug -->
                        <div class="mb-3">
                            <label asp-for="Slug" class="form-label">
                                <i class="fas fa-link me-1"></i>Slug (URL amigable) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="Slug" class="form-control" id="slugInput" required />
                                <button type="button" class="btn btn-outline-secondary" id="btnGenerarSlug">
                                    <i class="fas fa-sync-alt"></i> Generar
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                Solo letras minúsculas, números y guiones.
                            </small>
                            <span asp-validation-for="Slug" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="fas fa-align-left me-1"></i>Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Categoría Padre -->
                        <div class="mb-3">
                            <label asp-for="CategoriaPadreID" class="form-label">
                                <i class="fas fa-sitemap me-1"></i>Categoría Padre
                            </label>
                            <select asp-for="CategoriaPadreID" class="form-select">
                                <option value="">-- Categoría Raíz (sin padre) --</option>
                                @if (categorias != null)
                                {
                                    foreach (var cat in categorias)
                                    {
                                        var indent = new string('—', cat.Nivel);
                                        <option value="@cat.CategoriaID" selected="@(Model.CategoriaPadreID == cat.CategoriaID)">
                                            @indent @cat.Nombre (@cat.Path)
                                        </option>
                                    }
                                }
                            </select>
                            <small class="form-text text-muted">
                                <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                                Cambiar la categoría padre recalculará el nivel y path automáticamente.
                            </small>
                        </div>

                        <!-- Icono -->
                        <div class="mb-3">
                            <label asp-for="IconoClass" class="form-label">
                                <i class="fas fa-icons me-1"></i>Clase de Icono (FontAwesome)
                            </label>
                            <div class="input-group">
                                <input asp-for="IconoClass" class="form-control" id="iconoInput"
                                       placeholder="Ej: fas fa-shirt" />
                                <span class="input-group-text" id="iconoPreview">
                                    @if (!string.IsNullOrEmpty(Model.IconoClass))
                                    {
                                        <i class="@Model.IconoClass"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-question"></i>
                                    }
                                </span>
                            </div>
                            <small class="form-text text-muted">
                                Usa clases de <a href="https://fontawesome.com/icons" target="_blank">FontAwesome</a>.
                            </small>
                        </div>

                        <!-- Orden -->
                        <div class="mb-3">
                            <label asp-for="Orden" class="form-label">
                                <i class="fas fa-sort-numeric-down me-1"></i>Orden
                            </label>
                            <input asp-for="Orden" type="number" class="form-control" min="0" />
                            <small class="form-text text-muted">
                                Número para ordenar categorías del mismo nivel.
                            </small>
                        </div>

                        <hr class="my-4" />

                        <!-- Checkboxes -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="Activa" class="form-check-input" />
                                    <label asp-for="Activa" class="form-check-label">
                                        <i class="fas fa-check-circle me-1"></i>Activa
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="MostrarEnMenu" class="form-check-input" />
                                    <label asp-for="MostrarEnMenu" class="form-check-label">
                                        <i class="fas fa-bars me-1"></i>Mostrar en Menú
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="Destacada" class="form-check-input" />
                                    <label asp-for="Destacada" class="form-check-label">
                                        <i class="fas fa-star me-1"></i>Destacada
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Meta Tags (SEO) -->
                        <h5 class="mb-3"><i class="fas fa-search me-2"></i>SEO</h5>

                        <div class="mb-3">
                            <label asp-for="MetaDescripcion" class="form-label">
                                Meta Descripción
                            </label>
                            <textarea asp-for="MetaDescripcion" class="form-control" rows="2"
                                      maxlength="160"></textarea>
                            <small class="form-text text-muted">
                                Máximo 160 caracteres para motores de búsqueda.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MetaKeywords" class="form-label">
                                Meta Keywords
                            </label>
                            <input asp-for="MetaKeywords" class="form-control" />
                            <small class="form-text text-muted">
                                Palabras clave separadas por comas.
                            </small>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.CategoriaID"
                                   class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Eliminar
                                </a>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de información -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7">@Model.CategoriaID</dd>

                        <dt class="col-sm-5">Nivel:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">Nivel @Model.Nivel</span>
                        </dd>

                        <dt class="col-sm-5">Path Actual:</dt>
                        <dd class="col-sm-7"><code>@Model.Path</code></dd>

                        <dt class="col-sm-5">Creada:</dt>
                        <dd class="col-sm-7">@Model.CreadoUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.ModificadoUtc.HasValue)
                        {
                            <dt class="col-sm-5">Modificada:</dt>
                            <dd class="col-sm-7">@Model.ModificadoUtc.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>
                        }

                        <dt class="col-sm-5">Subcategorías:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-secondary">
                                @(Model.CategoriasHijas?.Count ?? 0)
                            </span>
                        </dd>

                        <dt class="col-sm-5">Atributos:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-secondary">
                                @(Model.Atributos?.Count ?? 0)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Advertencias</h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Si cambias el <strong>slug</strong>, las URLs existentes dejarán de funcionar.</li>
                        <li>Al cambiar la <strong>categoría padre</strong>, se actualizarán los paths de todas las subcategorías.</li>
                        <li>No puedes seleccionarte como tu propio padre ni crear ciclos.</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body text-center">
                    <a asp-action="Details" asp-route-id="@Model.CategoriaID"
                       class="btn btn-info btn-sm w-100">
                        <i class="fas fa-eye me-2"></i>Ver Detalles Completos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Botón para generar slug
            $('#btnGenerarSlug').click(function() {
                var nombre = $('#nombreInput').val();
                if (nombre) {
                    $.get('@Url.Action("GenerarSlug")', { nombre: nombre }, function(data) {
                        if (data.success) {
                            $('#slugInput').val(data.slug);
                        }
                    });
                } else {
                    alert('Ingresa un nombre primero');
                }
            });

            // Preview de icono en tiempo real
            $('#iconoInput').on('input', function() {
                var iconClass = $(this).val();
                if (iconClass) {
                    $('#iconoPreview').html('<i class="' + iconClass + '"></i>');
                } else {
                    $('#iconoPreview').html('<i class="fas fa-question"></i>');
                }
            });
        });
    </script>
}
