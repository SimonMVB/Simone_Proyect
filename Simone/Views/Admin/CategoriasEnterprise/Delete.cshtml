@model Simone.Models.Categoria
@{
    ViewData["Title"] = "Eliminar Categoría";
    var tieneHijas = Model.CategoriasHijas?.Any() == true;
    var cantidadHijas = Model.CategoriasHijas?.Count ?? 0;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </nav>
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>Eliminar Categoría
            </h2>
        </div>
    </div>

    @if (tieneHijas)
    {
        <!-- Alerta si tiene subcategorías -->
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="fas fa-ban me-2"></i>No se puede eliminar</h4>
            <p>
                Esta categoría tiene <strong>@cantidadHijas subcategoría(s)</strong> asociada(s).
                Debes eliminar o reasignar todas las subcategorías antes de eliminar esta categoría.
            </p>
            <hr>
            <div class="mb-0">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
                <a asp-action="Edit" asp-route-id="@Model.CategoriaID" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Editar en su lugar
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-folder-tree me-2"></i>Subcategorías Existentes</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var hija in Model.CategoriasHijas.OrderBy(h => h.Orden))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-folder text-warning me-2"></i>
                                <strong>@hija.Nombre</strong>
                                <br>
                                <small class="text-muted">Path: <code>@hija.Path</code></small>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@hija.CategoriaID"
                                   class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@hija.CategoriaID"
                                   class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
    else
    {
        <!-- Confirmación de eliminación -->
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>¿Estás seguro?</h4>
            <p>
                Estás a punto de eliminar la categoría <strong>"@Model.Nombre"</strong>.
                Esta acción <strong>no se puede deshacer</strong>.
            </p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información de la Categoría</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                            <dt class="col-sm-4">Slug:</dt>
                            <dd class="col-sm-8"><code>@Model.Slug</code></dd>

                            <dt class="col-sm-4">Path:</dt>
                            <dd class="col-sm-8"><code>@Model.Path</code></dd>

                            <dt class="col-sm-4">Nivel:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">Nivel @Model.Nivel</span>
                            </dd>

                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Activa ? "bg-success" : "bg-secondary")">
                                    @(Model.Activa ? "Activa" : "Inactiva")
                                </span>
                            </dd>

                            @if (Model.Destacada)
                            {
                                <dt class="col-sm-4">Destacada:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> Sí
                                    </span>
                                </dd>
                            }

                            <dt class="col-sm-4">Creada:</dt>
                            <dd class="col-sm-8">@Model.CreadoUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <dt class="col-sm-4">Descripción:</dt>
                                <dd class="col-sm-8">@Model.Descripcion</dd>
                            }
                        </dl>

                        @if (!string.IsNullOrEmpty(Model.IconoClass))
                        {
                            <div class="text-center py-3">
                                <i class="@Model.IconoClass fa-4x text-muted"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fas fa-check-circle me-2"></i>Verificaciones</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <strong>Sin subcategorías</strong>
                            </li>
                            <li class="mb-2">
                                @if (Model.Atributos?.Any() == true)
                                {
                                    <i class="fas fa-exclamation-circle text-warning me-2"></i>
                                    <span>Tiene @Model.Atributos.Count atributo(s) definido(s)</span>
                                }
                                else
                                {
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span>Sin atributos definidos</span>
                                }
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-info-circle text-info me-2"></i>
                                <span>Se verificará que no tenga productos asociados</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Advertencia</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><strong>Esta acción:</strong></p>
                        <ul class="small mb-3">
                            <li>Eliminará permanentemente la categoría</li>
                            <li>No se puede deshacer</li>
                            <li>Fallará si hay productos asociados</li>
                            @if (Model.Atributos?.Any() == true)
                            {
                                <li class="text-warning">
                                    <strong>Eliminará @Model.Atributos.Count atributo(s)</strong>
                                </li>
                            }
                        </ul>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="CategoriaID" />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Confirmar antes de eliminar
        $('form').on('submit', function(e) {
            var confirmed = confirm('¿CONFIRMAS que deseas eliminar esta categoría? Esta acción NO se puede deshacer.');
            if (!confirmed) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
