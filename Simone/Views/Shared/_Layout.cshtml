    <script>
        (function () {
            const body = document.body;

            // Sidebar
            const sidebar = document.getElementById("sidebar");
            const openSidebarBtn = document.getElementById("open-sidebar");
            const closeSidebarBtn = document.getElementById("close-sidebar");

            const openSidebar = (e) => { e?.stopPropagation(); sidebar.classList.add("show"); };
            const closeSidebar = (e) => { e?.stopPropagation(); sidebar.classList.remove("show"); };

            openSidebarBtn?.addEventListener("click", openSidebar);
            closeSidebarBtn?.addEventListener("click", closeSidebar);

            // Carrito
            const cartPanel = document.getElementById("cartPanel");
            const openCartBtn = document.getElementById("open-cart");
            const closeCartBtn = document.getElementById("close-cart");

            const openCart = (e) => { e?.stopPropagation(); cartPanel.classList.add("show"); };
            const closeCart = (e) => { e?.stopPropagation(); cartPanel.classList.remove("show"); };

            openCartBtn?.addEventListener("click", openCart);
            closeCartBtn?.addEventListener("click", closeCart);

            // Cerrar paneles por click fuera
            document.addEventListener("click", (e) => {
                if (sidebar.classList.contains("show") && !sidebar.contains(e.target) && !openSidebarBtn.contains(e.target)) {
                    sidebar.classList.remove("show");
                }
                if (cartPanel.classList.contains("show") && !cartPanel.contains(e.target) && !openCartBtn.contains(e.target)) {
                    cartPanel.classList.remove("show");
                }
            });

            // Cerrar con ESC
            document.addEventListener("keydown", (e) => {
                if (e.key === "Escape") {
                    sidebar.classList.remove("show");
                    cartPanel.classList.remove("show");
                }
            });

            // Wishlist AJAX (si la vista contiene formularios .wishlist-form)
            document.querySelectorAll('.wishlist-form').forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault();
                    const formData = new FormData(this);
                    const btn = this.querySelector('button');
                    const icon = btn?.querySelector('i');

                    fetch(this.action, { method: 'POST', body: formData })
                        .then(res => res.json())
                        .then(data => {
                            if (!icon) return;
                            if (data.esFavorito) {
                                icon.classList.remove('far');
                                icon.classList.add('fas');
                                btn.title = "Eliminar de favoritos";
                            } else {
                                icon.classList.remove('fas');
                                icon.classList.add('far');
                                btn.title = "Añadir a favoritos";
                            }
                        })
                        .catch(err => console.error("Error en favoritos:", err));
                });
            });

            // Back to top
            window.scrollToTop = function () {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        })();
    </script>

