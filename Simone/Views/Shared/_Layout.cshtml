<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Neo Agora</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Swiper + Animate -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Estilos personalizados -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        :root {
            /* Layout */
            --nav-h: 68px;
            --z-navbar: 1100;
            --z-overlay: 1080;
            /* Tema base */
            --simone-bg: #000;
            --simone-fg: #fff;
            --simone-accent: #0d6efd;
            --simone-danger: #dc3545;
        }

        /* Base */
        *, *::before, *::after {
            box-sizing: border-box;
        }

        html {
            scroll-padding-top: var(--nav-h);
        }

        body {
            padding-top: var(--nav-h);
            overflow-x: hidden;
            background-color: #f8f9fa;
        }

        main {
            padding-top: 8px;
            position: relative;
            z-index: 1;
        }

            main.container {
                min-height: 60vh;
            }

        /* ================= NAVBAR + DROPDOWN ================= */
        header, .navbar, .nav-snowglitter {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: var(--z-navbar);
        }

        .navbar {
            min-height: var(--nav-h);
        }

            .navbar .nav-item.dropdown {
                position: static;
            }

            .navbar .dropdown-menu {
                position: absolute;
                left: auto;
                right: 0;
                top: 100%;
                z-index: calc(var(--z-navbar) + 1);
                border-radius: 12px;
                padding: 8px 0;
                box-shadow: 0 12px 28px rgba(0,0,0,.12);
                margin-top: 0;
            }

                .navbar .dropdown-menu.dropdown-menu-start {
                    left: 0;
                    right: auto;
                }

        .dropdown-item {
            border-radius: 8px;
            margin: 2px 8px;
            transition: all .2s ease;
        }

            .dropdown-item:hover {
                background: #f8f9fa;
                transform: translateX(3px);
            }

            .dropdown-item i {
                width: 18px;
                text-align: center;
            }

        .nav-snowglitter {
            position: relative;
            overflow: visible;
            background: var(--simone-bg);
        }

            .nav-snowglitter::before {
                content: "";
                position: absolute;
                inset: 0;
                pointer-events: none;
                background-image: radial-gradient(circle, rgba(255,182,193,.5) 2px, transparent 2px), radial-gradient(circle, rgba(255,182,193,.3) 1.5px, transparent 1.5px), radial-gradient(circle, rgba(255,182,193,.6) 1px, transparent 1px);
                background-size: 100px 100px, 80px 80px, 60px 60px;
                background-repeat: repeat;
                animation: glitterFall 15s linear infinite;
                z-index: 0;
                opacity: .6;
            }

        @@keyframes glitterFall {
            0% {
                background-position: 0 0, 0 0, 0 0;
            }

            100% {
                background-position: 0 1000px, 0 800px, 0 600px;
            }
        }

        .nav-snowglitter > * {
            position: relative;
            z-index: 1;
        }

        .navbar-dark .navbar-nav .nav-link,
        .navbar-dark .navbar-brand {
            color: var(--simone-fg) !important;
        }

        /* ============== HERO / CAROUSEL ajuste navbar ============== */
        .carousel, .carousel-inner, .swiper, .swiper-wrapper {
            overflow: visible;
            z-index: 1;
        }

            .carousel .carousel-caption {
                margin-top: 14px;
            }

                .carousel .carousel-caption > .rounded,
                .carousel .carousel-caption > .rounded-4,
                .hero .overlay, .banner .overlay,
                .hero [class*="overlay"], .banner [class*="overlay"] {
                    border-top-left-radius: 0 !important;
                    border-top-right-radius: 0 !important;
                }

        .hero, .banner, .carousel {
            position: relative;
            z-index: 1 !important;
        }

        /* ===================== SIDEBAR CATEGORÍAS ===================== */
        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background: #111;
            color: #fff;
            transform: translateX(-100%);
            transition: transform .3s ease;
            z-index: var(--z-overlay);
            padding: 1.25rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.35);
            margin-top: var(--nav-h);
        }

            #sidebar.show {
                transform: translateX(0);
            }

            #sidebar .sidebar-icon {
                width: 22px;
                height: 22px;
                object-fit: contain;
            }

            #sidebar a {
                color: #eaeaea;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                padding: .35rem .25rem;
                border-radius: .5rem;
            }

                #sidebar a:hover {
                    background: rgba(255,255,255,.08);
                }

        /* Botón Uiverse (catálogo) */
        .button {
            line-height: 1;
            display: inline-flex;
            align-items: center;
            gap: .75rem;
            border: none;
            cursor: pointer;
            text-decoration: none;
            background: var(--clr, var(--simone-accent));
            color: #fff;
            border-radius: 10rem;
            font-weight: 600;
            padding: .75rem 1.5rem .75rem 1.25rem;
            transition: background-color .3s;
        }

            .button:hover {
                background: #000;
            }

        .button__icon-wrapper {
            flex-shrink: 0;
            width: 25px;
            height: 25px;
            position: relative;
            color: var(--clr, var(--simone-accent));
            background: #fff;
            border-radius: 50%;
            display: grid;
            place-items: center;
            overflow: hidden;
        }

        .button__icon-svg--copy {
            position: absolute;
            transform: translate(-150%,150%);
        }

        .button:hover .button__icon-svg:first-child {
            transition: transform .3s ease-in-out;
            transform: translate(150%,-150%);
        }

        .button:hover .button__icon-svg--copy {
            transition: transform .3s ease-in-out .1s;
            transform: translate(0);
        }

        /* ====================== PANEL CARRITO ====================== */
        #cartPanel {
            position: fixed;
            top: 0;
            right: -340px;
            width: 340px;
            height: 100vh;
            background: #fff;
            transition: right .3s ease;
            z-index: var(--z-overlay);
            box-shadow: -8px 0 24px rgba(0,0,0,.1);
            margin-top: var(--nav-h);
        }

            #cartPanel.show {
                right: 0;
            }

        #cart-count {
            font-size: 10px !important;
            padding: 2px 6px;
            min-width: 18px;
            height: 18px;
            line-height: 14px;
            font-weight: 700;
            display: inline-block;
            text-align: center;
            border-radius: 50px;
            position: absolute;
            top: -6px;
            right: -10px;
        }

        /* ====================== FOOTER – Redes ====================== */
        .wrapper {
            display: inline-flex;
            list-style: none;
            padding-top: 20px;
            justify-content: center;
            flex-wrap: wrap;
            gap: .5rem;
        }

            .wrapper .icon {
                position: relative;
                background: #fff;
                border-radius: 50%;
                width: 50px;
                height: 50px;
                display: flex;
                justify-content: center;
                align-items: center;
                box-shadow: 0 10px 10px rgba(0,0,0,.1);
                color: #000;
                transition: all .3s ease;
            }

            .wrapper .tooltip {
                position: absolute;
                top: 0;
                font-size: 14px;
                background: #fff;
                color: #fff;
                padding: 5px 8px;
                border-radius: 5px;
                box-shadow: 0 10px 10px rgba(0,0,0,.1);
                opacity: 0;
                pointer-events: none;
                transition: .3s ease;
            }

                .wrapper .tooltip::before {
                    content: "";
                    position: absolute;
                    height: 8px;
                    width: 8px;
                    background: #fff;
                    bottom: -3px;
                    left: 50%;
                    transform: translateX(-50%) rotate(45deg);
                }

            .wrapper .icon:hover .tooltip {
                top: -35px;
                opacity: 1;
            }

            .wrapper .facebook:hover, .wrapper .facebook:hover .tooltip, .wrapper .facebook:hover .tooltip::before {
                background: #1877f2;
                color: #fff;
            }

            .wrapper .twitter:hover, .wrapper .twitter:hover .tooltip, .wrapper .twitter:hover .tooltip::before {
                background: #1da1f2;
                color: #fff;
            }

            .wrapper .instagram:hover, .wrapper .instagram:hover .tooltip, .wrapper .instagram:hover .tooltip::before {
                background: #e4405f;
                color: #fff;
            }

            .wrapper .tiktok:hover, .wrapper .tiktok:hover .tooltip, .wrapper .tiktok:hover .tooltip::before {
                background: #000;
                color: #fff;
            }

        /* Insignia de versión */
        .version-badge {
            display: inline-block;
            position: relative;
            padding: 8px 16px;
            color: white;
            font-weight: 500;
            background: rgba(255,255,255,.25);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,.18);
            border-radius: 999px;
            box-shadow: 0 2px 4px rgba(0,0,0,.2);
            user-select: none;
        }

            .version-badge span {
                width: 25px;
                height: 25px;
                position: absolute;
                top: -12px;
                right: -2px;
                transform: rotate(-20deg);
                filter: blur(.5px);
            }

                .version-badge span:before, .version-badge span:after {
                    content: "";
                    position: absolute;
                }

                .version-badge span:before {
                    width: 1px;
                    height: 100%;
                    left: 12px;
                    background: linear-gradient(to bottom, transparent, rgba(255,255,255,.7), transparent);
                }

                .version-badge span:after {
                    width: 100%;
                    height: 1px;
                    top: 12px;
                    background: linear-gradient(to left, transparent, rgba(255,255,255,.7), transparent);
                }

        @@keyframes rotate {
            0% {
                transform: rotate(0) scale(1);
            }

            50% {
                transform: rotate(180deg) scale(1.8);
            }

            100% {
                transform: rotate(360deg) scale(1);
            }
        }

        .version-badge:hover span:after, .version-badge:hover span:before {
            animation: rotate 3s ease-in-out;
        }

        /* Back to top */
        .back-to-top {
            width: 140px;
            height: 56px;
            overflow: hidden;
            border: none;
            color: #fff;
            background: none;
            position: fixed;
            bottom: 30px;
            right: 30px;
            padding-bottom: 2em;
            cursor: pointer;
            z-index: calc(var(--z-overlay) - 1);
        }

            .back-to-top > div, .back-to-top > svg {
                position: absolute;
                width: 100%;
                height: 100%;
                display: flex;
            }

            .back-to-top:before {
                content: "";
                position: absolute;
                height: 2px;
                bottom: 0;
                left: 0;
                width: 100%;
                transform: scaleX(0);
                transform-origin: bottom right;
                background: currentColor;
                transition: transform .25s ease-out;
            }

            .back-to-top:hover:before {
                transform: scaleX(1);
                transform-origin: bottom left;
            }

            .back-to-top .clone > *, .back-to-top .text > * {
                opacity: 1;
                font-size: 1.3rem;
                transition: .2s;
                margin-left: 4px;
            }

            .back-to-top .clone > * {
                transform: translateY(60px);
            }

            .back-to-top:hover .clone > * {
                transform: translateY(0);
                transition: all .2s cubic-bezier(.215,.61,.355,1) 0s;
            }

            .back-to-top:hover .text > * {
                transform: translateY(-60px);
                transition: all .2s cubic-bezier(.215,.61,.355,1) 0s;
            }

            .back-to-top:hover .clone > :nth-child(1) {
                transition-delay: .15s;
            }

            .back-to-top:hover .clone > :nth-child(2) {
                transition-delay: .20s;
            }

            .back-to-top:hover .clone > :nth-child(3) {
                transition-delay: .25s;
            }

            .back-to-top svg {
                width: 20px;
                right: 0;
                top: 50%;
                transform: translateY(-50%) rotate(-50deg);
                transition: .2s ease-out;
            }

            .back-to-top:hover svg {
                transform: translateY(-50%) rotate(-90deg);
            }

        /* Motion reducido */
        @@media (prefers-reduced-motion: reduce) {
            .back-to-top:before,
            .button:hover .button__icon-svg:first-child,
            .button:hover .button__icon-svg--copy,
            .version-badge:hover span:after,
            .version-badge:hover span:before,
            .nav-snowglitter::before {
                transition: none !important;
                animation: none !important;
            }
        }

        /* Responsive */
        @@media (max-width: 575.98px) {
            #sidebar {
                width: 85vw;
            }

            #cartPanel {
                width: 100vw;
                right: -100vw;
            }

                #cartPanel.show {
                    right: 0;
                }

            .navbar-brand {
                font-size: 1.1rem;
            }

            #cart-count {
                right: -6px;
                top: -6px;
            }
        }

        @@media (min-width: 576px) and (max-width: 991.98px) {
            #cartPanel {
                width: 380px;
                right: -380px;
            }

                #cartPanel.show {
                    right: 0;
                }
        }

        @@media (max-width: 991.98px) {
            .navbar .dropdown-menu {
                position: static !important;
                margin-top: .5rem;
            }
        }
    </style>
</head>

