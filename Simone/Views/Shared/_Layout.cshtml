    <!-- Smart Search Script - Mejorado -->
    <script>
        (function() {
            'use strict';

            // Elementos del DOM
            const searchToggle = document.getElementById('searchToggle');
            const searchClose = document.getElementById('searchClose');
            const searchOverlay = document.getElementById('searchOverlay');
            const searchModal = document.getElementById('searchModal');
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');
            const searchForm = document.getElementById('searchForm');

            let searchTimeout = null;
            let currentRequest = null;

            if (!searchToggle || !searchOverlay || !searchModal || !searchInput) return;

            // Abrir buscador
            function openSearch() {
                searchOverlay.classList.add('active');
                searchModal.classList.add('active');
                document.body.style.overflow = 'hidden';
                searchToggle.setAttribute('aria-expanded', 'true');
                setTimeout(() => searchInput.focus(), 150);
            }

            // Cerrar buscador
            function closeSearch() {
                searchOverlay.classList.remove('active');
                searchModal.classList.remove('active');
                document.body.style.overflow = '';
                searchToggle.setAttribute('aria-expanded', 'false');
                searchInput.value = '';
                searchResults.innerHTML = '';
                searchResults.classList.remove('active');
            }

            // Event listeners
            searchToggle.addEventListener('click', openSearch);

            if (searchClose) {
                searchClose.addEventListener('click', closeSearch);
            }

            // Cerrar al hacer click en el overlay
            searchOverlay.addEventListener('click', closeSearch);

            // Cerrar con ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && searchModal.classList.contains('active')) {
                    closeSearch();
                }
            });

            // Búsqueda en tiempo real
            searchInput.addEventListener('input', function() {
                const query = this.value.trim();

                // Cancelar búsqueda anterior
                if (searchTimeout) {
                    clearTimeout(searchTimeout);
                }

                if (currentRequest) {
                    currentRequest.abort();
                }

                // Limpiar resultados si query está vacío
                if (query.length === 0) {
                    searchResults.innerHTML = '';
                    searchResults.classList.remove('active');
                    return;
                }

                // Mínimo 2 caracteres para buscar
                if (query.length < 2) {
                    searchResults.innerHTML = '<div class="search-loading">Escribe al menos 2 caracteres...</div>';
                    searchResults.classList.add('active');
                    return;
                }

                // Mostrar loading
                searchResults.innerHTML = '<div class="search-loading"><i class="fa-solid fa-spinner fa-spin"></i> Buscando...</div>';
                searchResults.classList.add('active');

                // Debounce: esperar 300ms después de que el usuario deje de escribir
                searchTimeout = setTimeout(function() {
                    performSearch(query);
                }, 300);
            });

            // Realizar búsqueda AJAX
            function performSearch(query) {
                const controller = new AbortController();
                currentRequest = controller;

                fetch(`/Compras/SearchProducts?q=${encodeURIComponent(query)}&limit=8`, {
                    signal: controller.signal,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (!response.ok) throw new Error('Error en búsqueda');
                    return response.json();
                })
                .then(data => {
                    displayResults(data, query);
                })
                .catch(error => {
                    if (error.name !== 'AbortError') {
                        console.error('Error:', error);
                        searchResults.innerHTML = '<div class="search-no-results"><p>Error al buscar. Intenta de nuevo.</p></div>';
                    }
                });
            }

            // Mostrar resultados
            function displayResults(products, query) {
                if (!products || products.length === 0) {
                    searchResults.innerHTML = `
                        <div class="search-no-results">
                            <i class="fa-solid fa-search" aria-hidden="true"></i>
                            <p>No se encontraron productos</p>
                            <small>Intenta con otras palabras</small>
                        </div>`;
                    return;
                }

                let html = '<div class="search-results-header">';
                html += `<span class="search-results-count">${products.length} resultado${products.length !== 1 ? 's' : ''}</span>`;
                html += `<a href="/Compras/Catalogo?searchTerm=${encodeURIComponent(query)}" class="search-view-all">Ver todos <i class="fa-solid fa-arrow-right"></i></a>`;
                html += '</div>';

                html += '<div class="search-results-list">';

                products.forEach(product => {
                    const productUrl = `/p/${product.productoID}`;
                    const imageUrl = product.imagenUrl || '/images/placeholder-product.png';
                    const price = parseFloat(product.precio || 0);
                    const stock = parseInt(product.stock || 0);
                    const brandHTML = product.marca ? `<span class="search-result-category">${escapeHtml(product.marca)}</span>` : '';

                    html += `
                        <a href="${productUrl}" class="search-result-item">
                            <div class="search-result-image">
                                <img src="${imageUrl}" alt="${escapeHtml(product.nombre)}" loading="lazy" />
                            </div>
                            <div class="search-result-info">
                                <div class="search-result-name">${highlightQuery(product.nombre, query)}</div>
                                <div class="search-result-meta">
                                    <span class="search-result-price">$${price.toFixed(2)}</span>
                                    ${brandHTML}
                                    ${stock > 0
                                        ? '<span class="search-result-stock in-stock"><i class="fa-solid fa-check-circle"></i> Disponible</span>'
                                        : '<span class="search-result-stock out-of-stock"><i class="fa-solid fa-times-circle"></i> Agotado</span>'}
                                </div>
                            </div>
                        </a>`;
                });

                html += '</div>';

                searchResults.innerHTML = html;
            }

            // Resaltar texto de búsqueda
            function highlightQuery(text, query) {
                if (!text || !query) return escapeHtml(text);
                const escapedText = escapeHtml(text);
                const regex = new RegExp(`(${escapeRegex(query)})`, 'gi');
                return escapedText.replace(regex, '<mark>$1</mark>');
            }

            // Escapar HTML
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Escapar regex
            function escapeRegex(text) {
                return text.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Script inline mínimo para inicialización crítica -->
    <script>
        // Configuración global
        window.NeoAgoraConfig = {
            cartLocked: @(isCartLocked ? "true" : "false"),
            endpoints: {
                cartInfo: '/Compras/CartInfo',
                cartMini: '/Compras/Mini'
            }
        };
    </script>
