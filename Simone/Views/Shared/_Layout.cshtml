                    <a asp-controller="Compras" asp-action="Catalogo" class="text-white mx-2" aria-label="Buscar productos" title="Buscar">
                        <i class="fa-solid fa-magnifying-glass fa-lg"></i>
                    </a>

                    <!-- Favoritos -->
                    <a href="/Favoritos/Index" id="heart-link" class="mx-2" aria-label="Favoritos" title="Favoritos">
