    <!-- Script mejorado: Gestión de paneles y carrito -->
    <script>
        (function () {
            'use strict';

            // ======= CONFIGURACIÓN =======
            const CONFIG = {
                selectors: {
                    sidebar: '#sidebar',
                    cartPanel: '#cartPanel',
                    overlay: '#globalOverlay',
                    openSidebar: '#open-sidebar',
                    closeSidebar: '#close-sidebar',
                    openCart: '#open-cart',
                    closeCart: '#close-cart',
                    cartContent: '#cart-content',
                    cartCount: '#cart-count'
                },
                classes: {
                    show: 'show',
                    loading: 'loading',
                    noScroll: 'no-scroll'
                },
                endpoints: {
                    cartInfo: '/Compras/CartInfo',
                    cartMini: '/Compras/Mini'
                }
            };

            // ======= ESTADO GLOBAL =======
            const STATE = {
                isCartLocked: document.body.dataset.cartLocked === '1',
                activePanel: null,
                isLoading: false
            };

            // ======= ELEMENTOS DEL DOM =======
            const DOM = {};

            function initializeDOM() {
                Object.keys(CONFIG.selectors).forEach(key => {
                    DOM[key] = document.querySelector(CONFIG.selectors[key]);
                });
            }

            // ======= UTILIDADES =======
            const utils = {
                // Formateador de moneda
                formatCurrency: (amount) => {
                    return new Intl.NumberFormat('es-EC', {
                        style: 'currency',
                        currency: 'USD'
                    }).format(amount || 0);
                },

                // Fetch con manejo de errores
                fetchJSON: async (url, options = {}) => {
                    try {
                        const response = await fetch(url, {
                            credentials: 'same-origin',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest',
                                ...options.headers
                            },
                            ...options
                        });

                        if (!response.ok) throw new Error(`HTTP ${response.status}`);
                        return await response.json();
                    } catch (error) {
                        console.error('Fetch error:', error);
                        throw error;
                    }
                },

                // Bloquear/desbloquear scroll
                lockScroll: (lock) => {
                    document.body.classList.toggle(CONFIG.classes.noScroll, lock);
                },

                // Set aria-expanded
                setAriaExpanded: (element, expanded) => {
                    if (element) element.setAttribute('aria-expanded', expanded.toString());
                },

                // Mostrar loading
                showLoading: (element) => {
                    if (element) {
                        element.classList.add(CONFIG.classes.loading);
                        element.disabled = true;
                    }
                },

                // Ocultar loading
                hideLoading: (element) => {
                    if (element) {
                        element.classList.remove(CONFIG.classes.loading);
                        element.disabled = false;
                    }
                }
            };

            // ======= GESTIÓN DE PANELES =======
            const panelManager = {
                // Abrir panel
                open: (panel, trigger) => {
                    if (!panel || STATE.isLoading) return;

                    // Cerrar panel activo si existe
                    if (STATE.activePanel && STATE.activePanel !== panel) {
                        panelManager.close(STATE.activePanel);
                    }

                    panel.classList.add(CONFIG.classes.show);
                    utils.setAriaExpanded(trigger, true);
                    utils.lockScroll(true);

                    // Mostrar overlay
                    if (DOM.overlay) {
                        DOM.overlay.classList.add(CONFIG.classes.show);
                        DOM.overlay.setAttribute('aria-hidden', 'false');
                    }

                    STATE.activePanel = panel;
                },

                // Cerrar panel
                close: (panel) => {
                    if (!panel) return;

                    panel.classList.remove(CONFIG.classes.show);
                    utils.lockScroll(false);

                    // Ocultar overlay si no hay paneles activos
                    if (DOM.overlay) {
                        DOM.overlay.classList.remove(CONFIG.classes.show);
                        DOM.overlay.setAttribute('aria-hidden', 'true');
                    }

                    STATE.activePanel = null;
                },

                // Cerrar todos los paneles
                closeAll: () => {
                    [DOM.sidebar, DOM.cartPanel].forEach(panel => {
                        if (panel) panel.classList.remove(CONFIG.classes.show);
                    });

                    utils.lockScroll(false);
                    if (DOM.overlay) {
                        DOM.overlay.classList.remove(CONFIG.classes.show);
                        DOM.overlay.setAttribute('aria-hidden', 'true');
                    }

                    STATE.activePanel = null;
                },

                // Toggle panel
                toggle: (panel, trigger) => {
                    if (panel.classList.contains(CONFIG.classes.show)) {
                        panelManager.close(panel);
                    } else {
                        panelManager.open(panel, trigger);
                    }
                }
            };

            // ======= GESTIÓN DEL CARRITO =======
            const cartManager = {
                // Actualizar badge del carrito
                updateBadge: async () => {
                    try {
                        const data = await utils.fetchJSON(CONFIG.endpoints.cartInfo);
                        if (DOM.cartCount && data.count != null) {
                            DOM.cartCount.textContent = data.count;
                        }
                    } catch (error) {
                        console.warn('No se pudo actualizar el badge del carrito');
                    }
                },

                // Refrescar contenido del carrito
                refreshContent: async () => {
                    try {
                        const response = await fetch(CONFIG.endpoints.cartMini, {
                            credentials: 'same-origin',
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        });

                        if (response.ok) {
                            const html = await response.text();
                            if (DOM.cartContent) DOM.cartContent.innerHTML = html;
                        }
                    } catch (error) {
                        console.warn('No se pudo actualizar el contenido del carrito');
                    }
                },

                // Acción después de modificar el carrito
                afterMutation: async () => {
                    await cartManager.updateBadge();
                    await cartManager.refreshContent();

                    // Sincronizar entre pestañas
                    try {
                        localStorage.setItem('simone_cart_updated', Date.now().toString());
                    } catch (e) {}
                },

                // Manejar bloqueo del carrito
                handleLock: () => {
                    if (!STATE.isCartLocked) return;

                    // Deshabilitar interacciones con el carrito
                    const cartElements = document.querySelectorAll('#open-cart, [data-cart-open], .cart-toggle');
                    cartElements.forEach(el => {
                        el.style.pointerEvents = 'none';
                        el.style.opacity = '0.5';
                        el.title = 'Carrito bloqueado durante el pago';
                    });

                    // Prevenir apertura del panel
                    if (DOM.openCart) {
                        DOM.openCart.addEventListener('click', (e) => {
                            e.preventDefault();
                            e.stopPropagation();
                            // Puedes mostrar un toast o alerta aquí
                            console.log('Carrito bloqueado durante el pago');
                        }, true);
                    }
                }
            };

            // ======= MANEJO DE EVENTOS =======
            const eventManager = {
                initialize: () => {
                    // Eventos de apertura/cierre de paneles
                    if (DOM.openSidebar) {
                        DOM.openSidebar.addEventListener('click', (e) => {
                            e.preventDefault();
                            e.stopPropagation();
                            panelManager.toggle(DOM.sidebar, DOM.openSidebar);
                        });
                    }

                    if (DOM.closeSidebar) {
                        DOM.closeSidebar.addEventListener('click', (e) => {
                            e.preventDefault();
                            panelManager.close(DOM.sidebar);
                        });
                    }

                    if (DOM.openCart) {
                        DOM.openCart.addEventListener('click', (e) => {
                            if (STATE.isCartLocked) {
                                e.preventDefault();
                                e.stopPropagation();
                                return;
                            }
                            e.preventDefault();
                            e.stopPropagation();
                            panelManager.toggle(DOM.cartPanel, DOM.openCart);
                        });
                    }

                    if (DOM.closeCart) {
                        DOM.closeCart.addEventListener('click', (e) => {
                            e.preventDefault();
                            panelManager.close(DOM.cartPanel);
                        });
                    }

                    // Cerrar paneles al hacer clic fuera
                    document.addEventListener('click', (e) => {
                        const target = e.target;

                        if (DOM.sidebar?.classList.contains(CONFIG.classes.show) &&
                            !DOM.sidebar.contains(target) &&
                            !(DOM.openSidebar && DOM.openSidebar.contains(target))) {
                            panelManager.close(DOM.sidebar);
                        }

                        if (DOM.cartPanel?.classList.contains(CONFIG.classes.show) &&
                            !DOM.cartPanel.contains(target) &&
                            !(DOM.openCart && DOM.openCart.contains(target))) {
                            panelManager.close(DOM.cartPanel);
                        }
                    });

                    // Cerrar paneles con ESC
                    document.addEventListener('keydown', (e) => {
                        if (e.key === 'Escape') {
                            panelManager.closeAll();
                        }
                    });

                    // Cerrar paneles con overlay
                    if (DOM.overlay) {
                        DOM.overlay.addEventListener('click', () => {
                            panelManager.closeAll();
                        });
                    }

                    // Sincronización entre pestañas
                    window.addEventListener('storage', (e) => {
                        if (e.key === 'simone_cart_updated') {
                            cartManager.afterMutation();
                        }
                    });

                    // Sincronización al volver a la pestaña
                    document.addEventListener('visibilitychange', () => {
                        if (!document.hidden) {
                            cartManager.updateBadge();
                        }
                    });
                }
            };

            // ======= INICIALIZACIÓN =======
            function initialize() {
                initializeDOM();
                eventManager.initialize();
                cartManager.handleLock();

                // Cargar datos iniciales
                cartManager.updateBadge();

                // Exponer API global
                window.NeoAgora = {
                    panels: panelManager,
                    cart: cartManager,
                    utils: utils
                };
            }

            // Inicializar cuando el DOM esté listo
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initialize);
            } else {
                initialize();
            }
        })();
    </script>

    <!-- Script para funcionalidades adicionales -->
    <script>
        // Back to top functionality
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Mostrar/ocultar botón back to top
        window.addEventListener('scroll', () => {
            const backToTop = document.querySelector('.back-to-top');
            if (backToTop) {
                if (window.pageYOffset > 300) {
                    backToTop.style.opacity = '1';
                    backToTop.style.visibility = 'visible';
                } else {
                    backToTop.style.opacity = '0';
                    backToTop.style.visibility = 'hidden';
                }
            }
        });

        // Manejo de modales de Bootstrap
        document.addEventListener('DOMContentLoaded', () => {
            // Prevenir problemas con múltiples backdrops
            const originalModal = bootstrap.Modal.prototype.constructor;

            bootstrap.Modal = class extends originalModal {
                _showBackdrop() {
                    super._showBackdrop();
                    // Asegurar que el backdrop tenga el z-index correcto
                    const backdrop = document.querySelector('.modal-backdrop');
                    if (backdrop) {
                        backdrop.style.zIndex = '1079';
                    }
                }
            };

            // Limpiar backdrops al cerrar modales
            document.addEventListener('hidden.bs.modal', () => {
                const backdrops = document.querySelectorAll('.modal-backdrop');
                if (backdrops.length > 1) {
                    backdrops.forEach((backdrop, index) => {
                        if (index > 0) backdrop.remove();
                    });
                }
            });
        });

        // Mejorar accesibilidad
        document.addEventListener('keydown', (e) => {
            // Atajos de teclado
            if (e.ctrlKey || e.metaKey) {
                switch (e.key) {
                    case '1':
                        e.preventDefault();
                        window.location.href = '/';
                        break;
                    case '2':
                        e.preventDefault();
                        document.querySelector('#open-sidebar')?.click();
                        break;
                    case '3':
                        e.preventDefault();
                        if (!document.body.dataset.cartLocked) {
                            document.querySelector('#open-cart')?.click();
                        }
                        break;
                }
            }
        });

        // Mejorar performance en móviles
        if ('connection' in navigator) {
            const connection = navigator.connection;
            if (connection.saveData || connection.effectiveType.includes('2g')) {
                // Deshabilitar animaciones pesadas en conexiones lentas
                document.documentElement.style.setProperty('--animation-duration', '0.01s');
            }
        }
    </script>
