<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] - Simone</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome para íconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <!-- Estilos personalizados -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    <style>
        /* Estilos generales del layout */
        .navbar-custom {
            background-color: #000;
        }

            .navbar-custom a {
                color: #fff;
            }

        .sidebar {
            width: 250px;
            left: -250px;
            top: 0;
            transition: left 0.3s ease;
        }

            .sidebar.show {
                left: 0;
            }
        /* Panel del carrito */
        #cartPanel {
            width: 300px;
            right: -300px;
            top: 0;
            transition: right 0.3s ease;
            z-index: 1050;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Navbar Superior -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm">
            <div class="container">
                <!-- Botón para abrir menú lateral de categorías -->
                <button class="btn text-white me-2" id="open-sidebar" aria-label="Abrir menú de categorías">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">SIMONE</a>

                <!-- Enlaces centrales -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ofertas" asp-action="Index">OFERTAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Nosotros">NOSOTROS</a>
                        </li>
                    </ul>
                </div>

                <!-- Sección derecha: Enviar a, búsqueda, favoritos, carrito y usuario -->
                <div class="d-flex align-items-center">
                    <!-- Enviar a: Link interactivo para cambiar la dirección -->
                    <a class="text-white mx-2" asp-controller="Cuenta" asp-action="CambiarDireccion" title="Cambiar mi dirección">
                        <i class="fa-solid fa-location-dot"></i> Enviar a:
                        <span class="fw-bold">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @(ViewBag.UserDireccion ?? "Tu dirección")
                            }
                            else
                            {
                                @:Inicia sesión
                            }
                        </span>
                    </a>
                    <!-- Botón de búsqueda -->
                    <a href="#" class="text-white mx-2" aria-label="Buscar">
                        <i class="fa-solid fa-magnifying-glass fa-lg"></i>
                    </a>
                    <!-- Botón de favoritos -->
                    <a href="#" class="text-white mx-2" aria-label="Favoritos">
                        <i class="fa-solid fa-heart fa-lg"></i>
                    </a>
                    <!-- Botón de carrito: Se actualizará dinámicamente -->
                    <a class="text-white mx-2 position-relative" href="javascript:void(0)" id="open-cart" aria-label="Ver carrito">
                        <i class="fa-solid fa-cart-shopping fa-lg"></i>
                        <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @(ViewBag.CartCount ?? 0)
                        </span>
                    </a>
                    <!-- Botón de usuario: Muestra opciones según autenticación -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a class="text-white mx-2 dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user fa-lg"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Cuenta" asp-action="Perfil">Perfil</a></li>
                                <li><a class="dropdown-item" asp-controller="Cuenta" asp-action="Logout">Cerrar sesión</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Cuenta")" class="text-white mx-2" aria-label="Iniciar sesión">
                            <i class="fa-solid fa-user fa-lg"></i>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar de Categorías -->
    <aside id="sidebar" class="bg-black text-white position-fixed vh-100 p-3 sidebar">
        <button class="btn text-white border-0 mb-3" id="close-sidebar" aria-label="Cerrar menú de categorías">
            <i class="fa-solid fa-times"></i> Cerrar
        </button>
        <h5>Categorías</h5>
        <ul class="list-unstyled">
            <li><a asp-controller="Categorias" asp-action="Ver_Todo" class="text-white">Ver todo</a></li>
            <li><a asp-controller="Categorias" asp-action="Blusas" class="text-white">Blusas</a></li>
            <li><a asp-controller="Categorias" asp-action="Tops" class="text-white">Tops</a></li>
            <li><a asp-controller="Categorias" asp-action="Bodys" class="text-white">Body's</a></li>
            <li><a asp-controller="Categorias" asp-action="TrajeDeBaño" class="text-white">Trajes de Baño</a></li>
            <li><a asp-controller="Categorias" asp-action="Conjuntos" class="text-white">Conjuntos</a></li>
            <li><a asp-controller="Categorias" asp-action="Vestidos" class="text-white">Vestidos</a></li>
            <li><a asp-controller="Categorias" asp-action="Faldas" class="text-white">Faldas</a></li>
            <li><a asp-controller="Categorias" asp-action="Pantalones" class="text-white">Pantalones</a></li>
            <li><a asp-controller="Categorias" asp-action="Jeans" class="text-white">Jeans</a></li>
            <li><a asp-controller="Categorias" asp-action="Bolsas" class="text-white">Bolsas</a></li>
        </ul>
    </aside>

    <!-- Panel del Carrito (Sidebar derecho) -->
    <aside id="cartPanel" class="bg-white position-fixed vh-100 p-3" style="right: -300px;">
        <button class="btn btn-outline-dark mb-3" id="close-cart" aria-label="Cerrar carrito">
            <i class="fa-solid fa-times"></i> Cerrar
        </button>
        <h5>Carrito</h5>
        <div id="cart-content">
            @* Aquí se cargarán los artículos del carrito dinámicamente a través de un partial o componente *@
            @await Html.PartialAsync("_CartPartial")
        </div>
    </aside>

    <!-- Contenido Principal -->
    <main class="container mt-4 pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-4">
        <div class="container">
            <small>&copy; 2025 Simone - Todos los derechos reservados.</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Panel de categorías
        const openSidebarBtn = document.getElementById("open-sidebar");
        const closeSidebarBtn = document.getElementById("close-sidebar");
        const sidebar = document.getElementById("sidebar");

        openSidebarBtn.addEventListener("click", (e) => {
          e.stopPropagation();
          sidebar.classList.add("show");
        });

        closeSidebarBtn.addEventListener("click", (e) => {
          e.stopPropagation();
          sidebar.classList.remove("show");
        });

        // Panel del carrito
        const openCartBtn = document.getElementById("open-cart");
        const closeCartBtn = document.getElementById("close-cart");
        const cartPanel = document.getElementById("cartPanel");

        openCartBtn.addEventListener("click", (e) => {
          e.stopPropagation();
          cartPanel.style.right = "0";
        });

        closeCartBtn.addEventListener("click", (e) => {
          e.stopPropagation();
          cartPanel.style.right = "-300px";
        });

        // Cerrar paneles si se hace clic fuera de ellos
        document.addEventListener("click", (e) => {
          if (!sidebar.contains(e.target) && !openSidebarBtn.contains(e.target)) {
            sidebar.classList.remove("show");
          }
          if (!cartPanel.contains(e.target) && !openCartBtn.contains(e.target)) {
            cartPanel.style.right = "-300px";
          }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
