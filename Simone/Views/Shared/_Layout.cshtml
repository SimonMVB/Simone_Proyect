<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] - Simone</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome para íconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Estilos personalizados -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Navbar Mejorada -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
            <div class="container">
                <!-- Botón de menú lateral -->
                <button class="navbar-toggler border-0" type="button" id="menu-toggle" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars text-white"></i>
                </button>

                <!-- Logo -->
                <a class="navbar-brand fw-bold text-white ms-2" asp-controller="Home" asp-action="Index">
                    SIMONE
                </a>

                <!-- Opciones del menú -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ofertas" asp-action="Index">OFERTAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Nosotros">NOSOTROS</a>
                        </li>
                    </ul>
                </div>

                <!-- Iconos de usuario -->
                <div class="d-flex align-items-center">
                    <a href="#" class="text-white mx-2" aria-label="Buscar"><i class="fa-solid fa-magnifying-glass fa-lg"></i></a>
                    <a href="#" class="text-white mx-2" aria-label="Favoritos"><i class="fa-solid fa-heart fa-lg"></i></a>
                    <a href="#" class="text-white mx-2" aria-label="Carrito"><i class="fa-solid fa-cart-shopping fa-lg"></i></a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="#" class="text-white mx-2 dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user fa-lg"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Cuenta" asp-action="Perfil">Perfil</a></li>
                            <li><a class="dropdown-item" asp-controller="Cuenta" asp-action="Logout">Cerrar Sesión</a></li>
                        </ul>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Cuenta")" class="text-white mx-2" aria-label="Iniciar sesión">
                            <i class="fa-solid fa-user fa-lg"></i>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar de Categorías -->
    <div id="sidebar" class="bg-black text-white position-fixed vh-100 p-3" style="width: 250px; left: -250px; top: 0; transition: 0.3s;">
        <button class="btn text-white border-0 mb-3" id="close-sidebar">
            <i class="fa-solid fa-times"></i> Cerrar
        </button>
        <h5>Categorías</h5>
        <ul class="list-unstyled">
            <li><a href="#" class="text-white">Ver todo</a></li>
            <li><a href="#" class="text-white">Blusas</a></li>
            <li><a href="#" class="text-white">Tops</a></li>
            <li><a href="#" class="text-white">Body's</a></li>
            <li><a href="#" class="text-white">Trajes de Baño</a></li>
            <li><a href="#" class="text-white">Conjuntos</a></li>
            <li><a href="#" class="text-white">Vestidos</a></li>
            <li><a href="#" class="text-white">Faldas</a></li>
            <li><a href="#" class="text-white">Pantalones</a></li>
            <li><a href="#" class="text-white">Jean's</a></li>
            <li><a href="#" class="text-white">Bolsas</a></li>
        </ul>
    </div>

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-4">
        <div class="container">
            <p class="mb-1">&copy; 2025 - Simone. Todos los derechos reservados.</p>
            <div>
                <a href="#" class="text-light me-3" aria-label="Facebook"><i class="fa-brands fa-facebook"></i></a>
                <a href="#" class="text-light me-3" aria-label="Twitter"><i class="fa-brands fa-twitter"></i></a>
                <a href="#" class="text-light" aria-label="Instagram"><i class="fa-brands fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#menu-toggle").click(function () {
                $("#sidebar").css("left", "0");
            });

            $("#close-sidebar").click(function () {
                $("#sidebar").css("left", "-250px");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
