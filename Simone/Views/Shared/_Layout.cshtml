    <!-- Script unificado: paneles, wishlist, carrito, accesibilidad -->
    <script>
        (function(){
          const CART_LOCKED = document.body.dataset.cartLocked === '1';

          // 1) Evitar abrir el panel del carrito
          if (CART_LOCKED) {
            // Botones/links que abren el mini-carrito (ajusta selectores a los tuyos si difieren)
            document.querySelectorAll('.cart-toggle, .cart-open, [data-cart-open]').forEach(el=>{
              el.addEventListener('click', (e)=>{
                e.preventDefault();
                if (window.Swal) Swal.fire({icon:'info', title:'Carrito bloqueado', text:'Ya estás en pago. Para modificar el carrito, sal del pago.', confirmButtonColor:'#e8b4b8'});
              }, true);
            });
          }

          // 2) Bloquear envíos de formularios del mini-carrito (eliminar/actualizar)
          document.addEventListener('submit', (e)=>{
            if (!CART_LOCKED) return;
            const form = e.target;

            // Si es un form del mini-carrito o apunta a acciones típicas del carrito
            const isMiniCartForm = form.closest('.mini-cart, #mini-cart, [data-mini-cart]') != null;
            const hitsCartAction = /Compras\/(EliminarArticulo|ActualizarCantidad|Vaciar|Agregar)/i.test(form.action || "");

            if (isMiniCartForm || hitsCartAction) {
              e.preventDefault();
              if (window.Swal) Swal.fire({icon:'info', title:'Carrito bloqueado', text:'No puedes modificarlo mientras finalizas tu compra.', confirmButtonColor:'#e8b4b8'});
            }
          }, true);

          // 3) Deshabilitar visualmente botones de eliminar / qty en el panel si está montado
          if (CART_LOCKED) {
            document.querySelectorAll('.cart-remove, .cart-qty button, .cart-qty input').forEach(el=>{
              el.setAttribute('disabled', 'disabled');
              el.classList.add('disabled');
            });
          }
        })();
   







        (() => {
          const qs  = (s, r=document) => r.querySelector(s);
          const qsa = (s, r=document) => r.querySelectorAll(s);
          const fx  = new Intl.NumberFormat('es-EC',{style:'currency',currency:'USD'});
          const AJAX_HDRS = { 'X-Requested-With':'XMLHttpRequest' };

          /* ===== Utils ===== */
          const setAriaExp = (btn, open) => { if (btn) btn.setAttribute('aria-expanded', open ? 'true' : 'false'); };
          const lockScroll  = (on) => {
            document.documentElement.classList.toggle('no-scroll', on);
            document.body.classList.toggle('no-scroll', on);
          };
          const firstFocusable = (root) => root?.querySelector('button,[href],input,select,textarea,[tabindex]:not([tabindex="-1"])');

          async function getJSON(url){
            const r = await fetch(url, { credentials:'same-origin', headers: AJAX_HDRS });
            if(!r.ok) throw new Error('HTTP ' + r.status);
            return r.json();
          }

          /* ===== Badge + total global ===== */
          async function updateCartBadge(){
            let d = { count:null, subtotal:null };
            try { d = await getJSON('/Compras/CartInfo'); }
            catch { try { d = await getJSON('/Carrito/CartInfo'); } catch {} }

            const countEl = document.getElementById('cart-count') || document.getElementById('cartCount') || document.getElementById('nav-cart-count');
            const totalEl = document.getElementById('cart-total') || document.getElementById('cartTotal');
            if (countEl && d.count    != null) countEl.textContent = d.count;
            if (totalEl && d.subtotal != null) totalEl.textContent = fx.format(d.subtotal);
            // si tu parcial imprime <span id="mini-cart-total">, también lo actualizamos:
            const inline = document.getElementById('mini-cart-total');
            if (inline && d.subtotal != null) inline.textContent = fx.format(d.subtotal);
          }

          /* ===== Refrescar HTML del panel de carrito ===== */
          async function refreshCartHtml(){
            try{
              const r = await fetch('/Compras/Mini', {
                credentials: 'same-origin',
                headers: AJAX_HDRS
              });
              if (!r.ok) return;
              const html = await r.text();
              const host = document.getElementById('cart-content'); // contenedor del partial en el panel
              if (host) host.innerHTML = html;
            }catch{}
          }

          /* Acción compuesta tras mutar carrito */
          async function afterCartMutation(){
            await updateCartBadge();
            await refreshCartHtml();
            try { localStorage.setItem('simone_cart_ping', String(Date.now())); } catch {}
          }

          /* ===== Paneles (sidebar / carrito) ===== */
          const sidebar = qs('#sidebar');
          const cart    = qs('#cartPanel');
          const btnOpenSidebar = qs('#open-sidebar');
          const btnCloseSidebar = qs('#close-sidebar');
          const btnOpenCart = qs('#open-cart');
          const btnCloseCart = qs('#close-cart');

          function togglePanel(panel, open, triggerBtn){
            if (!panel) return;
            panel.classList.toggle('show', open);
            setAriaExp(triggerBtn, open);
            lockScroll(open);
            if (open) firstFocusable(panel)?.focus();
            else triggerBtn?.focus();
          }

          btnOpenSidebar?.addEventListener('click', (e)=>{ e.preventDefault(); e.stopPropagation(); togglePanel(sidebar, true, btnOpenSidebar); });
          btnCloseSidebar?.addEventListener('click', (e)=>{ e.preventDefault(); togglePanel(sidebar, false, btnOpenSidebar); });

          btnOpenCart?.addEventListener('click', (e)=>{ e.preventDefault(); e.stopPropagation(); togglePanel(cart, true, btnOpenCart); });
          btnCloseCart?.addEventListener('click', (e)=>{ e.preventDefault(); togglePanel(cart, false, btnOpenCart); });

          // Cerrar por click fuera
          document.addEventListener('click', (e) => {
            const t = e.target;
            if (sidebar?.classList.contains('show') && !sidebar.contains(t) && !(btnOpenSidebar && btnOpenSidebar.contains(t))) {
              togglePanel(sidebar, false, btnOpenSidebar);
            }
            if (cart?.classList.contains('show') && !cart.contains(t) && !(btnOpenCart && btnOpenCart.contains(t))) {
              togglePanel(cart, false, btnOpenCart);
            }
          });

          // Cerrar con ESC
          document.addEventListener('keydown', (e) => {
            if (e.key !== 'Escape') return;
            if (sidebar?.classList.contains('show')) togglePanel(sidebar, false, btnOpenSidebar);
            if (cart?.classList.contains('show')) togglePanel(cart, false, btnOpenCart);
          });

          /* ===== Delegación: wishlist + add-to-cart + eliminar mini ===== */
          document.addEventListener('submit', async (e) => {
            const form = e.target;
            if (!(form instanceof HTMLFormElement)) return;

            // Token anti-forgery si existe
            const token = form.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const commonHeaders = { ...AJAX_HDRS };
            if (token) commonHeaders['RequestVerificationToken'] = token;

            // Wishlist
            if (form.matches('.wishlist-form')) {
              e.preventDefault();
              try{
                const res = await fetch(form.action, { method:'POST', body:new FormData(form), credentials:'same-origin', headers: commonHeaders });
                const data = res.ok ? await res.json() : null;
                const btn = form.querySelector('button');
                const ic  = btn?.querySelector('i');
                if (data?.esFavorito && ic && btn){
                  ic.classList.remove('far'); ic.classList.add('fas');
                  btn.title = 'Eliminar de favoritos'; btn.classList.add('active');
                }else if (ic && btn){
                  ic.classList.remove('fas'); ic.classList.add('far');
                  btn.title = 'Añadir a favoritos'; btn.classList.remove('active');
                }
              }catch(err){ console.error('Error en favoritos:', err); }
              return;
            }

            // (3.2) Añadir al carrito (unificado)
            if (form.matches('[data-add-to-cart], #formAdd, form[action$="/Compras/AnadirAlCarrito"]')) {
              e.preventDefault();
              const btn = form.querySelector('[data-role="add-btn"], button[type="submit"]');
              const prevHTML = btn?.innerHTML;
              if (btn){ btn.disabled = true; btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Agregando...'; }
              try{
                const res  = await fetch(form.action, { method:'POST', body:new FormData(form), credentials:'same-origin', headers: commonHeaders });
                const data = res.ok ? await res.json() : null;
                if (data?.needLogin){ location.href = '/Cuenta/Login'; return; }
                if (!data?.ok) throw new Error(data?.error || 'No se pudo añadir.');
                const toastEl = qs('#toastOk');
                if (toastEl && window.bootstrap) bootstrap.Toast.getOrCreateInstance(toastEl).show();
                await afterCartMutation(); // <<--- refresca badge + panel
                // togglePanel(cart, true, btnOpenCart); // (opcional) abre el panel al añadir
              }catch(err){
                console.error(err);
                const msgEl = qs('#toastErrMsg');
                if (msgEl) msgEl.textContent = err.message || 'Error de red.';
                const toastErr = qs('#toastErr');
                if (toastErr && window.bootstrap) bootstrap.Toast.getOrCreateInstance(toastErr).show();
              }finally{
                if (btn){ btn.disabled = false; btn.innerHTML = prevHTML; }
              }
              return;
            }

            // (3.3) Eliminar/actualizar desde el mini-panel (acciones del panel derecho)
            if (form.matches('#cartPanel form[action$="/Compras/EliminarArticulo"], #cartPanel form[action$="/Compras/ActualizarCantidad"]')) {
              e.preventDefault();

              const fd = new FormData(form);
              const tokenHidden = document.querySelector('#mini-cart-af input[name="__RequestVerificationToken"]')?.value
                               || form.querySelector('input[name="__RequestVerificationToken"]')?.value;
              if (tokenHidden && !fd.has('__RequestVerificationToken')) {
                fd.append('__RequestVerificationToken', tokenHidden);
              }

              try{
                const res = await fetch(form.action, { method:'POST', body: fd, credentials:'same-origin', headers: AJAX_HDRS });
                const data = res.ok ? await res.json() : null;
                if (!data?.ok && !res.ok) throw new Error(data?.error || 'Operación no realizada.');
                await afterCartMutation();
              }catch(err){
                console.error(err);
                alert(err.message || 'No se pudo completar la operación.');
              }
              return;
            }
          });

          // Fallback por click en el botón de borrar del mini (por si el navegador no dispara submit)
          document.addEventListener('click', async (e) => {
            const btn = e.target.closest('#cartPanel [data-role="mini-remove"]');
            if (!btn) return;
            const form = btn.closest('form');
            if (!form) return;
            e.preventDefault();
            const fd = new FormData(form);
            const tokenHidden = document.querySelector('#mini-cart-af input[name="__RequestVerificationToken"]')?.value
                             || form.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (tokenHidden && !fd.has('__RequestVerificationToken')) {
              fd.append('__RequestVerificationToken', tokenHidden);
            }
            await fetch(form.action, { method:'POST', body: fd, credentials:'same-origin', headers: AJAX_HDRS }).catch(()=>{});
            await afterCartMutation();
          });

          /* (3.4) Sincroniza al cargar / volver de background */
          document.addEventListener('DOMContentLoaded', () => {
            updateCartBadge();
            // refreshCartHtml(); // descomenta si quieres que el panel siempre se repinte al cargar
          });
          document.addEventListener('visibilitychange', () => {
            if (!document.hidden){ updateCartBadge(); /* refreshCartHtml(); */ }
          });
          window.addEventListener('focus', () => { updateCartBadge(); });

          /* Exponer si alguna vista lo llama explícitamente */
          window.SimoneCart = { updateCartBadge, refreshCartHtml };
        })();
    </script>


