                                {
                                    <img src="@user.FotoPerfil" class="rounded-circle border border-light shadow-sm" style="width:38px;height:38px;object-fit:cover;" alt="Avatar" />
                                }
                                else
                                {
                                    <i class="fa-solid fa-user fa-lg text-white"></i>
