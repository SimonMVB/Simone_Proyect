@model CatalogoViewModel

@{
    /*
      Esta vista se construye a partir del código proporcionado por el usuario y se
      ha estilizado para ofrecer una apariencia más moderna y pulida. Se mantiene
      toda la funcionalidad de filtrado y navegación pero se mejoran los colores,
      las sombras y la disposición de los elementos para una experiencia visual
      más agradable.  Se han conservado las variables y la lógica Razor original.
    */

    string BuildUrl(int? categoriaID, List<int> subcategoriaIDs, int pageNumber, int pageSize)
    {
        var query = new List<string>();

        if (categoriaID.HasValue)
            query.Add($"categoriaID={categoriaID.Value}");

        if (subcategoriaIDs != null && subcategoriaIDs.Any())
            query.AddRange(subcategoriaIDs.Select(id => $"subcategoriaIDs={id}"));

        query.Add($"pageNumber={pageNumber}");
        query.Add($"pageSize={pageSize}");

        return Url.Action("Catalogo") + "?" + string.Join("&", query);
    }
}

<div class="catalog-container">
    <!-- Sidebar Categorias y Subcategorias -->
    <aside class="catalog-sidebar">
        <!-- Sección de categorías -->
        <div class="sidebar-section">
            <div class="sidebar-header">
                <i class="fas fa-list"></i> Categorías
            </div>
            <div class="sidebar-body">
                <form method="get" asp-action="Catalogo" class="category-form">
                    <div class="form-option">
                        <input class="form-check-input" type="radio" name="categoriaID" value="" id="all-categories"
                               onchange="this.form.submit()" @(Model.SelectedCategoriaID == null ? "checked" : "")>
                        <label class="form-check-label" for="all-categories">
                            <span class="checkmark"></span>
                            <span class="option-text">Todas las categorías</span>
                        </label>
                    </div>
                    @foreach (var cat in Model.Categorias)
                    {
                        <div class="form-option">
                            <input class="form-check-input" type="radio" name="categoriaID" value="@cat.CategoriaID"
                                   id="cat-@cat.CategoriaID" onchange="this.form.submit()"
                                   @(cat.CategoriaID == Model.SelectedCategoriaID ? "checked" : "")>
                            <label class="form-check-label" for="cat-@cat.CategoriaID">
                                <span class="checkmark"></span>
                                <span class="option-text">@cat.Nombre</span>
                            </label>
                        </div>
                    }
                </form>
            </div>
        </div>

        @if (Model.SelectedCategoriaID.HasValue)
        {
            <!-- Sección de subcategorías -->
            <div class="sidebar-section">
                <div class="sidebar-header">
                    <i class="fas fa-tags"></i> Subcategorías
                </div>
                <div class="sidebar-body">
                    <form method="get" asp-action="Catalogo" id="subcatForm" class="subcategory-form">
                        <input type="hidden" name="categoriaID" value="@Model.SelectedCategoriaID" />
                        @foreach (var subcat in Model.Subcategorias)
                        {
                            <div class="form-option">
                                <input class="form-check-input" type="checkbox" name="subcategoriaIDs"
                                       value="@subcat.SubcategoriaID" id="subcat-@subcat.SubcategoriaID"
                                       onchange="document.getElementById('subcatForm').submit()"
                                       @(Model.SelectedSubcategoriaIDs.Contains(subcat.SubcategoriaID) ? "checked" : "")>
                                <label class="form-check-label" for="subcat-@subcat.SubcategoriaID">
                                    <span class="checkmark"></span>
                                    <span class="option-text">@subcat.NombreSubcategoria</span>
                                </label>
                            </div>
                        }
                    </form>
                </div>
            </div>
        }
    </aside>

    <!-- Productos -->
    <section class="catalog-products">
        <header class="products-header">
            <h2>@(Model.SelectedCategoriaID.HasValue? Model.Categorias.First(c => c.CategoriaID == Model.SelectedCategoriaID).Nombre : "Todos los productos")</h2>
            <div class="sort-options">
                <select class="form-select">
                    <option>Ordenar por</option>
                    <option>Precio: Menor a mayor</option>
                    <option>Precio: Mayor a menor</option>
                    <option>Novedades</option>
                    <option>Más vendidos</option>
                </select>
            </div>
        </header>

        <div class="products-grid">
            @foreach (var p in Model.Productos)
            {
                <article class="product-card">
                    <a asp-controller="Compras" asp-action="VerProducto" asp-route-productoID="@p.ProductoID" class="product-link">
                        <div class="product-image-container">
                            <img src="@p.ImagenPath" class="product-image" alt="@p.Nombre">
                            <div class="product-badge">Nuevo</div>
                            @if (p.Stock <= 0)
                            {
                                <div class="out-of-stock-badge">Agotado</div>
                            }
                        </div>
                        <div class="product-info">
                            <h3 class="product-title">@p.Nombre</h3>
                            <div class="product-price">@p.PrecioVenta.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</div>
                            <div class="product-colors">
                                <span class="color-option" style="background-color: #000;"></span>
                                <span class="color-option" style="background-color: #6A0DAD;"></span>
                                <span class="color-option" style="background-color: #D4AF37;"></span>
                            </div>
                        </div>
                    </a>

                    <!-- ⭐ FORMULARIO DE FAVORITO -->
                    <form class="wishlist-form" method="post" action="/Favoritos/Toggle/@p.ProductoID">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="wishlist-btn @(Model.ProductoIDsFavoritos.Contains(p.ProductoID) ? "active" : "")"
                                title="@(Model.ProductoIDsFavoritos.Contains(p.ProductoID) ? "Eliminar de favoritos" : "Añadir a favoritos")">
                            <i class="@(Model.ProductoIDsFavoritos.Contains(p.ProductoID) ? "fas" : "far") fa-heart"></i>
                        </button>
                    </form>

                    @if (p.Stock > 0)
                    {
                        <form asp-controller="Compras" asp-action="AnadirAlCarrito" method="post" class="add-to-cart-form">
                            <input type="hidden" name="ProductoID" value="@p.ProductoID" />
                            <input type="hidden" name="Cantidad" value="1" />
                            <button type="submit" class="add-to-cart-btn">
                                <i class="fas fa-shopping-bag"></i> Añadir al carrito
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="add-to-cart-btn" disabled style="background-color: #ccc; cursor: not-allowed;">
                            <i class="fas fa-times-circle"></i> No hay stock
                        </button>
                    }
                </article>
            }
        </div>

        <!-- Paginación -->
        <div class="pagination-container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>
</div>

<style>
    /* Variables de color mejoradas */
    :root {
        --primary-dark: #1A1A1A; /* Negro profundo */
        --primary-light: #FFFFFF; /* Blanco */
        --accent-purple: #6A0DAD; /* Morado profundo */
        --accent-purple-light: #8c45c7; /* Morado claro usado en hover */
        --accent-gold: #D4AF37; /* Dorado */
        --light-gray: #FAFAFA; /* Fondo general suave */
        --medium-gray: #E6E6E6; /* Bordes y divisiones suaves */
        --dark-gray: #333333; /* Texto principal */
        --text-color: #333333; /* Texto base */
        --text-light: #777777; /* Texto secundario */
        --shadow-color: rgba(0, 0, 0, 0.08); /* Sombras suaves */
    }

    /* Reset y tipografía */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Montserrat', sans-serif;
    }

    body {
        background-color: var(--light-gray);
        color: var(--text-color);
        line-height: 1.45;
    }

    /* Contenedor principal */
    .catalog-container {
        display: flex;
        max-width: 1440px;
        margin: 40px auto;
        padding: 0 20px;
        gap: 30px;
    }

    /* Sidebar */
    .catalog-sidebar {
        flex: 0 0 260px;
    }

    .sidebar-section {
        background-color: var(--primary-light);
        border-radius: 12px;
        box-shadow: 0 4px 12px var(--shadow-color);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        background: linear-gradient(90deg, var(--accent-purple) 0%, var(--accent-purple-light) 100%);
        color: var(--primary-light);
        padding: 16px;
        font-weight: 600;
        font-size: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .sidebar-header i {
            color: var(--accent-gold);
        }

    .sidebar-body {
        padding: 18px;
    }

    /* Opciones de formulario */
    .form-option {
        margin-bottom: 15px;
        position: relative;
    }

        .form-option:last-child {
            margin-bottom: 0;
        }

    .form-check-input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
    }

    .form-check-label {
        display: flex;
        align-items: center;
        cursor: pointer;
        font-size: 15px;
        color: var(--text-color);
        transition: color 0.2s;
        user-select: none;
    }

        .form-check-label:hover {
            color: var(--accent-purple);
        }

    .checkmark {
        position: relative;
        height: 20px;
        width: 20px;
        background-color: var(--light-gray);
        border: 2px solid var(--medium-gray);
        margin-right: 12px;
        border-radius: 4px;
        transition: all 0.25s;
    }

    .form-check-input[type="radio"] + .checkmark {
        border-radius: 50%;
    }

    .form-check-input:checked ~ .checkmark {
        background-color: var(--accent-purple);
        border-color: var(--accent-purple);
    }

    .form-check-input[type="radio"]:checked ~ .checkmark::after {
        content: "";
        position: absolute;
        top: 5px;
        left: 5px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--primary-light);
    }

    .form-check-input[type="checkbox"]:checked ~ .checkmark::after {
        content: "\f00c";
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: var(--primary-light);
        font-size: 12px;
    }

    .option-text {
        flex: 1;
    }

    /* Productos */
    .catalog-products {
        flex: 1;
    }

    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .products-header h2 {
            font-size: 26px;
            font-weight: 700;
            color: var(--primary-dark);
        }

    .sort-options .form-select {
        border: 1px solid var(--medium-gray);
        border-radius: 25px;
        padding: 9px 20px;
        font-size: 15px;
        color: var(--text-color);
        cursor: pointer;
        outline: none;
        width: 220px;
        background-color: var(--primary-light);
        transition: border 0.25s;
    }

        .sort-options .form-select:focus {
            border-color: var(--accent-purple);
        }

    /* Grid de productos */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 25px;
    }

    /* Tarjeta de producto */
    .product-card {
        background-color: var(--primary-light);
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 4px 12px var(--shadow-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 20px var(--shadow-color);
        }

    .product-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .product-image-container {
        position: relative;
        padding-top: 120%;
        overflow: hidden;
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.07);
    }

    .product-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        z-index: 1;
    }

    .out-of-stock-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background-color: #e74c3c;
        color: var(--primary-light);
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        z-index: 1;
    }

    .wishlist-btn {
        background-color: transparent;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease;
        z-index: 2;
    }

        .wishlist-btn:hover {
            background-color: rgba(255, 255, 255, 0.8);
        }

        .wishlist-btn.active i {
            animation: pulse 0.4s ease;
        }

        .wishlist-btn i {
            font-size: 18px;
            color: var(--accent-gold);
            transition: transform 0.3s ease;
        }

    .product-info {
        padding: 16px;
    }

    .product-title {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 6px;
        color: var(--text-color);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-price {
        font-size: 18px;
        font-weight: 700;
        color: var(--accent-purple);
        margin-bottom: 12px;
    }

    .product-colors {
        display: flex;
        gap: 6px;
        margin-bottom: 12px;
    }

    .color-option {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        border: 1px solid var(--medium-gray);
        cursor: pointer;
        transition: transform 0.2s;
    }

        .color-option:hover {
            transform: scale(1.1);
        }

    .add-to-cart-btn {
        width: 100%;
        padding: 12px;
        background-color: var(--primary-dark);
        color: var(--primary-light);
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border-bottom-left-radius: 14px;
        border-bottom-right-radius: 14px;
    }

        .add-to-cart-btn:hover {
            background-color: var(--accent-purple);
        }

        .add-to-cart-btn[disabled] {
            background-color: #c3c3c3;
            color: #f5f5f5;
            cursor: not-allowed;
        }

    /* Paginación */
    .pagination-container {
        margin-top: 50px;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        gap: 6px;
    }

    .page-item {
        list-style: none;
    }

    .page-link {
        display: block;
        padding: 10px 18px;
        background-color: var(--primary-light);
        color: var(--text-color);
        border: 1px solid var(--medium-gray);
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s;
        font-size: 14px;
    }

        .page-link:hover {
            background-color: var(--light-gray);
            border-color: var(--accent-purple);
            color: var(--accent-purple);
        }

    .page-item.active .page-link {
        background-color: var(--accent-purple);
        color: var(--primary-light);
        border-color: var(--accent-purple);
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .catalog-container

    {
        flex-direction: column;
    }

    .catalog-sidebar {
        flex: 1;
        margin-bottom: 35px;
    }

    .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }

    .sort-options .form-select {
        width: 180px;
    }

    }

    @@media (max-width: 576px) {
        .products-header

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .sort-options .form-select {
        width: 100%;
    }

    .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 16px;
    }

    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.4);
    }

    100% {
        transform: scale(1);
    }

    }
</style>

<!-- Iconos Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

