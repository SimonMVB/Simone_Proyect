@model Simone.Models.Producto
@using System.Globalization
@{
    ViewData["Title"] = "Detalles del Producto";
    var culture = CultureInfo.CreateSpecificCulture("es-EC");

    // fallback imagen
    string Img(string? src) => string.IsNullOrWhiteSpace(src) ? Url.Content("~/images/Productos/default.jpg") : src!;
}

@if (TempData["MensajeError"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger"><i class="fa-solid fa-circle-exclamation me-2"></i>@err</div>
}

<nav class="container small my-3" aria-label="breadcrumb">
    <ol class="breadcrumb m-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-controller="Compras" asp-action="Catalogo">Catálogo</a></li>
        @if (!string.IsNullOrWhiteSpace(Model?.Categoria?.Nombre))
        {
            <li class="breadcrumb-item">@Model.Categoria.Nombre</li>
        }
        <li class="breadcrumb-item active" aria-current="page">@Model?.Nombre</li>
    </ol>
</nav>

<div class="container pb-5" itemscope itemtype="https://schema.org/Product">
    <div class="row g-4">
        <!-- Galería -->
        <div class="col-lg-6">
            <div class="product-gallery card shadow-sm border-0">
                <div class="p-3">
                    <div class="ratio ratio-1x1 rounded-3 bg-light overflow-hidden position-relative">
                        <img id="mainImg"
                             src="@Img(Model.ImagenPath)"
                             class="w-100 h-100 object-fit-contain"
                             alt="@Model.Nombre"
                             itemprop="image"
                             onerror="this.src='@Url.Content("~/images/Productos/default.jpg")';" />
                        @if (Model?.Stock == 0)
                        {
                            <span class="badge text-bg-danger position-absolute top-0 end-0 m-2">Agotado</span>
                        }
                        else if (Model?.Stock <= 5)
                        {
                            <span class="badge text-bg-warning position-absolute top-0 end-0 m-2">¡Quedan pocas unidades!</span>
                        }
                    </div>

                    <!-- miniaturas (si solo tienes una imagen, repetimos como placeholder) -->
                    <div class="d-flex gap-2 mt-3">
                        <button type="button" class="thumb active" data-src="@Img(Model.ImagenPath)">
                            <img src="@Img(Model.ImagenPath)" alt="Miniatura" />
                        </button>
                        <!-- Si en el futuro agregas más, duplica botones .thumb con data-src -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel de info / compra -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h1 class="h3 mb-2" itemprop="name">@Model.Nombre</h1>

                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="text-muted small">
                            @if (!string.IsNullOrWhiteSpace(Model.Marca))
                            {
                                <text><i class="fa-solid fa-tag me-1"></i>@Model.Marca</text>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Talla))
                            {
                                <text> · <i class="fa-solid fa-maximize me-1"></i>@Model.Talla</text>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Color))
                            {
                                <text> · <i class="fa-solid fa-palette me-1"></i>@Model.Color</text>
                            }
                        </span>
                    </div>

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="display-6 fw-bold text-primary m-0" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                            <span itemprop="priceCurrency" content="USD" class="d-none">USD</span>
                            <span itemprop="price">@Model.PrecioVenta.ToString("0.00", CultureInfo.InvariantCulture)</span><span class="fs-5 ms-1">USD</span>
                        </div>
                        <span class="badge @(Model.Stock > 0 ? "text-bg-success" : "text-bg-secondary")">
                            @(Model.Stock > 0 ? "En stock" : "Sin stock")
                        </span>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                    {
                        <p class="text-muted mb-3" itemprop="description">@Model.Descripcion</p>
                    }

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <!-- selector cantidad -->
                        <div class="input-group input-group-sm quantity" style="width:160px;">
                            <button class="btn btn-outline-secondary" type="button" id="btnMinus" aria-label="Disminuir cantidad">
                                <i class="fa-solid fa-minus"></i>
                            </button>
                            <input id="Cantidad" name="Cantidad" type="number" class="form-control text-center"
                                   min="1" max="@(Model.Stock > 0 ? Model.Stock : 1)" value="1" />
                            <button class="btn btn-outline-secondary" type="button" id="btnPlus" aria-label="Aumentar cantidad">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>

                        <!-- favoritos -->
                        <form method="post" action="/Favoritos/Toggle/@Model.ProductoID" class="m-0" id="favForm">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fa-regular fa-heart me-1"></i> Favorito
                            </button>
                        </form>

                        <!-- compartir -->
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="btnShare">
                            <i class="fa-solid fa-share-nodes me-1"></i> Compartir
                        </button>
                    </div>

                    <!-- Envío / garantías -->
                    <div class="small text-muted mb-3 d-flex flex-column gap-1">
                        <div><i class="fa-solid fa-truck-fast me-2"></i>Envíos a todo el Ecuador (24–48 h hábiles)</div>
                        <div><i class="fa-solid fa-arrows-rotate me-2"></i>Cambios en 7 días por talla/defecto</div>
                        <div><i class="fa-solid fa-shield-halved me-2"></i>Pago seguro</div>
                    </div>

                    <!-- Añadir al carrito (AJAX) -->
                    <form id="formAdd" asp-controller="Compras" asp-action="AnadirAlCarrito" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ProductoID" value="@Model.ProductoID" />
                        <input type="hidden" name="Cantidad" id="CantidadHidden" value="1" />
                        @if (Model.Stock > 0)
                        {
                            <button class="btn btn-primary btn-lg w-100" id="btnAdd">
                                <i class="fa-solid fa-bag-shopping me-2"></i>Añadir al carrito
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg w-100" type="button" disabled>
                                <i class="fa-solid fa-ban me-2"></i>Sin stock
                            </button>
                        }
                    </form>

                    <!-- Acordeón info extra -->
                    <div class="accordion mt-4" id="accInfo">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="hDesc">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#cDesc" aria-expanded="true" aria-controls="cDesc">
                                    Descripción detallada
                                </button>
                            </h2>
                            <div id="cDesc" class="accordion-collapse collapse show" aria-labelledby="hDesc" data-bs-parent="#accInfo">
                                <div class="accordion-body">
                                    @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "Sin descripción adicional." : Model.Descripcion)
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="hEnvio">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#cEnvio" aria-expanded="false" aria-controls="cEnvio">
                                    Envío y devoluciones
                                </button>
                            </h2>
                            <div id="cEnvio" class="accordion-collapse collapse" aria-labelledby="hEnvio" data-bs-parent="#accInfo">
                                <div class="accordion-body">
                                    Entregamos en 24–48 horas hábiles. Cambios dentro de 7 días por talla o defecto de fábrica (aplican términos).
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Compras" asp-action="Catalogo" class="btn btn-outline-dark">
                            <i class="fa-solid fa-arrow-left-long me-1"></i> Volver al catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Relacionados (opcional: usa ViewBag.Relacionados como IEnumerable<Producto>) -->
    @if (ViewBag.Relacionados is IEnumerable<Simone.Models.Producto> rel && rel.Any())
    {
        <div class="mt-5">
            <h3 class="h5 mb-3">También te puede interesar</h3>
            <div class="row g-3">
                @foreach (var p in rel.Take(4))
                {
                    <div class="col-6 col-md-3">
                        <a class="card h-100 text-decoration-none text-reset shadow-sm border-0"
                           asp-controller="Compras" asp-action="VerProducto" asp-route-productoID="@p.ProductoID">
                            <div class="ratio ratio-1x1 bg-light">
                                <img src="@Img(p.ImagenPath)" class="w-100 h-100 object-fit-contain" alt="@p.Nombre"
                                     onerror="this.src='@Url.Content("~/images/Productos/default.jpg")';" />
                            </div>
                            <div class="card-body small">
                                <div class="fw-semibold text-truncate">@p.Nombre</div>
                                <div class="text-primary fw-bold">@p.PrecioVenta.ToString("C", culture)</div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Toast simple -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index:1080;">
    <div id="toastOk" class="toast align-items-center text-bg-success border-0" role="status" aria-live="polite" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body"><i class="fa-solid fa-circle-check me-2"></i>Producto añadido al carrito.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
        </div>
    </div>
    <div id="toastErr" class="toast align-items-center text-bg-danger border-0 mt-2" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body"><i class="fa-solid fa-triangle-exclamation me-2"></i><span id="toastErrMsg">No se pudo añadir.</span></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
        </div>
    </div>
</div>

<style>
    :root {
        --brand: #e8b4b8;
        --brand-dark: #d99a9f;
    }

    .object-fit-contain {
        object-fit: contain;
    }

    .thumb {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: .5rem;
        padding: 4px;
        width: 70px;
        height: 70px;
        display: grid;
        place-items: center
    }

        .thumb img {
            width: 100%;
            height: 100%;
            object-fit: contain
        }

        .thumb.active {
            outline: 2px solid var(--brand)
        }

    .btn-primary {
        --bs-btn-bg: var(--brand);
        --bs-btn-border-color: var(--brand);
        --bs-btn-hover-bg: var(--brand-dark);
        --bs-btn-hover-border-color: var(--brand-dark);
    }

    .quantity .btn {
        width: 42px
    }
</style>

@section Scripts {
    <script>
        (() => {
            const $ = s => document.querySelector(s);

            // thumbs
            document.querySelectorAll('.thumb').forEach(t => {
                t.addEventListener('click', () => {
                    document.querySelectorAll('.thumb').forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    const src = t.getAttribute('data-src');
                    if (src) $('#mainImg').src = src;
                });
            });

            // cantidad stepper
            const input = $('#Cantidad');
            const hidden = $('#CantidadHidden');
            const stockMax = parseInt(input?.getAttribute('max') || '1', 10);

            const sync = () => {
                let val = parseInt(input.value || '1', 10);
                if (isNaN(val) || val < 1) val = 1;
                if (val > stockMax) val = stockMax;
                input.value = val;
                hidden.value = val;
            };
            $('#btnMinus')?.addEventListener('click', () => { input.value = (parseInt(input.value||'1',10) - 1); sync(); });
            $('#btnPlus')?.addEventListener('click',  () => { input.value = (parseInt(input.value||'1',10) + 1); sync(); });
            input?.addEventListener('change', sync);
            sync();

            // compartir
            $('#btnShare')?.addEventListener('click', async () => {
                const data = { title: document.title, text: '@Model?.Nombre', url: location.href };
                if (navigator.share) { try { await navigator.share(data); } catch {} }
                else { await navigator.clipboard.writeText(location.href); alert('Enlace copiado'); }
            });

            // toggle favorito (opcional: sin recargar)
            const favForm = $('#favForm');
            favForm?.addEventListener('submit', async (e) => {
                e.preventDefault();
                try{
                    const res = await fetch(favForm.action, { method:'POST', body: new FormData(favForm), headers:{'X-Requested-With':'XMLHttpRequest'} });
                    if(res.ok){
                        const btn = favForm.querySelector('button');
                        const ic  = btn.querySelector('i');
                        btn.classList.toggle('btn-outline-danger');
                        btn.classList.toggle('btn-danger');
                        ic.classList.toggle('fa-regular');
                        ic.classList.toggle('fa-solid');
                    }else{
                        alert('No se pudo actualizar favoritos.');
                    }
                }catch{ alert('Error de red.'); }
            });

            // añadir al carrito (AJAX usa tu AnadirAlCarrito que ya devuelve JSON)
            const form = $('#formAdd');
            const btn  = $('#btnAdd');
            form?.addEventListener('submit', async (e) => {
                e.preventDefault();
                if (!btn) return form.submit(); // fallback
                btn.disabled = true; const prev = btn.innerHTML;
                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Agregando...';
                try{
                    const res = await fetch(form.action, { method:'POST', body: new FormData(form), headers:{'X-Requested-With':'XMLHttpRequest'} });
                    const data = res.ok ? await res.json() : null;
                    if (data && data.ok){
                        showToast('#toastOk');
                        // si quieres, actualiza contador del carrito en tu layout con data.count
                        // document.getElementById('cartCount')?.textContent = data.count;
                    }else{
                        const msg = (data && data.error) ? data.error : 'No se pudo añadir.';
                        $('#toastErrMsg').textContent = msg;
                        showToast('#toastErr');
                    }
                }catch{
                    $('#toastErrMsg').textContent = 'Error de red.';
                    showToast('#toastErr');
                }finally{
                    btn.disabled = false; btn.innerHTML = prev;
                }
            });

            function showToast(sel){
                try{
                    const el = document.querySelector(sel);
                    const t  = bootstrap.Toast.getOrCreateInstance(el);
                    t.show();
                }catch{ /* sin bootstrap */ }
            }
        })();
    </script>
}
