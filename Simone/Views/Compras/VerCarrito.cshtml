@model IEnumerable<Simone.Models.CarritoDetalle>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Producto.NombreProducto</td>
                <td>
                    <form method="post" asp-action="ActualizarCarrito">
                        <input type="hidden" name="productoId" value="@item.ProductoID" />
                        <input type="number" name="cantidad" min="1" class="form-control" value="@item.Cantidad" />
                        <button type="submit" class="btn btn-primary">Actualizar</button>
                    </form>
                </td>
                <!-- Cambia 'Precio' a 'PrecioUnitario' -->
                <td>@item.Precio.ToString("C2")</td>
                <!-- Si tu modelo tiene la propiedad Total (Cantidad * PrecioUnitario) -->
                <td>@item.Total.ToString("C2")</td>
                <td>
                    <a href="@Url.Action("EliminarDelCarrito", "Carrito", new { productoId = item.ProductoID })"
                       class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <!-- Sumamos el total de todos los items -->
        <tr>
            <td colspan="4" class="text-end">
                <strong>Total:</strong>
                @Model.Sum(x => x.Total).ToString("C2")
            </td>
        </tr>
    </tfoot>
</table>
