@model IEnumerable<Simone.Models.CarritoDetalle>
@{
    ViewData["Title"] = "Carrito de Compras";
    var totalCarrito = Model.Sum(x => x.Total);
    decimal descuento = ViewBag.Descuento ?? 0;
    string codigoCupon = ViewBag.CodigoCupon ?? "";
    var totalConDescuento = totalCarrito - descuento;
}

<div class="ui container mt-5">
    <h2 class="ui header">
        <i class="shopping cart icon"></i>
        <div class="content">
            Carrito de Compras
            <div class="sub header">Revisa, modifica o elimina productos antes de confirmar tu compra</div>
        </div>
    </h2>

    <div class="ui divider"></div>

    @if (Model.Any())
    {
        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th style="width: 160px;">Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Producto.Nombre</td>
                        <td>
                            <form method="post" asp-action="ActualizarCarrito" class="ui form">
                                <div class="ui action input">
                                    <input type="hidden" name="productoId" value="@item.ProductoID" />
                                    <input type="number" name="cantidad" min="1" value="@item.Cantidad" style="width:80px" />
                                    <button type="submit" class="ui icon blue button" title="Actualizar">
                                        <i class="sync alternate icon"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                        <td>$@item.Precio.ToString("F2")</td>
                        <td>$@item.Total.ToString("F2")</td>
                        <td>
                            <a href="@Url.Action("EliminarDelCarrito", "Carrito", new { productoId = item.ProductoID })" class="ui red icon button" title="Eliminar">
                                <i class="trash icon"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="right aligned">Subtotal:</th>
                    <th colspan="2">$@totalCarrito.ToString("F2")</th>
                </tr>

                @if (descuento > 0)
                {
                    <tr class="warning">
                        <th colspan="3" class="right aligned">
                            Cupón aplicado (@codigoCupon):
                        </th>
                        <th colspan="2" class="negative">- $@descuento.ToString("F2")</th>
                    </tr>
                    <tr>
                        <th colspan="5" class="right aligned">
                            <form method="post" asp-action="QuitarCupon" style="display:inline;">
                                <button class="ui tiny button red">
                                    <i class="close icon"></i> Quitar Cupón
                                </button>
                            </form>
                        </th>
                    </tr>
                }

                <tr>
                    <th colspan="3" class="right aligned">Total a Pagar:</th>
                    <th colspan="2"><strong>$@totalConDescuento.ToString("F2")</strong></th>
                </tr>
            </tfoot>
        </table>

        <div class="ui divider"></div>

        <div class="ui two column stackable grid">
            <div class="column">
                <form method="post" asp-action="AplicarCupon" class="ui form">
                    <div class="field">
                        <label>¿Tienes un código de cupón?</label>
                        <div class="ui action input">
                            <input type="text" name="codigoCupon" placeholder="Ingresa tu cupón..." />
                            <button type="submit" class="ui teal button">Aplicar</button>
                        </div>
                    </div>
                </form>

                @if (TempData["CuponAplicado"] != null)
                {
                    <div class="ui green message">
                        <i class="check icon"></i> @TempData["CuponAplicado"]
                    </div>
                }

                @if (TempData["CuponError"] != null)
                {
                    <div class="ui red message">
                        <i class="times icon"></i> @TempData["CuponError"]
                    </div>
                }
            </div>

            <div class="right aligned column">
                <form asp-action="ConfirmarCompra" method="post">
                    <button class="ui green huge button">
                        <i class="check icon"></i> Confirmar Compra
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="ui icon warning message">
            <i class="shopping basket icon"></i>
            <div class="content">
                <div class="header">Tu carrito está vacío</div>
                <p>Agrega productos desde el catálogo para comenzar tu compra.</p>
            </div>
        </div>
    }
</div>
