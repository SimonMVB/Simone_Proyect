@model Simone.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_LayoutCuenta.cshtml";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-center">
            <h4><i class="fa-solid fa-envelope me-2"></i>¿Olvidaste tu contraseña?</h4>
        </div>
        <div class="card-body">
            <form asp-action="OlvidePassword" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-info w-100">
                    <i class="fa-solid fa-paper-plane me-2"></i>Enviar enlace
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
