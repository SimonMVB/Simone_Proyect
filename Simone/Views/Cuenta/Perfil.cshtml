@model Simone.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml"; // ajusta si usas otro layout
    var usuario = ViewData["Usuario"] as Simone.Models.Usuario;
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4><i class="fa-solid fa-user-circle me-2"></i>Mi Perfil</h4>
        </div>

        <div class="card-body">
            @if (TempData["MensajeExito"] != null || TempData["MensajeError"] != null)
            {
                var message = TempData["MensajeExito"] ?? TempData["MensajeError"];
                var alertClass = TempData["MensajeExito"] != null ? "alert-success" : "alert-danger";
                var iconClass = TempData["MensajeExito"] != null ? "fa-circle-check" : "fa-circle-exclamation";
                
                <div class="alert @alertClass">
                    <i class="fa-solid @iconClass me-2"></i> @message
                </div>
            }

            <form asp-action="Perfil" method="post" id="formPerfil">
                <div class="mb-3">
                    <label class="form-label">Correo electrónico</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre completo</label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Rol actual</label>
                    <input value="@ViewBag.RolUsuario" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha de registro</label>
                    <input value="@(usuario?.FechaRegistro.ToShortDateString() ?? "No disponible") " class="form-control" readonly />
                </div>

                @if (usuario != null) {
                <div class="mb-4">
                    <label class="form-label">Estado</label>
                    <input value="@(usuario.Activo ? "Activo" : "Inactivo")" class="form-control text-success" readonly />
                </div>
                } else {
                                    <div class="mb-4">
                    <label class="form-label">Estado</label>
                    <input value="No disponible" class="form-control text-success" readonly />
                </div>
                }

                <button type="submit" class="btn btn-primary w-100" id="btnPerfil">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Guardar cambios
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("formPerfil").addEventListener("submit", function () {
            const btn = document.getElementById("btnPerfil");
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Guardando...';
        });
    </script>
}
