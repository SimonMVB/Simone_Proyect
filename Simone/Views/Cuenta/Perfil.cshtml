@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/profile-ecuador-data.js"></script>
    <script>
        (function() {
            'use strict';

            // ===== PROFILE COMPLETION =====
            function calculateCompletion() {
                const fields = {
                    nombre: document.getElementById('@Html.IdFor(m => m.NombreCompleto)')?.value,
                    cedula: document.getElementById('@Html.IdFor(m => m.Cedula)')?.value,
                    telefono: document.getElementById('@Html.IdFor(m => m.Telefono)')?.value,
                    direccion: document.getElementById('@Html.IdFor(m => m.Direccion)')?.value,
                    provincia: document.getElementById('@Html.IdFor(m => m.Provincia)')?.value,
                    ciudad: document.getElementById('@Html.IdFor(m => m.Ciudad)')?.value,
                    referencia: document.getElementById('@Html.IdFor(m => m.Referencia)')?.value,
                    foto: '@Model.FotoPerfil'
                };

                let filled = 0;
                const total = Object.keys(fields).length;

                Object.values(fields).forEach(val => {
                    if (val && val.trim()) filled++;
                });

                const percent = Math.round((filled / total) * 100);

                document.getElementById('completionPercent').textContent = percent + '%';
                document.getElementById('completionBar').style.width = percent + '%';

                if (percent === 100) {
                    document.getElementById('completionHint').textContent = '¡Perfil completo! 🎉';
                } else {
                    const missing = total - filled;
                    document.getElementById('completionHint').textContent = `Completa ${missing} campo${missing > 1 ? 's' : ''} más para alcanzar el 100%`;
                }
            }

            // ===== TABS =====
            const tabs = document.querySelectorAll('.profile-tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                    document.getElementById(tab.dataset.tab + '-tab').classList.add('active');
                });
            });

            // ===== AVATAR =====
            const imgInput = document.getElementById('ImagenPerfil');
            const delBtn = document.getElementById('btnEliminarFoto');

            imgInput?.addEventListener('change', () => {
                if (!imgInput.files?.length) return;
                const file = imgInput.files[0];

                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen no debe superar 5MB');
                    imgInput.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = (e) => {
                    const wrapper = document.querySelector('.avatar-wrapper');
                    let img = wrapper.querySelector('.profile-avatar');
                    if (!img) {
                        img = document.createElement('img');
                        img.className = 'profile-avatar';
                        wrapper.prepend(img);
                    }
                    img.src = e.target.result;
                    wrapper.querySelector('.avatar-placeholder')?.classList.add('d-none');
                    delBtn?.classList.remove('d-none');
                };
                reader.readAsDataURL(file);
            });

            delBtn?.addEventListener('click', () => {
                const wrapper = document.querySelector('.avatar-wrapper');
                wrapper.querySelector('.profile-avatar')?.remove();
                wrapper.querySelector('.avatar-placeholder')?.classList.remove('d-none');
                imgInput.value = '';
                delBtn.classList.add('d-none');

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'EliminarFoto';
                input.value = 'true';
                document.getElementById('formPerfil').appendChild(input);
            });

            // ===== PASSWORD =====
            const btnChangePassword = document.getElementById('btnChangePassword');
            const passwordFormWrapper = document.getElementById('passwordFormWrapper');
            const btnCancelPassword = document.getElementById('btnCancelPassword');

            btnChangePassword?.addEventListener('click', () => {
                passwordFormWrapper.classList.remove('d-none');
                btnChangePassword.classList.add('d-none');
            });

            btnCancelPassword?.addEventListener('click', () => {
                passwordFormWrapper.classList.add('d-none');
                btnChangePassword.classList.remove('d-none');
                document.getElementById('changePasswordForm').reset();
                document.getElementById('strengthBar').className = 'strength-bar';
                document.getElementById('strengthText').textContent = 'Fuerza: —';
            });

            // Password toggle
            document.querySelectorAll('.password-toggle-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    const targetId = btn.dataset.target;
                    const input = document.getElementById(targetId);
                    const icon = btn.querySelector('i');

                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                });
            });

            // Caps Lock
            function setupCapsLock(inputId, warnId) {
                const input = document.getElementById(inputId);
                const warn = document.getElementById(warnId);
                if (!input || !warn) return;

                ['keyup', 'keydown'].forEach(ev => {
                    input.addEventListener(ev, (e) => {
                        const caps = e.getModifierState?.('CapsLock');
                        warn.classList.toggle('d-none', !caps);
                    });
                });
            }
            setupCapsLock('CurrentPassword', 'capsWarnCurrent');
            setupCapsLock('NewPassword', 'capsWarnNew');

            // Password strength
            const newPassword = document.getElementById('NewPassword');
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');

            function calculateStrength(pwd) {
                if (!pwd) return 0;
                let score = 0;
                if (pwd.length >= 8) score += 25;
                if (pwd.length >= 12) score += 15;
                if (/[A-Z]/.test(pwd)) score += 20;
                if (/[a-z]/.test(pwd)) score += 15;
                if (/\d/.test(pwd)) score += 15;
                if (/[^A-Za-z0-9]/.test(pwd)) score += 10;
                return Math.min(score, 100);
            }

            newPassword?.addEventListener('input', () => {
                const score = calculateStrength(newPassword.value);
                strengthBar.className = 'strength-bar';

                if (score < 40) {
                    strengthBar.classList.add('weak');
                    strengthText.textContent = 'Fuerza: Débil';
                    strengthText.className = 'strength-text weak';
                } else if (score < 75) {
                    strengthBar.classList.add('medium');
                    strengthText.textContent = 'Fuerza: Media';
                    strengthText.className = 'strength-text medium';
                } else {
                    strengthBar.classList.add('strong');
                    strengthText.textContent = 'Fuerza: Fuerte';
                    strengthText.className = 'strength-text strong';
                }
            });

            // ===== PROVINCIA/CIUDAD =====
            const EC_PROVINCIAS = window.EC_PROVINCIAS || {
                "Guayas": ["Guayaquil", "Daule", "Samborondón", "Durán", "Milagro"],
                "Pichincha": ["Quito", "Sangolquí", "Cayambe"],
                // ... añadir más provincias
            };

            let selectedProv = null;
            const provInput = document.getElementById('@Html.IdFor(m => m.Provincia)');
            const cityInput = document.getElementById('@Html.IdFor(m => m.Ciudad)');
            const provList = document.getElementById('provList');
            const cityList = document.getElementById('cityList');
            const searchProv = document.getElementById('searchProv');
            const searchCity = document.getElementById('searchCity');

            function renderProvinces(filter = '') {
                const q = filter.toLowerCase();
                provList.innerHTML = '';

                Object.keys(EC_PROVINCIAS).sort().forEach(prov => {
                    if (q && !prov.toLowerCase().includes(q)) return;

                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'list-group-item list-group-item-action';
                    btn.textContent = prov;
                    if (selectedProv === prov) btn.classList.add('active');

                    btn.addEventListener('click', () => {
                        selectedProv = prov;
                        renderProvinces(searchProv.value);
                        renderCities('');
                        searchCity.disabled = false;
                    });

                    provList.appendChild(btn);
                });
            }

            function renderCities(filter = '') {
                cityList.innerHTML = '';
                if (!selectedProv) {
                    cityList.innerHTML = '<div class="text-muted p-2">Selecciona una provincia</div>';
                    return;
                }

                const q = filter.toLowerCase();
                const cities = EC_PROVINCIAS[selectedProv] || [];

                cities.filter(c => !q || c.toLowerCase().includes(q)).forEach(city => {
                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'list-group-item list-group-item-action';
                    btn.textContent = city;

                    btn.addEventListener('click', () => {
                        provInput.value = selectedProv;
                        cityInput.value = city;
                        bootstrap.Offcanvas.getInstance(document.getElementById('offProvinciaCiudad')).hide();
                        calculateCompletion();
                    });

                    cityList.appendChild(btn);
                });
            }

            searchProv?.addEventListener('input', () => renderProvinces(searchProv.value));
            searchCity?.addEventListener('input', () => renderCities(searchCity.value));

            document.querySelectorAll('[data-bs-target="#offProvinciaCiudad"]').forEach(btn => {
                btn.addEventListener('click', () => {
                    selectedProv = provInput?.value || null;
                    renderProvinces();
                    renderCities();
                });
            });

            // ===== FORM SUBMIT =====
            const formPerfil = document.getElementById('formPerfil');
            const btnSave = document.getElementById('btnSave');

            formPerfil?.addEventListener('submit', () => {
                btnSave.classList.add('loading');
                btnSave.disabled = true;
            });

            // ===== CAMBIAR CONTRASEÑA (AJAX) =====
            const changePasswordForm = document.getElementById('changePasswordForm');
            const btnSavePassword = document.getElementById('btnSavePassword');

            if (changePasswordForm && btnSavePassword) {
                changePasswordForm.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    btnSavePassword.disabled = true;
                    btnSavePassword.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Actualizando...';

                    const formData = new FormData(changePasswordForm);

                    try {
                        const response = await fetch('/Cuenta/CambiarPassword', {
                            method: 'POST',
                            body: formData,
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        });

                        const data = await response.json();

                        if (response.ok && data.ok) {
                            showToast(data.message || 'Contraseña actualizada correctamente', 'success');
                            changePasswordForm.reset();
                            document.getElementById('passwordFormWrapper').classList.add('d-none');
                            document.getElementById('btnChangePassword').classList.remove('d-none');

                            const strengthBar = document.getElementById('strengthBar');
                            const strengthText = document.getElementById('strengthText');
                            if (strengthBar) strengthBar.style.width = '0%';
                            if (strengthText) strengthText.textContent = 'Fuerza: —';
                        } else {
                            let errorMsg = 'Error al cambiar la contraseña';
                            if (data.error) errorMsg = data.error;
                            else if (data.errors && Array.isArray(data.errors)) errorMsg = data.errors.join('. ');
                            showToast(errorMsg, 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showToast('Error de conexión. Intenta nuevamente.', 'error');
                    } finally {
                        btnSavePassword.disabled = false;
                        btnSavePassword.innerHTML = '<i class="fa-solid fa-save"></i> Actualizar contraseña';
                    }
                });
            }

            function showToast(message, type = 'info') {
                const toast = document.createElement('div');
                Object.assign(toast.style, {
                    position: 'fixed', top: '20px', right: '20px',
                    minWidth: '300px', maxWidth: '500px', padding: '16px 20px',
                    backgroundColor: type === 'success' ? '#4caf50' : '#f44336',
                    color: 'white', borderRadius: '12px',
                    boxShadow: '0 8px 24px rgba(0,0,0,0.2)', zIndex: '10000',
                    opacity: '0', transform: 'translateX(400px)',
                    transition: 'all 0.3s ease', fontSize: '15px', fontWeight: '500'
                });
                toast.innerHTML = `<i class="fa-solid ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}"></i> ${message}`;
                document.body.appendChild(toast);
                setTimeout(() => { toast.style.opacity = '1'; toast.style.transform = 'translateX(0)'; }, 100);
                setTimeout(() => {
                    toast.style.opacity = '0'; toast.style.transform = 'translateX(400px)';
                    setTimeout(() => toast.remove(), 300);
                }, 4000);
            }

            // ===== INIT =====
            calculateCompletion();
            console.log('✓ Profile initialized');
        })();
    </script>
